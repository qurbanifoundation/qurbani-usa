---
import { getSettings, formatPhoneLink } from '../lib/settings';

const settings = await getSettings();
const currentYear = new Date().getFullYear();
---

<footer class="bg-[#1a1a1a] text-gray-300">
  <!-- Newsletter Section -->
  <div class="bg-[#255764] py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-8 items-center">
        <div>
          <h3 class="text-2xl font-bold text-white mb-2" style="font-family: 'Signika', sans-serif;">Subscribe to Our Newsletter</h3>
          <p class="text-gray-300" style="font-family: 'Lato', sans-serif;">Stay updated with our latest appeals and impact stories</p>
        </div>
        <div>
          <form id="footer-newsletter-form" class="flex gap-3">
            <input
              type="email"
              name="email"
              required
              placeholder="Enter your email"
              class="flex-1 bg-white/10 border border-white/20 rounded px-4 py-3 text-white placeholder:text-gray-400 focus:outline-none focus:border-[#fdc448]"
              style="font-family: 'Lato', sans-serif;"
            />
            <button type="submit" class="bg-[#fdc448] hover:bg-[#efb000] text-[#61470e] font-bold px-6 py-3 rounded transition whitespace-nowrap" style="box-shadow: 3px 4px 0 rgba(0,0,0,0.15); font-family: 'Signika', sans-serif;">
              Subscribe
            </button>
          </form>
          <p id="newsletter-message" class="hidden mt-3 text-sm"></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Footer -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- About -->
      <div class="lg:col-span-1">
        <a href="/" class="block mb-4">
          <img
            src={settings.footer_logo || settings.site_logo}
            alt={settings.site_name}
            class={`h-14 w-auto ${!settings.footer_logo ? 'brightness-0 invert' : ''}`}
          />
        </a>
        <p class="text-sm leading-relaxed mb-4" style="font-family: 'Lato', sans-serif;">
          {settings.footer_about}
        </p>
        <p class="text-[#fdc448] font-semibold text-sm" style="font-family: 'Signika', sans-serif;">
          {settings.footer_zakat_policy}
        </p>
        <p class="text-xs text-gray-500 mt-2">EIN: {settings.footer_ein}</p>

        <!-- Social Media -->
        <div class="flex gap-3 mt-4">
          <a href={settings.social_facebook} target="_blank" rel="noopener" class="w-10 h-10 bg-white/10 rounded-full flex items-center justify-center hover:bg-[#ef7c01] transition">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href={settings.social_youtube} target="_blank" rel="noopener" class="w-10 h-10 bg-white/10 rounded-full flex items-center justify-center hover:bg-[#ef7c01] transition">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </a>
          <a href={settings.social_instagram} target="_blank" rel="noopener" class="w-10 h-10 bg-white/10 rounded-full flex items-center justify-center hover:bg-[#ef7c01] transition">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-white font-bold mb-4 text-lg" style="font-family: 'Signika', sans-serif;">Quick Links</h4>
        <ul class="space-y-3 text-sm" style="font-family: 'Lato', sans-serif;">
          <li><a href="#" class="hover:text-[#fdc448] transition">Cataract Surgery</a></li>
          <li><a href="#" class="hover:text-[#fdc448] transition">Water</a></li>
          <li><a href="#" class="hover:text-[#fdc448] transition">Orphan Sponsorship</a></li>
          <li><a href="#" class="hover:text-[#fdc448] transition">Education</a></li>
          <li><a href="#" class="hover:text-[#fdc448] transition">Zakat</a></li>
          <li><a href="#" class="hover:text-[#fdc448] transition">Sadaqah</a></li>
          <li><a href="#" class="hover:text-[#fdc448] transition">Corporate Giving</a></li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="text-white font-bold mb-4 text-lg" style="font-family: 'Signika', sans-serif;">Contact Us</h4>
        <ul class="space-y-3 text-sm" style="font-family: 'Lato', sans-serif;">
          <li class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[#fdc448]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <div>
              <a href={`tel:${formatPhoneLink(settings.contact_toll_free)}`} class="hover:text-[#fdc448]">{settings.contact_toll_free}</a>
              <br/>
              <a href={`tel:${formatPhoneLink(settings.contact_phone)}`} class="hover:text-[#fdc448]">{settings.contact_phone}</a>
            </div>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[#fdc448]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <a href={`mailto:${settings.contact_email}`} class="hover:text-[#fdc448]">{settings.contact_email}</a>
          </li>
          <li class="flex items-start gap-2">
            <svg class="w-5 h-5 text-[#fdc448] mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>
              {settings.contact_address_street}<br/>
              {settings.contact_address_city}, {settings.contact_address_state} {settings.contact_address_zip}
            </span>
          </li>
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h4 class="text-white font-bold mb-4 text-lg" style="font-family: 'Signika', sans-serif;">Legal</h4>
        <ul class="space-y-3 text-sm" style="font-family: 'Lato', sans-serif;">
          <li><a href="#" class="hover:text-[#fdc448] transition">Privacy Policy</a></li>
          <li><a href="#" class="hover:text-[#fdc448] transition">Terms of Service</a></li>
          <li><a href="#" class="hover:text-[#fdc448] transition">Cookie Policy</a></li>
          <li><a href="#" class="hover:text-[#fdc448] transition">Refund Policy</a></li>
          <li><a href="#" class="hover:text-[#fdc448] transition">Sitemap</a></li>
        </ul>
        <div class="mt-4 inline-block bg-[#ef7c01]/20 text-[#fdc448] text-xs font-bold px-3 py-2 rounded" style="font-family: 'Signika', sans-serif;">
          501(c)(3) Nonprofit
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-white/10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm" style="font-family: 'Lato', sans-serif;">
        <p>Â© {currentYear} {settings.footer_copyright}</p>
        <div class="flex items-center gap-4 opacity-70">
          <span class="text-xs">Secure payments by</span>
          <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/ba/Stripe_Logo%2C_revised_2016.svg/120px-Stripe_Logo%2C_revised_2016.svg.png" alt="Stripe" class="h-5 invert" />
        </div>
      </div>
    </div>
  </div>
</footer>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('footer-newsletter-form');
    if (!form) return;

    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      const emailInput = form.querySelector('input[name="email"]');
      const submitBtn = form.querySelector('button[type="submit"]');
      const messageEl = document.getElementById('newsletter-message');

      const email = emailInput.value.trim();
      if (!email) return;

      // Disable and show loading
      submitBtn.disabled = true;
      const originalText = submitBtn.textContent;
      submitBtn.textContent = 'Subscribing...';

      try {
        const response = await fetch('/api/newsletter', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email: email, pageUrl: window.location.href }),
        });

        const result = await response.json();

        if (messageEl) {
          if (result.success) {
            messageEl.textContent = result.message || 'Successfully subscribed!';
            messageEl.className = 'mt-3 text-sm text-green-300';
            emailInput.value = '';
          } else {
            messageEl.textContent = result.error || 'Something went wrong. Please try again.';
            messageEl.className = 'mt-3 text-sm text-red-300';
          }
          messageEl.classList.remove('hidden');
        }
      } catch (error) {
        console.error('Newsletter error:', error);
        if (messageEl) {
          messageEl.textContent = 'Network error. Please try again.';
          messageEl.className = 'mt-3 text-sm text-red-300';
          messageEl.classList.remove('hidden');
        }
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = originalText;
      }
    });
  });
</script>
