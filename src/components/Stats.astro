---
const stats = [
  { value: '18M+', label: 'People Reached', icon: 'users' },
  { value: '2.1M', label: 'Disaster Beneficiaries', icon: 'heart' },
  { value: '252K', label: 'Cataract Surgeries', icon: 'eye' },
  { value: '1.1M', label: 'Eyeglasses Distributed', icon: 'glasses' },
  { value: '16K', label: 'Hafiz Children Sponsored', icon: 'book' },
  { value: '7.1K', label: 'Orphans Sponsored', icon: 'child' },
  { value: '15.6K', label: 'Water Wells Installed', icon: 'water' }
];
---

<!-- Change Lives Section with Video -->
<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Video/Image Section -->
      <div class="relative group cursor-pointer order-2 lg:order-1">
        <img
          src="https://www.staging9.qurbani.com/wp-content/uploads/2025/06/file-14575-e52f7a27f53165c5baa1453a45c84ab0.jpg"
          alt="Our impact - helping communities"
          class="rounded-xl shadow-2xl w-full"
          loading="lazy"
        />
        <!-- Play Button Overlay -->
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="w-20 h-20 bg-[#ef7c01] rounded-full flex items-center justify-center shadow-lg group-hover:scale-110 transition">
            <svg class="w-8 h-8 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z"/>
            </svg>
          </div>
        </div>
      </div>

      <!-- Text Content -->
      <div class="order-1 lg:order-2">
        <span class="inline-block bg-[#ef7c01]/10 text-[#ef7c01] text-sm font-bold px-4 py-2 rounded-full mb-4" style="font-family: 'Signika', sans-serif;">
          OUR IMPACT
        </span>
        <h2 class="text-3xl md:text-4xl font-bold text-[#333] mb-6" style="font-family: 'Signika', sans-serif;">
          Change Lives with Your Generosity
        </h2>
        <p class="text-gray-600 mb-6 leading-relaxed" style="font-family: 'Lato', sans-serif;">
          For over 25 years, we have been dedicated to serving humanity. From distributing fresh Qurbani meat to providing clean water, cataract surgeries, and supporting orphans, your donations make a real difference.
        </p>
        <p class="text-gray-600 mb-8 leading-relaxed" style="font-family: 'Lato', sans-serif;">
          Watch our video to see the impact of your generosity and how together we're transforming communities across 53+ countries worldwide.
        </p>
        <a href="#packages" class="inline-flex items-center gap-2 bg-[#fdc448] hover:bg-[#efb000] text-[#61470e] font-bold px-8 py-4 rounded transition" style="box-shadow: 3px 4px 0 rgba(0,0,0,0.15); font-family: 'Signika', sans-serif;">
          Donate Now
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Achievement Highlights -->
<section class="py-16 relative overflow-hidden" style="background: linear-gradient(135deg, #255764 0%, #1a4a55 50%, #255764 100%);">
  <div class="absolute inset-0 opacity-20" style="background-image: url('https://www.staging9.qurbani.com/wp-content/uploads/2021/08/texture-hardblue-1.jpg'); background-size: cover;"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4" style="font-family: 'Signika', sans-serif;">
        Achievement Highlights
      </h2>
      <p class="text-gray-300 max-w-2xl mx-auto" style="font-family: 'Lato', sans-serif;">
        Together, we've made an incredible impact across the globe
      </p>
    </div>

    <!-- Stats Carousel -->
    <div class="relative">
      <div class="overflow-hidden" id="stats-carousel">
        <div class="flex transition-transform duration-500 ease-out" id="stats-track">
          {stats.map((stat) => (
            <div class="w-1/2 md:w-1/3 lg:w-1/4 flex-shrink-0 px-3">
              <div class="text-center bg-white/10 backdrop-blur-sm rounded-xl p-6">
                <div class="w-16 h-16 mx-auto mb-4 bg-[#ef7c01] rounded-full flex items-center justify-center">
                  {stat.icon === 'users' && (
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                  )}
                  {stat.icon === 'heart' && (
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                    </svg>
                  )}
                  {stat.icon === 'eye' && (
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                  )}
                  {stat.icon === 'glasses' && (
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                    </svg>
                  )}
                  {stat.icon === 'book' && (
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                  )}
                  {stat.icon === 'child' && (
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  )}
                  {stat.icon === 'water' && (
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
                    </svg>
                  )}
                </div>
                <div class="text-3xl md:text-4xl font-bold text-white mb-2" style="font-family: 'Signika', sans-serif;">{stat.value}</div>
                <div class="text-gray-300 text-sm" style="font-family: 'Lato', sans-serif;">{stat.label}</div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Navigation Arrows -->
      <button
        id="stats-prev-btn"
        class="absolute left-0 top-1/2 -translate-y-1/2 -translate-x-2 w-10 h-10 bg-white rounded-full shadow-lg flex items-center justify-center text-[#333] hover:bg-[#ef7c01] hover:text-white transition z-10"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </button>
      <button
        id="stats-next-btn"
        class="absolute right-0 top-1/2 -translate-y-1/2 translate-x-2 w-10 h-10 bg-white rounded-full shadow-lg flex items-center justify-center text-[#333] hover:bg-[#ef7c01] hover:text-white transition z-10"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </button>
    </div>
  </div>
</section>

<script>
  const statsTrack = document.getElementById('stats-track');
  const statsPrevBtn = document.getElementById('stats-prev-btn');
  const statsNextBtn = document.getElementById('stats-next-btn');

  let statsIndex = 0;
  const totalStats = 7;

  function getStatsPerView() {
    if (window.innerWidth >= 1024) return 4;
    if (window.innerWidth >= 768) return 3;
    return 2;
  }

  function updateStatsCarousel() {
    const itemsPerView = getStatsPerView();
    const maxIndex = Math.max(0, totalStats - itemsPerView);
    statsIndex = Math.min(statsIndex, maxIndex);
    statsIndex = Math.max(statsIndex, 0);

    const translateX = -(statsIndex * (100 / itemsPerView));
    if (statsTrack) {
      statsTrack.style.transform = `translateX(${translateX}%)`;
    }
  }

  statsPrevBtn?.addEventListener('click', () => {
    statsIndex = Math.max(statsIndex - 1, 0);
    updateStatsCarousel();
  });

  statsNextBtn?.addEventListener('click', () => {
    const itemsPerView = getStatsPerView();
    const maxIndex = Math.max(0, totalStats - itemsPerView);
    statsIndex = Math.min(statsIndex + 1, maxIndex);
    updateStatsCarousel();
  });

  window.addEventListener('resize', updateStatsCarousel);
  updateStatsCarousel();
</script>
