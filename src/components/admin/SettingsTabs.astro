---
interface Props {
  active: 'general' | 'templates' | 'header-footer' | 'gallery' | 'media' | 'integrations' | 'payments' | 'fulfillment';
}

const { active } = Astro.props;

const tabs = [
  { id: 'general', label: 'General', href: '/admin/settings' },
  { id: 'templates', label: 'Templates', href: '/admin/settings/templates' },
  { id: 'header-footer', label: 'Header & Footer', href: '/admin/settings/header-footer' },
  { id: 'gallery', label: 'Hero Gallery', href: '/admin/settings/gallery' },
  { id: 'media', label: 'Media Library', href: '/admin/settings/media' },
  { id: 'integrations', label: 'Integrations', href: '/admin/settings/integrations' },
  { id: 'payments', label: 'Payments', href: '/admin/settings/payments' },
  { id: 'fulfillment', label: 'Fulfillment', href: '/admin/settings/fulfillment' },
];
---

<div class="mb-8">
  <div class="grid grid-cols-4 md:grid-cols-8 gap-2 bg-gray-100 p-2 rounded-xl">
    {tabs.map((tab) => (
      <a
        href={tab.href}
        class={`px-3 py-2.5 text-sm font-medium rounded-lg text-center transition-all ${
          active === tab.id
            ? 'bg-[#01534d] text-white shadow-sm'
            : 'text-gray-600 hover:text-[#01534d] hover:bg-white'
        }`}
      >
        {tab.label}
      </a>
    ))}
  </div>
</div>
