<section class="relative bg-gradient-to-br from-[#0b3741] via-[#1a5c6a] to-[#0b3741] text-white overflow-hidden min-h-[600px] md:min-h-[700px]">
  <!-- Decorative Islamic Pattern Background -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\'80\' height=\'80\' viewBox=\'0 0 80 80\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'%23ffffff\' fill-opacity=\'1\'%3E%3Cpath d=\'M40 0L80 40L40 80L0 40L40 0zM40 10L10 40L40 70L70 40L40 10z\'/%3E%3C/g%3E%3C/svg%3E'); background-size: 80px 80px;"></div>
  </div>

  <!-- Lantern decorations -->
  <div class="absolute top-0 left-10 opacity-40">
    <svg class="w-20 h-32 text-[#fdc448]" viewBox="0 0 50 100" fill="currentColor">
      <path d="M25 0C20 0 15 5 15 10v5c-5 5-10 15-10 25v30c0 10 5 15 10 20h20c5-5 10-10 10-20V40c0-10-5-20-10-25v-5c0-5-5-10-10-10z" opacity="0.8"/>
      <ellipse cx="25" cy="50" rx="15" ry="25" fill="rgba(253, 196, 72, 0.3)"/>
    </svg>
  </div>
  <div class="absolute top-5 right-16 opacity-30">
    <svg class="w-16 h-28 text-[#fdc448]" viewBox="0 0 50 100" fill="currentColor">
      <path d="M25 0C20 0 15 5 15 10v5c-5 5-10 15-10 25v30c0 10 5 15 10 20h20c5-5 10-10 10-20V40c0-10-5-20-10-25v-5c0-5-5-10-10-10z" opacity="0.8"/>
    </svg>
  </div>
  <div class="absolute top-20 left-1/4 opacity-20">
    <svg class="w-12 h-20 text-[#fdc448]" viewBox="0 0 50 100" fill="currentColor">
      <path d="M25 0C20 0 15 5 15 10v5c-5 5-10 15-10 25v30c0 10 5 15 10 20h20c5-5 10-10 10-20V40c0-10-5-20-10-25v-5c0-5-5-10-10-10z" opacity="0.8"/>
    </svg>
  </div>

  <!-- Stars decoration -->
  <div class="absolute top-10 left-1/3">
    <svg class="w-4 h-4 text-[#fdc448] opacity-60" fill="currentColor" viewBox="0 0 24 24">
      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
    </svg>
  </div>
  <div class="absolute top-24 right-1/3">
    <svg class="w-3 h-3 text-white opacity-40" fill="currentColor" viewBox="0 0 24 24">
      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
    </svg>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16 relative z-10">
    <div class="grid lg:grid-cols-2 gap-8 items-center">
      <!-- Left Content -->
      <div class="text-center lg:text-left">
        <!-- Arabic Calligraphy -->
        <div class="mb-4">
          <span class="text-[#fdc448] text-4xl md:text-5xl font-arabic" style="font-family: 'Amiri', serif;">عيد مبارك</span>
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-4">
          <span class="text-[#fdc448]">EID UL-ADHA</span><br/>
          <span class="text-white">MUBARAK</span>
        </h1>

        <p class="text-lg md:text-xl text-gray-200 mb-6 leading-relaxed max-w-xl mx-auto lg:mx-0">
          Fulfill your Qurbani obligation and share the blessings of Eid with families in need across 15+ countries worldwide.
        </p>

        <!-- Trust Badges -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-4 text-sm text-gray-300 mb-8">
          <div class="flex items-center gap-2 bg-white/10 px-4 py-2 rounded-full">
            <svg class="w-5 h-5 text-[#fdc448]" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            501(c)(3) Nonprofit
          </div>
          <div class="flex items-center gap-2 bg-white/10 px-4 py-2 rounded-full">
            <svg class="w-5 h-5 text-[#fdc448]" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            Tax Deductible
          </div>
          <div class="flex items-center gap-2 bg-white/10 px-4 py-2 rounded-full">
            <svg class="w-5 h-5 text-[#fdc448]" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
            </svg>
            Secure
          </div>
        </div>

        <!-- Children Image for Mobile -->
        <div class="lg:hidden mb-8">
          <img
            src="https://images.unsplash.com/photo-1488521787991-ed7bbaae773c?w=600&h=400&fit=crop"
            alt="Children beneficiaries"
            class="rounded-2xl shadow-2xl w-full max-w-md mx-auto"
          />
        </div>
      </div>

      <!-- Right: Quick Donate Box -->
      <div class="bg-white rounded-2xl p-6 md:p-8 shadow-2xl text-[#0b3741] max-w-md mx-auto lg:mx-0 lg:ml-auto">
        <h3 class="text-2xl font-bold mb-2 text-center">Quick Donate</h3>
        <p class="text-gray-600 text-center mb-6">Support our mission today</p>

        <!-- Toggle: One-off / Monthly -->
        <div class="flex bg-gray-100 rounded-lg p-1 mb-6">
          <button class="flex-1 py-2 px-4 rounded-md bg-[#ef7c01] text-white font-semibold text-sm transition" id="one-off-btn">
            One-off
          </button>
          <button class="flex-1 py-2 px-4 rounded-md text-gray-600 font-semibold text-sm transition hover:bg-gray-200" id="monthly-btn">
            Monthly
          </button>
        </div>

        <!-- Amount Buttons -->
        <div class="grid grid-cols-3 gap-3 mb-6" id="amount-grid">
          <button class="amount-btn py-4 px-4 border-2 border-gray-200 rounded-lg font-bold text-xl hover:border-[#ef7c01] hover:bg-[#ef7c01]/5 transition" data-amount="360">$360</button>
          <button class="amount-btn py-4 px-4 border-2 border-[#ef7c01] bg-[#ef7c01]/10 rounded-lg font-bold text-xl text-[#ef7c01]" data-amount="720">$720</button>
          <button class="amount-btn py-4 px-4 border-2 border-gray-200 rounded-lg font-bold text-xl hover:border-[#ef7c01] hover:bg-[#ef7c01]/5 transition" data-amount="1800">$1800</button>
        </div>

        <!-- Custom Amount -->
        <div class="mb-6">
          <div class="relative">
            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-500 font-bold text-lg">$</span>
            <input
              type="number"
              id="custom-amount"
              placeholder="Other amount"
              class="w-full pl-10 pr-4 py-4 border-2 border-gray-200 rounded-lg focus:border-[#ef7c01] focus:outline-none text-lg"
              min="1"
            />
          </div>
        </div>

        <!-- Donate Button -->
        <button id="donate-btn" class="w-full bg-[#fdc448] hover:bg-[#efb000] text-[#0b3741] font-bold py-4 rounded-lg transition shadow-lg text-lg flex items-center justify-center gap-2 uppercase tracking-wide">
          <span>Add Donation</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </button>

        <p class="text-center text-xs text-gray-500 mt-4 flex items-center justify-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
          </svg>
          Secure payment powered by Stripe
        </p>
      </div>
    </div>

    <!-- Desktop Children Image -->
    <div class="hidden lg:block absolute bottom-0 left-0 w-1/3 max-w-sm">
      <img
        src="https://images.unsplash.com/photo-1488521787991-ed7bbaae773c?w=500&h=600&fit=crop"
        alt="Children beneficiaries"
        class="rounded-t-2xl shadow-2xl"
      />
    </div>
  </div>
</section>

<!-- 100% Zakat Policy Banner -->
<section class="bg-[#ef7c01] text-white py-4">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col md:flex-row items-center justify-center gap-4 text-center">
      <div class="flex items-center gap-3">
        <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center">
          <span class="text-[#ef7c01] text-2xl font-bold">%</span>
        </div>
        <div class="text-left">
          <h3 class="text-xl font-bold">100% ZAKAT POLICY</h3>
          <p class="text-sm opacity-90">Every penny of your Zakat reaches those in need</p>
        </div>
      </div>
      <a href="#about" class="bg-white text-[#ef7c01] font-bold px-6 py-2 rounded-full text-sm hover:bg-gray-100 transition">
        Learn More
      </a>
    </div>
  </div>
</section>

<!-- Google Font for Arabic -->
<link href="https://fonts.googleapis.com/css2?family=Amiri:wght@400;700&display=swap" rel="stylesheet">

<script>
  // Amount selection logic
  const amountBtns = document.querySelectorAll('.amount-btn');
  const customInput = document.getElementById('custom-amount') as HTMLInputElement;
  const oneOffBtn = document.getElementById('one-off-btn');
  const monthlyBtn = document.getElementById('monthly-btn');
  let selectedAmount = 720;
  let isMonthly = false;

  amountBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      amountBtns.forEach(b => {
        b.classList.remove('border-[#ef7c01]', 'bg-[#ef7c01]/10', 'text-[#ef7c01]');
        b.classList.add('border-gray-200');
      });
      btn.classList.remove('border-gray-200');
      btn.classList.add('border-[#ef7c01]', 'bg-[#ef7c01]/10', 'text-[#ef7c01]');
      selectedAmount = parseInt(btn.getAttribute('data-amount') || '720');
      customInput.value = '';
    });
  });

  customInput?.addEventListener('input', () => {
    if (customInput.value) {
      amountBtns.forEach(b => {
        b.classList.remove('border-[#ef7c01]', 'bg-[#ef7c01]/10', 'text-[#ef7c01]');
        b.classList.add('border-gray-200');
      });
      selectedAmount = parseInt(customInput.value) || 0;
    }
  });

  // Toggle buttons
  oneOffBtn?.addEventListener('click', () => {
    isMonthly = false;
    oneOffBtn.classList.add('bg-[#ef7c01]', 'text-white');
    oneOffBtn.classList.remove('text-gray-600');
    monthlyBtn?.classList.remove('bg-[#ef7c01]', 'text-white');
    monthlyBtn?.classList.add('text-gray-600');
  });

  monthlyBtn?.addEventListener('click', () => {
    isMonthly = true;
    monthlyBtn.classList.add('bg-[#ef7c01]', 'text-white');
    monthlyBtn.classList.remove('text-gray-600');
    oneOffBtn?.classList.remove('bg-[#ef7c01]', 'text-white');
    oneOffBtn?.classList.add('text-gray-600');
  });

  // Donate button
  document.getElementById('donate-btn')?.addEventListener('click', () => {
    if (selectedAmount > 0) {
      window.location.href = `#packages?amount=${selectedAmount}&recurring=${isMonthly}`;
    }
  });
</script>
