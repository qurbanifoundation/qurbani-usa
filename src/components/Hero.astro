---
import { supabaseAdmin } from '../lib/supabase';

// Fetch hero slides from database
let slides: any[] = [];
try {
  const { data, error } = await supabaseAdmin
    .from('hero_slides')
    .select('*')
    .eq('is_active', true)
    .order('display_order', { ascending: true });

  if (!error && data) {
    slides = data;
  }
} catch (e) {
  console.error('Failed to fetch hero slides:', e);
}

// Fallback if no slides
if (slides.length === 0) {
  slides = [{
    id: 'default',
    title: 'A Muslim Charity Serving Humanity',
    subtitle: '100% of your Zakat reaches those in need',
    image_url: '/images/Qurbani-hero-section-img-1.jpg',
    overlay_color: 'rgba(37, 87, 100, 0.7)'
  }];
}
---

<section class="relative min-h-[700px] md:min-h-[800px] overflow-hidden">
  <!-- Hero Slider Container - Starts from very top, behind header -->
  <div id="heroSlider" class="absolute inset-0 -z-0">
    {slides.map((slide, index) => (
      <div
        class={`hero-slide absolute inset-0 transition-opacity duration-1000 ${index === 0 ? 'opacity-100' : 'opacity-0'}`}
        data-index={index}
      >
        <img
          src={slide.image_url}
          alt={slide.title || 'Hero image'}
          class="w-full h-full object-cover"
          loading={index === 0 ? 'eager' : 'lazy'}
        />
        <!-- Subtle Gradient Overlay - Only on left side for text readability -->
        <div
          class="absolute inset-0"
          style="background: linear-gradient(to right, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.3) 40%, transparent 70%);"
        ></div>
      </div>
    ))}
  </div>

  <!-- Slider Navigation Dots -->
  {slides.length > 1 && (
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-20 flex gap-2">
      {slides.map((_, index) => (
        <button
          class={`slider-dot w-3 h-3 rounded-full transition-all duration-300 ${index === 0 ? 'bg-white scale-110' : 'bg-white/50 hover:bg-white/75'}`}
          data-index={index}
          aria-label={`Go to slide ${index + 1}`}
        ></button>
      ))}
    </div>
  )}

  <!-- Slider Arrows -->
  {slides.length > 1 && (
    <>
      <button
        id="prevSlide"
        class="absolute left-4 top-1/2 -translate-y-1/2 z-20 w-12 h-12 rounded-full bg-black/30 hover:bg-black/50 text-white flex items-center justify-center transition"
        aria-label="Previous slide"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </button>
      <button
        id="nextSlide"
        class="absolute right-4 top-1/2 -translate-y-1/2 z-20 w-12 h-12 rounded-full bg-black/30 hover:bg-black/50 text-white flex items-center justify-center transition"
        aria-label="Next slide"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </button>
    </>
  )}

  <!-- Content starts below header -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-32 md:pt-40 pb-12 md:pb-16 relative z-10">
    <div class="grid lg:grid-cols-2 gap-8 items-center">
      <!-- Left Content -->
      <div class="text-center lg:text-left text-white">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 bg-[#ef7c01] text-white text-sm font-bold px-4 py-2 rounded-full mb-6">
          <span class="w-2 h-2 bg-white rounded-full animate-pulse"></span>
          100% ZAKAT POLICY
        </div>

        <h1 id="heroTitle" class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6 transition-opacity duration-500" style="font-family: 'Signika', sans-serif;">
          {slides[0].title ? (
            <>
              {slides[0].title.split(' ').slice(0, 3).join(' ')}<br/>
              <span class="text-[#fdc448]">{slides[0].title.split(' ').slice(3).join(' ')}</span>
            </>
          ) : (
            <>
              A Muslim Charity<br/>
              <span class="text-[#fdc448]">Serving Humanity</span>
            </>
          )}
        </h1>

        <p id="heroSubtitle" class="text-lg md:text-xl text-gray-200 mb-8 leading-relaxed max-w-xl mx-auto lg:mx-0 transition-opacity duration-500" style="font-family: 'Lato', sans-serif;">
          {slides[0].subtitle || '100% of your Zakat will reach those who need it the most. We ensure every single cent goes directly to vulnerable populations worldwide.'}
        </p>

        <!-- Trust Badges -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-4 text-sm text-gray-200 mb-8">
          <div class="flex items-center gap-2 bg-white/10 px-4 py-2 rounded-full backdrop-blur-sm">
            <svg class="w-5 h-5 text-[#fdc448]" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            501(c)(3) Nonprofit
          </div>
          <div class="flex items-center gap-2 bg-white/10 px-4 py-2 rounded-full backdrop-blur-sm">
            <svg class="w-5 h-5 text-[#fdc448]" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            Tax Deductible
          </div>
          <div class="flex items-center gap-2 bg-white/10 px-4 py-2 rounded-full backdrop-blur-sm">
            <svg class="w-5 h-5 text-[#fdc448]" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
            </svg>
            Secure Payments
          </div>
        </div>
      </div>

      <!-- Right: Donation Box -->
      <div class="bg-white rounded-lg p-6 md:p-8 shadow-2xl max-w-md mx-auto lg:mx-0 lg:ml-auto" style="font-family: 'Signika', sans-serif;">
        <!-- Toggle: One-off / Monthly -->
        <div class="flex bg-gray-100 rounded-lg p-1 mb-6">
          <button class="flex-1 py-3 px-4 rounded-md bg-[#ef7c01] text-white font-bold text-sm transition" id="one-off-btn" type="button">
            One Off
          </button>
          <button class="flex-1 py-3 px-4 rounded-md text-gray-600 font-bold text-sm transition hover:bg-gray-200" id="monthly-btn" type="button">
            Monthly
          </button>
        </div>

        <!-- One-off Amounts -->
        <div id="oneoff-amounts" class="grid grid-cols-3 gap-3 mb-6">
          <button class="amount-btn py-4 px-2 border-2 border-gray-200 rounded-lg font-bold text-lg hover:border-[#ef7c01] hover:bg-[#ef7c01]/5 transition flex flex-col items-center" data-amount="360" type="button">
            <span class="text-xl font-bold text-[#333]">$360</span>
            <span class="text-xs text-gray-500 mt-1">1 Orphan</span>
          </button>
          <button class="amount-btn py-4 px-2 border-2 border-[#ef7c01] bg-[#ef7c01]/10 rounded-lg font-bold text-lg flex flex-col items-center selected" data-amount="720" type="button">
            <span class="text-xl font-bold text-[#ef7c01]">$720</span>
            <span class="text-xs text-gray-500 mt-1">2 Orphans</span>
          </button>
          <button class="amount-btn py-4 px-2 border-2 border-gray-200 rounded-lg font-bold text-lg hover:border-[#ef7c01] hover:bg-[#ef7c01]/5 transition flex flex-col items-center" data-amount="1800" type="button">
            <span class="text-xl font-bold text-[#333]">$1,800</span>
            <span class="text-xs text-gray-500 mt-1">5 Orphans</span>
          </button>
        </div>

        <!-- Monthly Amounts (Hidden by default) -->
        <div id="monthly-amounts" class="hidden grid grid-cols-3 gap-3 mb-6">
          <button class="amount-btn-monthly py-4 px-2 border-2 border-gray-200 rounded-lg font-bold text-lg hover:border-[#ef7c01] hover:bg-[#ef7c01]/5 transition flex flex-col items-center" data-amount="30" type="button">
            <span class="text-xl font-bold text-[#333]">$30</span>
            <span class="text-xs text-gray-500 mt-1">/month</span>
          </button>
          <button class="amount-btn-monthly py-4 px-2 border-2 border-[#ef7c01] bg-[#ef7c01]/10 rounded-lg font-bold text-lg flex flex-col items-center selected" data-amount="60" type="button">
            <span class="text-xl font-bold text-[#ef7c01]">$60</span>
            <span class="text-xs text-gray-500 mt-1">/month</span>
          </button>
          <button class="amount-btn-monthly py-4 px-2 border-2 border-gray-200 rounded-lg font-bold text-lg hover:border-[#ef7c01] hover:bg-[#ef7c01]/5 transition flex flex-col items-center" data-amount="150" type="button">
            <span class="text-xl font-bold text-[#333]">$150</span>
            <span class="text-xs text-gray-500 mt-1">/month</span>
          </button>
        </div>

        <!-- Custom Amount -->
        <div class="mb-6">
          <div class="relative">
            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-500 font-bold text-lg">$</span>
            <input
              type="number"
              id="custom-amount"
              placeholder="Other amount"
              class="w-full pl-10 pr-4 py-4 border-2 border-gray-200 rounded-lg focus:border-[#ef7c01] focus:outline-none text-lg font-semibold"
              min="1"
            />
          </div>
        </div>

        <!-- Donate Button -->
        <button id="donate-btn" type="button" class="w-full bg-[#fdc448] hover:bg-[#efb000] text-[#61470e] font-bold py-4 rounded-lg transition text-lg flex items-center justify-center gap-2 uppercase tracking-wide" style="box-shadow: 3px 4px 0 rgba(0,0,0,0.15);">
          <span>Add Donation</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </button>

        <p class="text-center text-xs text-gray-500 mt-4 flex items-center justify-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
          </svg>
          Secure payment powered by Stripe
        </p>
      </div>
    </div>
  </div>
</section>

<!-- 100% Zakat Policy Banner -->
<section class="relative py-6 overflow-hidden" style="background: linear-gradient(90deg, #ef7c01 0%, #f89c01 50%, #ef7c01 100%);">
  <div class="absolute inset-0 opacity-20" style="background-image: url('https://www.staging9.qurbani.com/wp-content/uploads/2021/08/texture-hardyellow-1.jpg'); background-size: cover;"></div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="flex flex-col md:flex-row items-center justify-center gap-4 text-center text-white">
      <div class="flex items-center gap-4">
        <div class="w-14 h-14 bg-white rounded-full flex items-center justify-center flex-shrink-0">
          <span class="text-[#ef7c01] text-2xl font-bold">%</span>
        </div>
        <div class="text-left">
          <h3 class="text-xl md:text-2xl font-bold" style="font-family: 'Signika', sans-serif;">100% ZAKAT POLICY</h3>
          <p class="text-sm md:text-base opacity-90" style="font-family: 'Lato', sans-serif;">Every single cent of your Zakat reaches those in need</p>
        </div>
      </div>
      <a href="#about" class="bg-white text-[#ef7c01] font-bold px-6 py-2 rounded-full text-sm hover:bg-gray-100 transition ml-0 md:ml-8">
        Learn More
      </a>
    </div>
  </div>
</section>

<script define:vars={{ slidesData: slides }}>
  document.addEventListener('DOMContentLoaded', () => {
    const slides = document.querySelectorAll('.hero-slide');
    const dots = document.querySelectorAll('.slider-dot');
    const prevBtn = document.getElementById('prevSlide');
    const nextBtn = document.getElementById('nextSlide');

    if (slides.length <= 1) return;

    let currentSlide = 0;
    let autoplayInterval;

    function goToSlide(index) {
      // Wrap around
      if (index < 0) index = slides.length - 1;
      if (index >= slides.length) index = 0;

      // Update slides
      slides.forEach((slide, i) => {
        slide.classList.toggle('opacity-100', i === index);
        slide.classList.toggle('opacity-0', i !== index);
      });

      // Update dots
      dots.forEach((dot, i) => {
        dot.classList.toggle('bg-white', i === index);
        dot.classList.toggle('scale-110', i === index);
        dot.classList.toggle('bg-white/50', i !== index);
      });

      currentSlide = index;
    }

    function nextSlide() {
      goToSlide(currentSlide + 1);
    }

    function prevSlide() {
      goToSlide(currentSlide - 1);
    }

    function startAutoplay() {
      autoplayInterval = setInterval(nextSlide, 5000);
    }

    function stopAutoplay() {
      clearInterval(autoplayInterval);
    }

    // Event listeners
    prevBtn?.addEventListener('click', () => {
      stopAutoplay();
      prevSlide();
      startAutoplay();
    });

    nextBtn?.addEventListener('click', () => {
      stopAutoplay();
      nextSlide();
      startAutoplay();
    });

    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        stopAutoplay();
        goToSlide(index);
        startAutoplay();
      });
    });

    // Start autoplay
    startAutoplay();

    // Pause on hover
    const heroSlider = document.getElementById('heroSlider');
    heroSlider?.addEventListener('mouseenter', stopAutoplay);
    heroSlider?.addEventListener('mouseleave', startAutoplay);
  });

  // Donation box logic
  document.addEventListener('DOMContentLoaded', () => {
    const amountBtns = document.querySelectorAll('.amount-btn');
    const amountBtnsMonthly = document.querySelectorAll('.amount-btn-monthly');
    const customInput = document.getElementById('custom-amount');
    const oneOffBtn = document.getElementById('one-off-btn');
    const monthlyBtn = document.getElementById('monthly-btn');
    const oneoffAmounts = document.getElementById('oneoff-amounts');
    const monthlyAmounts = document.getElementById('monthly-amounts');
    const donateBtn = document.getElementById('donate-btn');

    let selectedAmount = 0; // No default selection
    let isMonthly = false;

    function updateButtonStyle(btn, isSelected) {
      const span = btn.querySelector('span:first-child');
      if (isSelected) {
        btn.classList.remove('border-gray-200');
        btn.classList.add('border-[#ef7c01]', 'bg-[#ef7c01]/10');
        if (span) {
          span.classList.remove('text-[#333]');
          span.classList.add('text-[#ef7c01]');
        }
      } else {
        btn.classList.remove('border-[#ef7c01]', 'bg-[#ef7c01]/10');
        btn.classList.add('border-gray-200');
        if (span) {
          span.classList.remove('text-[#ef7c01]');
          span.classList.add('text-[#333]');
        }
      }
    }

    function setupAmountButtons(buttons) {
      buttons.forEach(btn => {
        btn.addEventListener('click', (e) => {
          e.preventDefault();
          buttons.forEach(b => updateButtonStyle(b, false));
          updateButtonStyle(btn, true);
          selectedAmount = parseInt(btn.getAttribute('data-amount') || '720');
          if (customInput) customInput.value = '';
        });
      });
    }

    setupAmountButtons(amountBtns);
    setupAmountButtons(amountBtnsMonthly);

    customInput?.addEventListener('input', () => {
      if (customInput.value) {
        amountBtns.forEach(b => updateButtonStyle(b, false));
        amountBtnsMonthly.forEach(b => updateButtonStyle(b, false));
        selectedAmount = parseInt(customInput.value) || 0;
      }
    });

    oneOffBtn?.addEventListener('click', (e) => {
      e.preventDefault();
      isMonthly = false;
      oneOffBtn.classList.add('bg-[#ef7c01]', 'text-white');
      oneOffBtn.classList.remove('text-gray-600');
      monthlyBtn?.classList.remove('bg-[#ef7c01]', 'text-white');
      monthlyBtn?.classList.add('text-gray-600');
      oneoffAmounts?.classList.remove('hidden');
      monthlyAmounts?.classList.add('hidden');
      selectedAmount = 720;
    });

    monthlyBtn?.addEventListener('click', (e) => {
      e.preventDefault();
      isMonthly = true;
      monthlyBtn.classList.add('bg-[#ef7c01]', 'text-white');
      monthlyBtn.classList.remove('text-gray-600');
      oneOffBtn?.classList.remove('bg-[#ef7c01]', 'text-white');
      oneOffBtn?.classList.add('text-gray-600');
      oneoffAmounts?.classList.add('hidden');
      monthlyAmounts?.classList.remove('hidden');
      selectedAmount = 60;
    });

    donateBtn?.addEventListener('click', (e) => {
      e.preventDefault();
      if (selectedAmount > 0) {
        const packagesSection = document.getElementById('packages');
        if (packagesSection) {
          packagesSection.scrollIntoView({ behavior: 'smooth' });
        }
        alert(`Donation: $${selectedAmount} (${isMonthly ? 'Monthly' : 'One-time'})\n\nThis will redirect to Stripe checkout.`);
      } else {
        alert('Please select an amount');
      }
    });
  });
</script>
