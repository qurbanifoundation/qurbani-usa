---
/**
 * MegaMenuWidget - Renders a single widget in the mega menu
 * Supports multiple widget types with their configurations
 */

import { getIconSvg } from '../lib/categories';

interface Props {
  widget: {
    id: string;
    widget_type: string;
    title: string | null;
    config: Record<string, any>;
  };
  menuColor?: string;
  menuId?: string;
}

const { widget, menuColor = '#01534d', menuId = '' } = Astro.props;
const { widget_type, title, config } = widget;
const isInteractive = config.interactive === true;
---

{/* Link List Widget */}
{widget_type === 'link-list' && (
  <div class="widget-link-list">
    {title && <p class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-3">{title}</p>}
    <nav class="space-y-0">
      {(config.links || []).map((link: any, index: number) => {
        // Determine hover color based on menu context
        const hoverBg = config.hoverColor || (menuId === 'ramadan' ? `${menuColor}10` : '#fbefdd');
        const isLast = index === (config.links || []).length - 1;
        return (
          <a href={link.href} class={`mega-link w-full flex items-center gap-3 px-4 py-2.5 transition-colors ${!isLast ? 'border-b border-gray-200/60' : ''}`} style={`--hover-bg: ${hoverBg}`}>
            {link.icon && (
              <div class="w-8 h-8 rounded flex items-center justify-center flex-shrink-0" style={`background-color: ${link.color || menuColor}`}>
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20" set:html={getIconSvg(link.icon)} />
              </div>
            )}
            <div class="flex-1">
              <span class="font-medium text-[#333] text-[15px]">{link.label}</span>
              {link.subtitle && <span class="block text-xs" style={`color: ${link.color || menuColor}`}>{link.subtitle}</span>}
            </div>
            <svg class="w-3.5 h-3.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        );
      })}
    </nav>
  </div>
)}

{/* Info Box Widget - Stats grid with button */}
{widget_type === 'info-box' && (
  <div class="widget-info-box">
    {title && <p class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-4">{title}</p>}

    {/* Content Box Layout (heading + description + embedded stats) - for Zakat style */}
    {config.heading && config.description && (
      <div class="bg-white rounded-xl p-5 border border-gray-100 mb-4">
        <h4 class="font-bold text-[#333] mb-2" style="font-family: 'Signika', sans-serif;">{config.heading}</h4>
        <p class="text-sm text-gray-600 mb-3">{config.description}</p>
        {/* Embedded Stats */}
        {config.stats && config.stats.length > 0 && (
          <div class="grid grid-cols-2 gap-3 text-center">
            {config.stats.map((stat: any) => {
              const bgColor = stat.bgColor || (stat.color === '#eab308' ? '#fef3c7' : `${stat.color}15`);
              return (
                <a href={stat.href || '#'} class="rounded-lg p-3 transition-colors block hover:opacity-80" style={`background-color: ${bgColor}`}>
                  <p class="text-2xl font-bold" style={`color: ${stat.color || menuColor}`}>{stat.value}</p>
                  <p class="text-xs text-gray-600">{stat.label}</p>
                </a>
              );
            })}
          </div>
        )}
      </div>
    )}

    {/* Stats Grid Layout (no heading) - for About style */}
    {config.stats && config.stats.length > 0 && !config.heading && (
      <div class="grid grid-cols-2 gap-3 mb-4">
        {config.stats.slice(0, 4).map((stat: any) => (
          <a href={stat.href || '#'} class="bg-white rounded-xl p-4 border border-gray-100 hover:border-gray-200 hover:shadow-md transition-all block text-center">
            <p class="text-3xl font-bold mb-1" style={`color: ${stat.color || menuColor}; font-family: 'Signika', sans-serif;`}>{stat.value}</p>
            <p class="text-xs text-gray-600">{stat.label}</p>
          </a>
        ))}
      </div>
    )}

    {/* Button */}
    {config.button && (
      <a href={config.button.href} class="block w-full text-white font-semibold py-2.5 rounded-full text-center transition text-[15px] hover:opacity-90" style={`background-color: ${config.button.color || menuColor}`}>
        {config.button.label}
      </a>
    )}
  </div>
)}

{/* Quick Form Widget */}
{widget_type === 'quick-form' && (
  <div class="widget-quick-form">
    <div class="bg-white rounded-xl p-4 shadow-lg border border-gray-100">
      {config.subtitle && <p class="text-[15px] italic text-center mb-0.5" style={`color: ${config.buttonColor || menuColor}; font-family: 'Playfair Display', serif;`}>{config.subtitle}</p>}
      {(title || config.title) && <h4 class="text-lg font-bold text-[#333] text-center mb-3">{title || config.title}</h4>}
      {config.amounts && config.amounts.length > 0 && (
        <div class="grid grid-cols-3 gap-1.5 mb-3">
          {config.amounts.slice(0, 3).map((amount: number, index: number) => (
            <button
              class:list={[
                'amount-btn py-2 border rounded bg-white text-[#333] font-bold text-[15px] transition',
                index === 1 ? 'border-2' : 'border-gray-300 hover:border-current'
              ]}
              style={index === 1 ? `border-color: ${config.buttonColor || menuColor}` : ''}
              data-amount={amount}
            >
              ${amount}
            </button>
          ))}
        </div>
      )}
      <div class="relative mb-3">
        <span class="absolute left-2.5 top-1/2 -translate-y-1/2 text-gray-400 text-sm">$</span>
        <input type="number" placeholder={config.placeholder || 'Enter amount'} class="w-full pl-6 pr-2 py-2 border border-gray-300 rounded bg-[#f5f3ef] text-sm focus:outline-none" style={`--focus-color: ${config.buttonColor || menuColor}`} />
      </div>
      <a href={config.button?.href || config.buttonLink || '#'} class="block w-full text-white font-bold py-2.5 rounded transition text-[15px] text-center" style={`background-color: ${config.button?.color || config.buttonColor || menuColor}`}>
        {config.button?.label || config.buttonText || 'Donate Now'}
      </a>
      {config.footnote && <p class="text-xs text-gray-500 text-center mt-2">{config.footnote}</p>}
    </div>
  </div>
)}

{/* Promo Card Widget - Rich card with gradient, pricing, and CTA */}
{widget_type === 'promo-card' && (
  <div class="widget-promo-card">
    <a href={config.href || '#'} class="block rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all hover:-translate-y-1 group" style={`background: linear-gradient(to bottom right, ${config.bgColor || '#01534d'}, ${config.bgColorEnd || '#013d38'})`}>
      {/* Image Section */}
      {config.image && (
        <div class="relative h-32 overflow-hidden">
          <img src={config.image} alt={config.heading || ''} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
          <div class="absolute inset-0 bg-gradient-to-t from-[#01534d] to-transparent"></div>
          {config.badge && (
            <div class="absolute bottom-2 left-3 right-3">
              <span class="inline-block text-white text-xs font-bold px-2 py-1 rounded" style={`background-color: ${config.badgeColor || '#D97718'}`}>
                {config.badge}
              </span>
            </div>
          )}
        </div>
      )}

      {/* Large Number Display (for 30 Days style) */}
      {config.largeNumber && !config.image && (
        <div class="relative h-28 overflow-hidden" style={`background-color: ${config.bgColor || '#024139'}`}>
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-center">
              <div class="flex items-center justify-center gap-1 mb-1">
                {config.icon === 'moon' && (
                  <svg class="w-5 h-5" style={`color: ${config.iconColor || '#D97718'}`} fill="currentColor" viewBox="0 0 20 20">
                    <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
                  </svg>
                )}
                <span class="text-4xl font-bold text-white">{config.largeNumber}</span>
              </div>
              {config.numberLabel && <p class="text-white/90 text-sm font-medium">{config.numberLabel}</p>}
            </div>
          </div>
          {config.badge && (
            <div class="absolute top-2 right-2">
              <span class="inline-block text-white text-xs font-bold px-2 py-1 rounded" style={`background-color: ${config.badgeColor || '#D97718'}`}>
                {config.badge}
              </span>
            </div>
          )}
        </div>
      )}

      {/* Content Section */}
      <div class="p-4 text-white">
        {config.heading && <h4 class="font-bold text-lg mb-1">{config.heading}</h4>}
        {config.description && <p class="text-white/80 text-sm mb-3">{config.description}</p>}

        {/* Feature Checkmarks */}
        {config.features && config.features.length > 0 && (
          <div class="flex items-center gap-2 mb-3 text-sm">
            {config.features.map((feature: string) => (
              <div class="flex items-center gap-1 text-white/80">
                <svg class="w-4 h-4" style={`color: ${config.iconColor || '#D97718'}`} fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span>{feature}</span>
              </div>
            ))}
          </div>
        )}

        {/* Pricing Section */}
        {(config.price || config.priceLabel) && (
          <div class="flex items-center justify-between mb-3">
            <div>
              {config.priceLabel && <p class="text-xs text-white/60">{config.priceLabel}</p>}
              {config.price && (
                <p class="text-2xl font-bold" style={`color: ${config.priceColor || '#D97718'}`}>
                  {config.price}
                  {config.priceSuffix && <span class="text-sm font-normal text-white/80">{config.priceSuffix}</span>}
                </p>
              )}
            </div>
            <div class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
        )}

        {/* CTA Button */}
        {config.buttonText && (
          <div class="text-white font-bold py-2.5 rounded-lg text-center transition flex items-center justify-center gap-2 hover:opacity-90" style={`background-color: ${config.buttonColor || '#D97718'}`}>
            {config.buttonText}
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </div>
        )}
      </div>
    </a>
  </div>
)}

{/* Program Cards Widget */}
{widget_type === 'program-cards' && (
  <div class="widget-program-cards">
    {title && <p class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-4">{title}</p>}
    <div class="grid grid-cols-2 gap-3">
      {(config.programs || []).slice(0, 4).map((program: any) => (
        <a href={program.href || program.link || '#'} class="bg-white rounded-lg p-3 border border-gray-100 hover:shadow-md transition group">
          {program.image && (
            <img src={program.image} alt={program.title} class="w-full h-20 object-cover rounded mb-2 group-hover:scale-105 transition-transform" />
          )}
          <h5 class="font-semibold text-sm text-[#333]">{program.title}</h5>
          {(program.price || program.description) && <p class="text-xs" style={`color: ${program.color || menuColor}`}>{program.price || program.description}</p>}
        </a>
      ))}
    </div>
  </div>
)}

{/* Contact Card Widget */}
{widget_type === 'contact-card' && (
  <div class="widget-contact-card">
    <div class="bg-white rounded-xl p-4 shadow-lg border border-gray-100">
      {title && <h4 class="font-bold text-[#333] mb-3">{title}</h4>}
      <div class="space-y-3">
        {config.phone && (
          <a href={`tel:${config.phone.replace(/[^0-9+]/g, '')}`} class="flex items-center gap-3 text-gray-600 hover:text-[#333] transition">
            <div class="w-8 h-8 rounded-full flex items-center justify-center" style={`background-color: ${menuColor}20`}>
              <svg class="w-4 h-4" style={`color: ${menuColor}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <span class="text-sm font-medium">{config.phone}</span>
          </a>
        )}
        {config.email && (
          <a href={`mailto:${config.email}`} class="flex items-center gap-3 text-gray-600 hover:text-[#333] transition">
            <div class="w-8 h-8 rounded-full flex items-center justify-center" style={`background-color: ${menuColor}20`}>
              <svg class="w-4 h-4" style={`color: ${menuColor}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <span class="text-sm font-medium">{config.email}</span>
          </a>
        )}
        {config.address && (
          <div class="flex items-start gap-3 text-gray-600">
            <div class="w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0" style={`background-color: ${menuColor}20`}>
              <svg class="w-4 h-4" style={`color: ${menuColor}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <span class="text-sm">{config.address}</span>
          </div>
        )}
      </div>
      {config.button && (
        <a href={config.button.href} class="mt-4 block w-full text-white font-semibold py-2 rounded-lg text-center transition text-sm" style={`background-color: ${menuColor}`}>
          {config.button.label}
        </a>
      )}
    </div>
  </div>
)}

{/* Newsletter Widget - Email signup with social links */}
{widget_type === 'newsletter' && (
  <div class="widget-newsletter">
    <div class="bg-white rounded-xl p-4 shadow-lg border border-gray-100 text-center">
      {config.subtitle && (
        <p class="text-[15px] italic mb-0.5" style={`color: ${config.accentColor || menuColor}; font-family: 'Playfair Display', serif;`}>
          {config.subtitle}
        </p>
      )}
      {(title || config.heading) && (
        <h4 class="text-lg font-bold text-[#333] mb-3">{title || config.heading}</h4>
      )}
      {config.description && (
        <p class="text-xs text-gray-600 mb-3">{config.description}</p>
      )}

      {/* Email Form */}
      <form action={config.formAction || '#'} method="POST">
        <input
          type="email"
          name="email"
          placeholder={config.placeholder || 'Enter your email'}
          class="w-full px-3 py-2 border border-gray-300 rounded bg-[#f5f3ef] text-sm focus:outline-none mb-2"
          style={`--focus-color: ${config.buttonColor || menuColor}`}
          required
        />
        <button
          type="submit"
          class="w-full text-white font-bold py-2.5 rounded transition text-[15px]"
          style={`background-color: ${config.buttonColor || menuColor}`}
        >
          {config.buttonText || 'Subscribe'}
        </button>
      </form>

      {/* Social Links */}
      {config.socialLinks && config.socialLinks.length > 0 && (
        <div class="flex justify-center gap-3 mt-3">
          {config.socialLinks.map((social: any) => (
            <a href={social.href || '#'} class="text-gray-400 hover:text-[#333] transition">
              {social.platform === 'facebook' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
              )}
              {social.platform === 'twitter' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/></svg>
              )}
              {social.platform === 'instagram' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
              )}
              {social.platform === 'youtube' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
              )}
              {social.platform === 'linkedin' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
              )}
            </a>
          ))}
        </div>
      )}
    </div>
  </div>
)}

{/* Category Tabs Widget - for Our Work style menu */}
{widget_type === 'category-tabs' && (
  <div class="widget-category-tabs">
    <nav class="space-y-0">
      {(config.categories || []).map((cat: any, index: number) => (
        <button
          type="button"
          class={`mega-category-btn w-full flex items-center gap-3 px-4 py-2.5 transition-colors border-b border-gray-200/60 text-left ${index === 0 ? 'bg-[#fbefdd]' : 'hover:bg-[#fbefdd]'}`}
          data-category={cat.slug}
          data-label={cat.label}
        >
          <div class="w-8 h-8 rounded flex items-center justify-center flex-shrink-0" style={`background-color: ${cat.color || menuColor}`}>
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20" set:html={getIconSvg(cat.icon || 'heart')} />
          </div>
          <span class="flex-1 font-medium text-[#333] text-[15px]">{cat.label}</span>
          <svg class="w-3.5 h-3.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </button>
      ))}
      {config.viewAllLink && (
        <a href={config.viewAllLink.href || '/appeals'} class="w-full flex items-center gap-3 px-4 py-2.5 hover:bg-[#fbefdd] transition-colors text-left">
          <div class="w-8 h-8 bg-[#db2777] rounded flex items-center justify-center flex-shrink-0">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <span class="flex-1 font-medium text-[#333] text-[15px]">{config.viewAllLink.label || 'View All'}</span>
          <svg class="w-3.5 h-3.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      )}
    </nav>
  </div>
)}

{/* Campaign Grid Widget */}
{widget_type === 'campaign-grid' && (
  <div class="widget-campaign-grid">
    {/* Title - matches original design "Popular Appeals & Projects in {Category}" */}
    {isInteractive ? (
      <p class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-4">
        Popular Appeals & Projects in <span class="campaign-category-title text-[#333] font-bold">{title || 'All Categories'}</span>
      </p>
    ) : (
      <p class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-4">
        {title ? `Popular Appeals & Projects in ` : 'Popular Appeals & Projects'}
        {title && <span class="text-[#333] font-bold">{title}</span>}
      </p>
    )}

    {/* Grid - uses dynamic-campaigns-grid class when interactive for JS targeting */}
    <div
      id={`campaigns-grid-${widget.id}`}
      class:list={[
        "grid grid-cols-2 gap-3 mb-4 max-h-[320px] overflow-y-auto pr-1 custom-scrollbar",
        isInteractive && "dynamic-campaigns-grid"
      ]}
    >
      {(config.campaigns || []).slice(0, config.limit || 8).map((campaign: any) => (
        <a href={campaign.slug} class="group flex items-center gap-3 p-3 rounded-lg bg-white hover:shadow-md transition-all border border-gray-200 hover:border-gray-300">
          <div class="w-16 h-16 rounded-lg overflow-hidden flex-shrink-0 border border-gray-100 bg-gradient-to-br from-gray-50 to-gray-100 flex items-center justify-center">
            {campaign.image ? (
              <img src={campaign.image} alt={campaign.name} class="w-full h-full object-cover group-hover:scale-105 transition-transform" />
            ) : (
              <svg class="w-8 h-8 text-gray-400 group-hover:text-gray-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            )}
          </div>
          <span class="text-sm font-medium text-[#333] line-clamp-2">{campaign.name}</span>
        </a>
      ))}
    </div>

    {/* Empty message */}
    {(config.campaigns || []).length === 0 && (
      <div class="text-center py-8 text-gray-500 mb-4">
        <p>{config.emptyMessage || 'No campaigns in this category yet.'}</p>
        <a href="/appeals" class="hover:underline mt-2 inline-block" style={`color: ${menuColor}`}>View all appeals</a>
      </div>
    )}

    {/* View All Button */}
    <a
      href={config.viewAllHref || '/appeals'}
      class="view-all-btn block w-full text-white font-semibold py-2.5 rounded-full text-center transition text-[15px] hover:opacity-90"
      style={`background-color: ${menuColor}`}
    >
      <span class="view-all-text">{config.viewAllText || `All Projects & Appeals${title ? ` in ${title}` : ''}`}</span>
    </a>
  </div>
)}

{/* Promo Box Widget - Dark card with heading, description, price tiers, button */}
{widget_type === 'promo-box' && (
  <div class="widget-promo-box">
    {title && <p class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-4">{title}</p>}
    <div class="rounded-xl p-5 mb-4" style={`background-color: ${config.bgColor || '#01534d'}`}>
      {config.heading && <h3 class="text-xl font-bold text-white mb-2" style="font-family: 'Signika', sans-serif;">{config.heading}</h3>}
      {config.description && <p class="text-white/80 text-sm mb-4">{config.description}</p>}

      {/* Price Tiers */}
      {config.priceTiers && config.priceTiers.length > 0 && (
        <div class="grid grid-cols-3 gap-2">
          {config.priceTiers.slice(0, 3).map((tier: any) => (
            <a href={tier.href || '#'} class="bg-white/10 hover:bg-white/20 rounded-lg p-3 text-center transition">
              <p class="text-xl font-bold text-white">{tier.price}</p>
              <p class="text-xs text-white/70">{tier.label}</p>
            </a>
          ))}
        </div>
      )}
    </div>

    {/* Button */}
    {config.button && (
      <a href={config.button.href || '#'} class="block w-full text-white font-semibold py-3 rounded-full text-center transition hover:opacity-90" style={`background-color: ${config.button.color || config.bgColor || '#01534d'}`}>
        {config.button.label}
      </a>
    )}
  </div>
)}

{/* Feature Card Widget - Badge, large number/icon, features, CTA */}
{widget_type === 'feature-card' && (
  <div class="widget-feature-card">
    <div class="bg-white rounded-xl p-5 shadow-lg border border-gray-100 text-center">
      {/* Badge */}
      {config.badge && (
        <span class="inline-block px-3 py-1 text-xs font-bold text-white rounded mb-3" style={`background-color: ${config.badgeColor || '#D97718'}`}>
          {config.badge}
        </span>
      )}

      {/* Icon and Number */}
      <div class="flex items-center justify-center gap-2 mb-2">
        {config.icon === 'moon' && (
          <svg class="w-8 h-8" style={`color: ${config.iconColor || '#D97718'}`} fill="currentColor" viewBox="0 0 20 20">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
          </svg>
        )}
        {config.icon === 'heart' && (
          <svg class="w-8 h-8" style={`color: ${config.iconColor || '#D97718'}`} fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
          </svg>
        )}
        {config.icon === 'star' && (
          <svg class="w-8 h-8" style={`color: ${config.iconColor || '#D97718'}`} fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
          </svg>
        )}
        {config.largeNumber && (
          <span class="text-5xl font-bold" style={`color: ${config.numberColor || '#01534d'}`}>{config.largeNumber}</span>
        )}
      </div>
      {config.numberLabel && <p class="text-sm text-gray-600 mb-4">{config.numberLabel}</p>}

      {/* Heading & Description */}
      {config.heading && <h4 class="font-bold text-lg text-[#333] mb-2">{config.heading}</h4>}
      {config.description && <p class="text-sm text-gray-600 mb-4">{config.description}</p>}

      {/* Features List */}
      {config.features && config.features.length > 0 && (
        <div class="flex flex-wrap justify-center gap-4 mb-4">
          {config.features.map((feature: string) => (
            <div class="flex items-center gap-1 text-sm text-gray-600">
              <svg class="w-4 h-4" style={`color: ${config.accentColor || '#D97718'}`} fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span>{feature}</span>
            </div>
          ))}
        </div>
      )}

      {/* CTA Button */}
      {config.button && (
        <a href={config.button.href || '#'} class="inline-flex items-center justify-center gap-2 px-6 py-2.5 text-white font-semibold rounded-lg transition hover:opacity-90" style={`background-color: ${config.button.color || '#D97718'}`}>
          {config.button.label}
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      )}
    </div>
  </div>
)}

