<section id="appeals" class="py-16 bg-[#f8f9fa]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-12">
      <span class="inline-block bg-[#ef7c01]/10 text-[#ef7c01] text-sm font-bold px-4 py-2 rounded-full mb-4" style="font-family: 'Signika', sans-serif;">
        APPEALS
      </span>
      <h2 class="text-3xl md:text-4xl font-bold text-[#333] mb-4" style="font-family: 'Signika', sans-serif;">
        Support Our Active Appeals
      </h2>
      <p class="text-gray-600 max-w-2xl mx-auto" style="font-family: 'Lato', sans-serif;">
        Your donations are changing lives. Choose an appeal that speaks to your heart and make a difference today.
      </p>
    </div>

    <!-- Appeals Carousel -->
    <div class="relative">
      <div class="overflow-hidden" id="appeals-carousel">
        <div class="flex transition-transform duration-500 ease-out" id="appeals-track">
          {appeals.map((appeal) => (
            <div class="w-full md:w-1/2 lg:w-1/3 flex-shrink-0 px-3">
              <div class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition group h-full">
                <div class="relative h-52 overflow-hidden">
                  <img
                    src={appeal.image}
                    alt={appeal.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition duration-500"
                    loading="lazy"
                  />
                  <span class="absolute top-4 left-4 bg-[#ef7c01] text-white text-xs font-bold px-3 py-1 rounded-full" style="font-family: 'Signika', sans-serif;">
                    {appeal.category}
                  </span>
                </div>
                <div class="p-5">
                  <h3 class="text-xl font-bold text-[#333] mb-2" style="font-family: 'Signika', sans-serif;">{appeal.title}</h3>
                  <p class="text-gray-600 text-sm mb-4 line-clamp-2" style="font-family: 'Lato', sans-serif;">{appeal.description}</p>

                  <a
                    href="#"
                    class="block w-full bg-[#255764] hover:bg-[#1a4a55] text-white font-bold py-3 rounded-lg text-center transition" style="font-family: 'Signika', sans-serif;"
                  >
                    Donate Now
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Navigation Arrows -->
      <button
        id="prev-btn"
        class="absolute left-0 top-1/2 -translate-y-1/2 -translate-x-2 md:-translate-x-4 w-10 h-10 md:w-12 md:h-12 bg-white rounded-full shadow-lg flex items-center justify-center text-[#333] hover:bg-[#ef7c01] hover:text-white transition z-10"
      >
        <svg class="w-5 h-5 md:w-6 md:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </button>
      <button
        id="next-btn"
        class="absolute right-0 top-1/2 -translate-y-1/2 translate-x-2 md:translate-x-4 w-10 h-10 md:w-12 md:h-12 bg-white rounded-full shadow-lg flex items-center justify-center text-[#333] hover:bg-[#ef7c01] hover:text-white transition z-10"
      >
        <svg class="w-5 h-5 md:w-6 md:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </button>
    </div>

    <!-- Dots Navigation -->
    <div class="flex justify-center gap-2 mt-8" id="dots-container">
      {[0, 1, 2, 3, 4, 5, 6].map((i) => (
        <button
          class={`w-3 h-3 rounded-full transition ${i === 0 ? 'bg-[#ef7c01]' : 'bg-gray-300 hover:bg-gray-400'}`}
          data-index={i}
        ></button>
      ))}
    </div>
  </div>
</section>

<script>
  const track = document.getElementById('appeals-track');
  const prevBtn = document.getElementById('prev-btn');
  const nextBtn = document.getElementById('next-btn');
  const dotsContainer = document.getElementById('dots-container');
  const dots = dotsContainer?.querySelectorAll('button');

  let currentIndex = 0;
  const totalItems = 9;

  function getItemsPerView() {
    if (window.innerWidth >= 1024) return 3;
    if (window.innerWidth >= 768) return 2;
    return 1;
  }

  function updateCarousel() {
    const itemsPerView = getItemsPerView();
    const maxIndex = Math.max(0, totalItems - itemsPerView);
    currentIndex = Math.min(currentIndex, maxIndex);
    currentIndex = Math.max(currentIndex, 0);

    const translateX = -(currentIndex * (100 / itemsPerView));
    if (track) {
      track.style.transform = `translateX(${translateX}%)`;
    }

    dots?.forEach((dot, i) => {
      if (i === currentIndex) {
        dot.classList.add('bg-[#ef7c01]');
        dot.classList.remove('bg-gray-300');
      } else {
        dot.classList.remove('bg-[#ef7c01]');
        dot.classList.add('bg-gray-300');
      }
    });
  }

  prevBtn?.addEventListener('click', () => {
    currentIndex = Math.max(currentIndex - 1, 0);
    updateCarousel();
  });

  nextBtn?.addEventListener('click', () => {
    const itemsPerView = getItemsPerView();
    const maxIndex = Math.max(0, totalItems - itemsPerView);
    currentIndex = Math.min(currentIndex + 1, maxIndex);
    updateCarousel();
  });

  dots?.forEach((dot, i) => {
    dot.addEventListener('click', () => {
      currentIndex = i;
      updateCarousel();
    });
  });

  window.addEventListener('resize', updateCarousel);
  updateCarousel();
</script>
