---
---

<header class="sticky top-0 z-50">
  <!-- Top Bar -->
  <div class="bg-[#1a1a1a] text-white text-sm py-2">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center">
      <div class="flex items-center gap-6">
        <a href="tel:+17035964900" class="flex items-center gap-2 hover:text-[#fdc448] transition">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          <span class="hidden sm:inline">+1 (703) 596-4900</span>
        </a>
        <span class="hidden md:inline text-gray-400">|</span>
        <a href="tel:+18009000027" class="hidden md:flex items-center gap-2 hover:text-[#fdc448] transition">
          <span>1-800-900-0027</span>
        </a>
      </div>
      <div class="flex items-center gap-4">
        <!-- Language Selector -->
        <div class="flex items-center gap-2 text-xs">
          <button class="hover:text-[#fdc448] transition flex items-center gap-1">
            <span>EN</span>
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <span class="border-l border-white/30 pl-3">USD $</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Nav -->
  <nav class="bg-white shadow-md">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-20">
        <!-- Logo -->
        <a href="/" class="flex items-center">
          <img
            src="https://www.staging9.qurbani.com/wp-content/uploads/2021/07/QurbaniFoundation-Logo-2.png"
            alt="Qurbani Foundation USA"
            class="h-16 w-auto"
          />
        </a>

        <!-- Desktop Nav -->
        <div class="hidden lg:flex items-center gap-1">
          <!-- Appeals Dropdown -->
          <div class="relative group">
            <button class="flex items-center gap-1 text-[#333] hover:text-[#ef7c01] font-semibold text-sm uppercase tracking-wide transition px-4 py-6">
              Appeals
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="absolute top-full left-0 bg-white shadow-xl rounded-b-lg py-2 w-56 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 border-t-4 border-[#ef7c01]">
              <a href="#appeals" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01] hover:text-white transition">Sight Restoration</a>
              <a href="#appeals" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01] hover:text-white transition">Water</a>
              <a href="#appeals" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01] hover:text-white transition">Orphan Sponsorship</a>
              <a href="#appeals" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01] hover:text-white transition">Education</a>
              <a href="#appeals" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01] hover:text-white transition">Zakat & Sadaqah</a>
              <a href="#appeals" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01] hover:text-white transition">Food Aid</a>
              <a href="#appeals" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01] hover:text-white transition">Disaster Relief</a>
            </div>
          </div>

          <!-- Zakat Dropdown -->
          <div class="relative group">
            <button class="flex items-center gap-1 text-[#333] hover:text-[#ef7c01] font-semibold text-sm uppercase tracking-wide transition px-4 py-6">
              Zakat
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="absolute top-full left-0 bg-white shadow-xl rounded-b-lg py-2 w-56 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 border-t-4 border-[#ef7c01]">
              <a href="#zakat" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01] hover:text-white transition">Pay Zakat</a>
              <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01] hover:text-white transition">Zakat Calculator</a>
              <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01] hover:text-white transition">Zakat FAQ</a>
            </div>
          </div>

          <!-- About Us Dropdown -->
          <div class="relative group">
            <button class="flex items-center gap-1 text-[#333] hover:text-[#ef7c01] font-semibold text-sm uppercase tracking-wide transition px-4 py-6">
              About Us
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="absolute top-full left-0 bg-white shadow-xl rounded-b-lg py-2 w-56 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 border-t-4 border-[#ef7c01]">
              <a href="#about" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01] hover:text-white transition">Our Story</a>
              <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01] hover:text-white transition">Our Team</a>
              <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01] hover:text-white transition">Annual Reports</a>
            </div>
          </div>

          <a href="#contact" class="text-[#333] hover:text-[#ef7c01] font-semibold text-sm uppercase tracking-wide transition px-4 py-6">Contact Us</a>

          <a href="#calculator" class="text-[#333] hover:text-[#ef7c01] font-semibold text-sm uppercase tracking-wide transition px-4 py-6">Zakat Calculator</a>
        </div>

        <!-- Right Actions -->
        <div class="flex items-center gap-3">
          <!-- Search -->
          <button class="text-[#333] hover:text-[#ef7c01] transition p-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </button>

          <!-- Cart -->
          <button class="relative text-[#333] hover:text-[#ef7c01] transition p-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            <span class="absolute -top-1 -right-1 bg-[#ef7c01] text-white text-xs w-5 h-5 rounded-full flex items-center justify-center font-bold">0</span>
          </button>

          <!-- Donate Button -->
          <a href="#packages" class="bg-[#fdc448] hover:bg-[#efb000] text-[#61470e] font-bold px-6 py-3 rounded transition text-sm uppercase tracking-wide" style="box-shadow: 3px 4px 0 rgba(0,0,0,0.15);">
            Donate Now
          </a>

          <!-- Mobile Menu Button -->
          <button class="lg:hidden text-[#333] p-2" id="mobile-menu-btn">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </nav>

  <!-- Mobile Menu -->
  <div class="hidden lg:hidden bg-white border-t shadow-lg" id="mobile-menu">
    <div class="px-4 py-4 space-y-3">
      <a href="#appeals" class="block text-[#333] hover:text-[#ef7c01] font-semibold py-2 uppercase text-sm">Appeals</a>
      <a href="#zakat" class="block text-[#333] hover:text-[#ef7c01] font-semibold py-2 uppercase text-sm">Zakat</a>
      <a href="#about" class="block text-[#333] hover:text-[#ef7c01] font-semibold py-2 uppercase text-sm">About Us</a>
      <a href="#contact" class="block text-[#333] hover:text-[#ef7c01] font-semibold py-2 uppercase text-sm">Contact Us</a>
      <a href="#calculator" class="block text-[#333] hover:text-[#ef7c01] font-semibold py-2 uppercase text-sm">Zakat Calculator</a>
      <a href="#packages" class="block bg-[#fdc448] text-[#61470e] font-bold py-3 px-4 rounded text-center uppercase text-sm mt-4" style="box-shadow: 3px 4px 0 rgba(0,0,0,0.15);">
        Donate Now
      </a>
    </div>
  </div>
</header>

<!-- Google Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700;900&family=Signika:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
  header {
    font-family: 'Signika', sans-serif;
  }
</style>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
