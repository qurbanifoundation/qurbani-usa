---
---

<header class="sticky top-0 z-50">
  <!-- Top Bar -->
  <div class="bg-[#0b3741] text-white text-sm py-2">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center">
      <div class="flex items-center gap-6">
        <a href="tel:+18009000027" class="flex items-center gap-2 hover:text-[#fdc448] transition">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          <span class="hidden sm:inline">+1 (800) 900-0027</span>
        </a>
        <a href="mailto:info@qurbaniusa.org" class="hidden md:flex items-center gap-2 hover:text-[#fdc448] transition">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          <span>info@qurbaniusa.org</span>
        </a>
      </div>
      <div class="flex items-center gap-4">
        <div class="flex items-center gap-2 text-xs">
          <button class="hover:text-[#fdc448] transition">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </button>
          <span class="border-l border-white/30 pl-3">USD $</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Nav -->
  <nav class="bg-white shadow-md">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-20">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-3">
          <img
            src="https://www.staging9.qurbani.com/wp-content/uploads/elementor/thumbs/QurbaniFoundationUSA-w-r83hxv70dggozbggq39q9t1mdj3eg5j5h1cah0txmc.png"
            alt="Qurbani Foundation USA"
            class="h-14 w-auto"
          />
        </a>

        <!-- Desktop Nav -->
        <div class="hidden lg:flex items-center gap-8">
          <div class="relative group">
            <button class="flex items-center gap-1 text-[#0b3741] hover:text-[#ef7c01] font-semibold text-sm uppercase tracking-wide transition py-6">
              Appeals
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="absolute top-full left-0 bg-white shadow-xl rounded-lg py-2 w-56 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 border-t-4 border-[#ef7c01]">
              <a href="#appeals" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01]/10 hover:text-[#ef7c01]">Water for Life</a>
              <a href="#appeals" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01]/10 hover:text-[#ef7c01]">Sponsor a Hafiz</a>
              <a href="#appeals" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01]/10 hover:text-[#ef7c01]">Orphan Sponsorship</a>
              <a href="#appeals" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01]/10 hover:text-[#ef7c01]">Yemen Emergency</a>
              <a href="#appeals" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01]/10 hover:text-[#ef7c01]">Gaza Emergency</a>
            </div>
          </div>

          <div class="relative group">
            <button class="flex items-center gap-1 text-[#0b3741] hover:text-[#ef7c01] font-semibold text-sm uppercase tracking-wide transition py-6">
              Zakat
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="absolute top-full left-0 bg-white shadow-xl rounded-lg py-2 w-56 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 border-t-4 border-[#ef7c01]">
              <a href="#packages" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01]/10 hover:text-[#ef7c01]">Pay Zakat</a>
              <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01]/10 hover:text-[#ef7c01]">Zakat Calculator</a>
              <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01]/10 hover:text-[#ef7c01]">Zakat FAQ</a>
            </div>
          </div>

          <a href="#packages" class="text-[#0b3741] hover:text-[#ef7c01] font-semibold text-sm uppercase tracking-wide transition">Qurbani</a>

          <div class="relative group">
            <button class="flex items-center gap-1 text-[#0b3741] hover:text-[#ef7c01] font-semibold text-sm uppercase tracking-wide transition py-6">
              About Us
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="absolute top-full left-0 bg-white shadow-xl rounded-lg py-2 w-56 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 border-t-4 border-[#ef7c01]">
              <a href="#about" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01]/10 hover:text-[#ef7c01]">Our Story</a>
              <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01]/10 hover:text-[#ef7c01]">Our Team</a>
              <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-[#ef7c01]/10 hover:text-[#ef7c01]">Contact Us</a>
            </div>
          </div>
        </div>

        <!-- Right Actions -->
        <div class="flex items-center gap-4">
          <a href="/account/login" class="hidden sm:flex items-center gap-2 text-[#0b3741] hover:text-[#ef7c01] transition">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </a>
          <button class="relative text-[#0b3741] hover:text-[#ef7c01] transition">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            <span class="absolute -top-2 -right-2 bg-[#ef7c01] text-white text-xs w-5 h-5 rounded-full flex items-center justify-center font-bold">0</span>
          </button>
          <a href="#packages" class="bg-[#fdc448] hover:bg-[#efb000] text-[#0b3741] font-bold px-6 py-3 rounded-lg transition shadow-lg text-sm uppercase tracking-wide">
            Donate Now
          </a>
          <button class="lg:hidden text-[#0b3741] p-2" id="mobile-menu-btn">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </nav>

  <!-- Mobile Menu -->
  <div class="hidden lg:hidden bg-white border-t shadow-lg" id="mobile-menu">
    <div class="px-4 py-4 space-y-3">
      <a href="#appeals" class="block text-[#0b3741] hover:text-[#ef7c01] font-semibold py-2 uppercase text-sm">Appeals</a>
      <a href="#packages" class="block text-[#0b3741] hover:text-[#ef7c01] font-semibold py-2 uppercase text-sm">Zakat</a>
      <a href="#packages" class="block text-[#0b3741] hover:text-[#ef7c01] font-semibold py-2 uppercase text-sm">Qurbani</a>
      <a href="#about" class="block text-[#0b3741] hover:text-[#ef7c01] font-semibold py-2 uppercase text-sm">About Us</a>
      <a href="/account/login" class="block text-[#0b3741] hover:text-[#ef7c01] font-semibold py-2 uppercase text-sm">My Account</a>
      <a href="#packages" class="block bg-[#fdc448] text-[#0b3741] font-bold py-3 px-4 rounded-lg text-center uppercase text-sm mt-4">
        Donate Now
      </a>
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
