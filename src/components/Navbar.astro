---
import { getSettings, formatPhoneLink } from '../lib/settings';
import { supabaseAdmin } from '../lib/supabase';
import { getMenuCategories, getIconSvg, type Category } from '../lib/categories';

const settings = await getSettings();

// Fetch categories from database with caching (5-minute TTL)
const dbCategories = await getMenuCategories();

// Transform to the format expected by the template
const categories = dbCategories.map(cat => ({
  id: cat.slug,
  label: cat.label,
  color: cat.color,
  icon: cat.icon
}));

// Fetch all active campaigns grouped by category
let campaignsByCategory: Record<string, any[]> = {};
try {
  const { data } = await supabaseAdmin
    .from('campaigns')
    .select('slug, name, featured_image, hero_image_url, image_url, category')
    .eq('is_active', true)
    .order('is_featured', { ascending: false })
    .order('sort_order', { ascending: true });

  if (data) {
    // Group campaigns by category
    data.forEach(campaign => {
      const cat = campaign.category || 'other';
      if (!campaignsByCategory[cat]) {
        campaignsByCategory[cat] = [];
      }
      if (campaignsByCategory[cat].length < 8) { // Limit per category
        campaignsByCategory[cat].push(campaign);
      }
    });
  }
} catch (e) {
  console.error('Error fetching campaigns:', e);
}

// Helper to get campaign image
const getCampaignImage = (c: any) => c.featured_image || c.hero_image_url || c.image_url || 'https://images.unsplash.com/photo-1488521787991-ed7bbaae773c?w=400';

// getIconSvg is imported from '../lib/categories'

// Serialize campaigns data for JavaScript
const campaignsJson = JSON.stringify(campaignsByCategory);
