<!-- Google Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700;900&family=Signika:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
  header {
    font-family: 'Signika', sans-serif;
  }
</style>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });

  // Mega menu amount buttons
  const megaAmountBtns = document.querySelectorAll('.mega-amount-btn');
  megaAmountBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      megaAmountBtns.forEach(b => {
        b.classList.remove('bg-[#0b5d3a]', 'text-white');
        b.classList.add('text-[#0b5d3a]');
      });
      btn.classList.add('bg-[#0b5d3a]', 'text-white');
      btn.classList.remove('text-[#0b5d3a]');
    });
  });
</script>
