<script>
  document.addEventListener('DOMContentLoaded', () => {
    // ═══════════════════════════════════════════════════════════════
    // Main Donate Section
    // ═══════════════════════════════════════════════════════════════
    const donateAmtBtns = document.querySelectorAll('.donate-amt');
    const donateCustom = document.getElementById('donate-custom-amount') as HTMLInputElement;
    const donateFreqSingle = document.getElementById('donate-freq-single');
    const donateFreqMonthly = document.getElementById('donate-freq-monthly');
    const donateBtn = document.getElementById('donate-btn');
    const donateFundSelect = document.getElementById('donate-fund-select') as HTMLSelectElement;

    let donateSelectedAmount = 100;
    let donateIsMonthly = false;

    donateAmtBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        donateAmtBtns.forEach(b => {
          b.classList.remove('border-[#d97706]', 'bg-[#d97706]/5', 'text-[#d97706]');
          b.classList.add('border-neutral-200', 'text-neutral-700');
        });
        btn.classList.add('border-[#d97706]', 'bg-[#d97706]/5', 'text-[#d97706]');
        btn.classList.remove('border-neutral-200', 'text-neutral-700');
        donateSelectedAmount = parseInt(btn.getAttribute('data-amount') || '100');
        if (donateCustom) donateCustom.value = '';
      });
    });

    donateCustom?.addEventListener('input', () => {
      if (donateCustom.value) {
        donateAmtBtns.forEach(b => {
          b.classList.remove('border-[#d97706]', 'bg-[#d97706]/5', 'text-[#d97706]');
          b.classList.add('border-neutral-200', 'text-neutral-700');
        });
        donateSelectedAmount = parseInt(donateCustom.value) || 0;
      }
    });

    donateFreqSingle?.addEventListener('click', () => {
      donateIsMonthly = false;
      donateFreqSingle.classList.add('bg-white', 'text-neutral-900', 'shadow-sm');
      donateFreqSingle.classList.remove('text-neutral-500');
      donateFreqMonthly?.classList.remove('bg-white', 'text-neutral-900', 'shadow-sm');
      donateFreqMonthly?.classList.add('text-neutral-500');
    });

    donateFreqMonthly?.addEventListener('click', () => {
      donateIsMonthly = true;
      donateFreqMonthly.classList.add('bg-white', 'text-neutral-900', 'shadow-sm');
      donateFreqMonthly.classList.remove('text-neutral-500');
      donateFreqSingle?.classList.remove('bg-white', 'text-neutral-900', 'shadow-sm');
      donateFreqSingle?.classList.add('text-neutral-500');
    });

    donateBtn?.addEventListener('click', () => {
      if (donateSelectedAmount > 0 && typeof (window as any).addToCart === 'function') {
        const fundName = donateFundSelect?.options[donateFundSelect.selectedIndex]?.text || 'Where Most Needed';

        (window as any).addToCart({
          id: `donation-${donateFundSelect?.value || 'general'}-${Date.now()}`,
          type: 'donation',
          name: fundName,
          amount: donateSelectedAmount,
          quantity: 1,
          description: `${donateIsMonthly ? 'Monthly' : 'One-time'} donation`,
          frequency: donateIsMonthly ? 'monthly' : 'single'
        });
      }
    });

    // ═══════════════════════════════════════════════════════════════
    // Smooth scroll
    // ═══════════════════════════════════════════════════════════════
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function(e) {
        e.preventDefault();
        const href = (this as HTMLAnchorElement).getAttribute('href');
        if (href) {
          const target = document.querySelector(href);
          if (target) {
            target.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        }
      });
    });

    // ═══════════════════════════════════════════════════════════════
    // Parallax effect for hero
    // ═══════════════════════════════════════════════════════════════
    const heroImg = document.querySelector('.hero-parallax') as HTMLElement;

    window.addEventListener('scroll', () => {
      if (heroImg && window.scrollY < window.innerHeight) {
        heroImg.style.transform = `scale(1.05) translateY(${window.scrollY * 0.3}px)`;
      }
    });
  });
</script>
