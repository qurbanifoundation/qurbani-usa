---
/**
 * Immersive Homepage Template
 * Premium charity homepage with full-screen hero, parallax effects, and modern design
 * Inspired by Penny Appeal, staging9.qurbani.com, and top charity websites
 * Accent color: #d97706 (amber/orange)
 */

import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { supabaseAdmin } from '../lib/supabase';

// Fetch active campaigns
let campaigns: any[] = [];
let urgentCampaign: any = null;
try {
  const { data } = await supabaseAdmin
    .from('campaigns')
    .select('*')
    .eq('is_active', true)
    .order('display_order', { ascending: true })
    .limit(12);
  if (data) {
    campaigns = data;
    urgentCampaign = data.find((c: any) => c.is_urgent) || data[0];
  }
} catch (e) {}

// Fallback
if (campaigns.length === 0) {
  campaigns = [
    { id: 1, title: 'Palestine Emergency', slug: 'palestine', description: 'Urgent humanitarian aid for families in Gaza.', featured_image: 'https://images.unsplash.com/photo-1469571486292-0ba58a3f068b?w=800', is_urgent: true, goal_amount: 500000, raised_amount: 387500 },
    { id: 2, title: 'Orphan Sponsorship', slug: 'orphan-sponsorship', description: 'Give orphans hope with education and care.', featured_image: '/images/qurbani-foundation-orphan-sponsorship.jpg', goal_amount: 250000, raised_amount: 198000 },
    { id: 3, title: 'Water for Life', slug: 'water', description: 'Provide clean drinking water to communities.', featured_image: 'https://images.unsplash.com/photo-1594398901394-4e34939a4fd0?w=800', goal_amount: 150000, raised_amount: 112000 },
    { id: 4, title: 'Food Security', slug: 'food-packs', description: 'Feed families with nutritious food packs.', featured_image: '/images/qurbani-foundation-food-distribution.png', goal_amount: 200000, raised_amount: 156000 },
    { id: 5, title: 'Yemen Crisis', slug: 'yemen', description: 'Support families in Yemen.', featured_image: 'https://images.unsplash.com/photo-1488521787991-ed7bbaae773c?w=800', is_urgent: true, goal_amount: 300000, raised_amount: 234000 },
    { id: 6, title: 'Education Fund', slug: 'education', description: 'Build brighter futures through knowledge.', featured_image: 'https://images.unsplash.com/photo-1497486751825-1233686d5d80?w=800', goal_amount: 100000, raised_amount: 67000 },
  ];
  urgentCampaign = campaigns[0];
}

// Impact data
const impactData = [
  { icon: 'users', value: '2.5M+', label: 'Lives Transformed', color: '#d97706' },
  { icon: 'globe', value: '45+', label: 'Countries Reached', color: '#d97706' },
  { icon: 'heart', value: '50K+', label: 'Orphans Supported', color: '#d97706' },
  { icon: 'droplet', value: '1,200+', label: 'Water Wells Built', color: '#d97706' },
];

// Programs
const programs = [
  { title: 'Zakat', description: '100% of your Zakat reaches those in need', icon: 'dollar', link: '/zakat', amount: 'Calculate yours' },
  { title: 'Orphan Care', description: 'Provide hope, education & love', icon: 'child', link: '/appeals/orphan-sponsorship', amount: 'From $45/mo' },
  { title: 'Water Wells', description: 'Give the gift of clean water', icon: 'droplet', link: '/appeals/water', amount: 'From $500' },
  { title: 'Food Aid', description: 'Feed families in crisis', icon: 'food', link: '/food-packs', amount: 'From $50' },
  { title: 'Emergency', description: 'Rapid disaster response', icon: 'emergency', link: '/appeals/emergency', amount: 'Any amount' },
  { title: 'Education', description: 'Build futures through learning', icon: 'education', link: '/appeals/education', amount: 'From $25/mo' },
];
---

<Layout title="Qurbani Foundation - Transform Lives with 100% Zakat Policy">
  <Navbar />

  <main class="overflow-hidden bg-white">

    <!-- ═══════════════════════════════════════════════════════════════════════
         HERO - Immersive Full-Screen with Video Background Feel
    ════════════════════════════════════════════════════════════════════════ -->
    <section class="relative min-h-[100vh] flex items-center justify-center overflow-hidden">
      <!-- Animated Background with Parallax Effect -->
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-neutral-900"></div>
        <img
          src="/images/Qurbani-hero-section-img-1.jpg"
          alt="Qurbani Foundation"
          class="absolute inset-0 w-full h-full object-cover opacity-40 scale-105 hero-parallax"
          loading="eager"
        />
        <!-- Gradient Overlays -->
        <div class="absolute inset-0 bg-gradient-to-b from-neutral-900/80 via-neutral-900/40 to-neutral-900/90"></div>
        <div class="absolute inset-0 bg-gradient-to-r from-neutral-900/60 via-transparent to-neutral-900/60"></div>
        <!-- Animated Particles/Dots -->
        <div class="absolute inset-0 opacity-30" id="particles"></div>
      </div>

      <!-- Hero Content -->
      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center pt-20">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-md border border-white/20 rounded-full px-5 py-2 mb-8 animate-fade-in">
          <span class="w-2 h-2 bg-[#d97706] rounded-full animate-pulse"></span>
          <span class="text-white/90 text-sm font-medium">100% Zakat Policy — Every Penny Reaches Those in Need</span>
        </div>

        <!-- Main Headline -->
        <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold text-white mb-6 leading-[0.95] tracking-tight animate-slide-up" style="font-family: 'Signika', sans-serif;">
          Transform Lives<br/>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#d97706] via-[#f59e0b] to-[#d97706]">Today</span>
        </h1>

        <!-- Subheadline -->
        <p class="text-xl md:text-2xl text-white/70 max-w-3xl mx-auto mb-10 leading-relaxed animate-slide-up-delay">
          Join a community of changemakers providing emergency aid, clean water, education, and hope to millions worldwide.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-16 animate-slide-up-delay-2">
          <a href="#donate-section" class="group w-full sm:w-auto inline-flex items-center justify-center gap-3 bg-[#d97706] hover:bg-[#b45309] text-white font-bold text-lg px-10 py-5 rounded-full transition-all shadow-xl shadow-[#d97706]/30 hover:shadow-2xl hover:shadow-[#d97706]/40 hover:-translate-y-1">
            <span>Donate Now</span>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
          <a href="/appeals" class="w-full sm:w-auto inline-flex items-center justify-center gap-3 bg-white/10 backdrop-blur-sm hover:bg-white/20 text-white font-semibold text-lg px-10 py-5 rounded-full transition-all border border-white/30">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
            <span>See Our Work</span>
          </a>
        </div>

        <!-- Live Impact Counter -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 md:gap-12 max-w-4xl mx-auto animate-fade-in-delay">
          {impactData.map((stat) => (
            <div class="text-center group">
              <div class="text-4xl md:text-5xl font-bold text-white mb-2 stat-counter" data-value={stat.value} style="font-family: 'Signika', sans-serif;">
                {stat.value}
              </div>
              <div class="text-white/50 text-sm md:text-base group-hover:text-[#d97706] transition-colors">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>

      <!-- Scroll Indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
        <div class="w-8 h-12 border-2 border-white/30 rounded-full flex justify-center pt-2">
          <div class="w-1.5 h-3 bg-white/60 rounded-full"></div>
        </div>
      </div>

      <!-- Urgent Appeal Bar -->
      {urgentCampaign && (
        <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-r from-red-600 to-red-500 py-3">
          <div class="max-w-7xl mx-auto px-4 flex items-center justify-between">
            <div class="flex items-center gap-3">
              <span class="relative flex h-3 w-3">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-white opacity-75"></span>
                <span class="relative inline-flex rounded-full h-3 w-3 bg-white"></span>
              </span>
              <span class="text-white font-semibold">URGENT:</span>
              <span class="text-white/90">{urgentCampaign.title} — Families need your help now</span>
            </div>
            <a href={`/appeals/${urgentCampaign.slug}`} class="hidden sm:inline-flex items-center gap-2 bg-white text-red-600 font-bold px-5 py-2 rounded-full text-sm hover:bg-red-50 transition-colors">
              Donate Now
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
            </a>
          </div>
        </div>
      )}
    </section>

    <!-- ═══════════════════════════════════════════════════════════════════════
         WAYS TO GIVE - Interactive Program Cards
    ════════════════════════════════════════════════════════════════════════ -->
    <section class="py-24 bg-neutral-50 relative overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-[0.02]" style="background-image: url('data:image/svg+xml,%3Csvg width=%2260%22 height=%2260%22 viewBox=%220 0 60 60%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%23000%22%3E%3Cpath d=%22M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
        <!-- Section Header -->
        <div class="text-center max-w-3xl mx-auto mb-16">
          <div class="inline-flex items-center gap-2 bg-[#d97706]/10 text-[#d97706] px-4 py-2 rounded-full text-sm font-semibold mb-6">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/></svg>
            Ways to Give
          </div>
          <h2 class="text-4xl md:text-5xl font-bold text-neutral-900 mb-6" style="font-family: 'Signika', sans-serif;">
            Choose Your Impact
          </h2>
          <p class="text-xl text-neutral-600">
            Every donation creates ripples of change. Choose the cause closest to your heart.
          </p>
        </div>

        <!-- Programs Grid - Horizontally scrollable on mobile -->
        <div class="flex md:grid md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 overflow-x-auto pb-4 md:pb-0 snap-x snap-mandatory scrollbar-hide -mx-4 px-4 md:mx-0 md:px-0 md:overflow-visible">
          {programs.map((program, index) => (
            <a href={program.link} class="group relative bg-white rounded-2xl p-6 md:p-8 shadow-sm hover:shadow-2xl transition-all duration-500 border border-neutral-100 hover:border-[#d97706]/20 overflow-hidden flex-shrink-0 w-72 md:w-auto snap-start">
              <!-- Hover Background -->
              <div class="absolute inset-0 bg-gradient-to-br from-[#d97706]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

              <!-- Icon -->
              <div class="relative w-16 h-16 bg-neutral-100 group-hover:bg-[#d97706] rounded-2xl flex items-center justify-center mb-6 transition-all duration-300 group-hover:scale-110 group-hover:rotate-3">
                {program.icon === 'dollar' && <svg class="w-8 h-8 text-neutral-400 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>}
                {program.icon === 'child' && <svg class="w-8 h-8 text-neutral-400 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/></svg>}
                {program.icon === 'droplet' && <svg class="w-8 h-8 text-neutral-400 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/></svg>}
                {program.icon === 'food' && <svg class="w-8 h-8 text-neutral-400 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/></svg>}
                {program.icon === 'emergency' && <svg class="w-8 h-8 text-neutral-400 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/></svg>}
                {program.icon === 'education' && <svg class="w-8 h-8 text-neutral-400 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>}
              </div>

              <!-- Content -->
              <h3 class="relative text-xl font-bold text-neutral-900 mb-2 group-hover:text-[#d97706] transition-colors" style="font-family: 'Signika', sans-serif;">
                {program.title}
              </h3>
              <p class="relative text-neutral-500 mb-4">{program.description}</p>

              <!-- Amount & Arrow -->
              <div class="relative flex items-center justify-between">
                <span class="text-sm font-semibold text-[#d97706]">{program.amount}</span>
                <span class="w-10 h-10 bg-neutral-100 group-hover:bg-[#d97706] rounded-full flex items-center justify-center transition-all duration-300 group-hover:translate-x-2">
                  <svg class="w-5 h-5 text-neutral-400 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- ═══════════════════════════════════════════════════════════════════════
         ACTIVE APPEALS - Horizontal Scroll Carousel
    ════════════════════════════════════════════════════════════════════════ -->
    <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="flex flex-col md:flex-row md:items-end md:justify-between mb-12">
          <div>
            <div class="inline-flex items-center gap-2 bg-red-50 text-red-600 px-4 py-2 rounded-full text-sm font-semibold mb-4">
              <span class="relative flex h-2 w-2">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-red-500"></span>
              </span>
              Active Appeals
            </div>
            <h2 class="text-4xl md:text-5xl font-bold text-neutral-900" style="font-family: 'Signika', sans-serif;">
              Urgent Causes
            </h2>
          </div>
          <a href="/appeals" class="mt-6 md:mt-0 group inline-flex items-center gap-2 text-[#d97706] hover:text-[#b45309] font-semibold transition-colors">
            View all appeals
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Horizontal Scroll Container -->
      <div class="relative">
        <div class="flex gap-6 overflow-x-auto pb-8 px-4 sm:px-6 lg:px-8 snap-x snap-mandatory scrollbar-hide" id="appeals-carousel">
          <div class="w-4 flex-shrink-0 lg:w-[calc((100vw-1280px)/2+1rem)]"></div>

          {campaigns.slice(0, 8).map((campaign, index) => (
            <a href={`/appeals/${campaign.slug}`} class="group flex-shrink-0 w-80 md:w-96 snap-start">
              <div class="relative overflow-hidden rounded-3xl bg-neutral-100 aspect-[3/4]">
                <img
                  src={campaign.featured_image}
                  alt={campaign.title}
                  class="absolute inset-0 w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                  loading={index < 3 ? 'eager' : 'lazy'}
                />
                <!-- Gradient Overlay -->
                <div class="absolute inset-0 bg-gradient-to-t from-black via-black/30 to-transparent opacity-80"></div>

                <!-- Urgent Badge -->
                {campaign.is_urgent && (
                  <div class="absolute top-4 left-4">
                    <span class="inline-flex items-center gap-2 bg-red-500 text-white text-xs font-bold px-4 py-2 rounded-full shadow-lg">
                      <span class="relative flex h-2 w-2">
                        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-white opacity-75"></span>
                        <span class="relative inline-flex rounded-full h-2 w-2 bg-white"></span>
                      </span>
                      URGENT
                    </span>
                  </div>
                )}

                <!-- Content -->
                <div class="absolute bottom-0 left-0 right-0 p-6">
                  {campaign.goal_amount && campaign.raised_amount && (
                    <div class="mb-4">
                      <div class="flex justify-between text-white text-sm mb-2">
                        <span class="font-semibold">${(campaign.raised_amount / 1000).toFixed(0)}K raised</span>
                        <span class="text-white/70">{Math.round((campaign.raised_amount / campaign.goal_amount) * 100)}%</span>
                      </div>
                      <div class="h-2 bg-white/20 rounded-full overflow-hidden backdrop-blur-sm">
                        <div
                          class="h-full bg-gradient-to-r from-[#d97706] to-[#fbbf24] rounded-full"
                          style={`width: ${Math.min((campaign.raised_amount / campaign.goal_amount) * 100, 100)}%`}
                        ></div>
                      </div>
                    </div>
                  )}

                  <h3 class="text-2xl font-bold text-white mb-2" style="font-family: 'Signika', sans-serif;">
                    {campaign.title}
                  </h3>
                  <p class="text-white/70 text-sm line-clamp-2 mb-4">{campaign.description}</p>

                  <span class="inline-flex items-center gap-2 bg-white text-neutral-900 font-semibold px-5 py-2.5 rounded-full text-sm group-hover:bg-[#d97706] group-hover:text-white transition-colors">
                    Donate Now
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                    </svg>
                  </span>
                </div>
              </div>
            </a>
          ))}

          <div class="w-4 flex-shrink-0 lg:w-[calc((100vw-1280px)/2+1rem)]"></div>
        </div>
      </div>
    </section>

    <!-- ═══════════════════════════════════════════════════════════════════════
         DONATE SECTION - Full-Width Interactive
    ════════════════════════════════════════════════════════════════════════ -->
    <section id="donate-section" class="py-24 bg-neutral-900 text-white relative overflow-hidden">
      <!-- Decorative Elements -->
      <div class="absolute top-0 left-0 w-[500px] h-[500px] bg-[#d97706]/20 rounded-full blur-[150px] -translate-x-1/2 -translate-y-1/2"></div>
      <div class="absolute bottom-0 right-0 w-[500px] h-[500px] bg-[#d97706]/10 rounded-full blur-[150px] translate-x-1/2 translate-y-1/2"></div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <!-- Left Content -->
          <div>
