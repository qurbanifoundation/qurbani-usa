<script>
  document.addEventListener('DOMContentLoaded', () => {
    // ═══════════════════════════════════════════════════════════════
    // Hero Carousel
    // ═══════════════════════════════════════════════════════════════
    const slides = document.querySelectorAll('.hero-slide');
    const contents = document.querySelectorAll('.hero-content');
    const dots = document.querySelectorAll('.carousel-dot');
    let currentSlide = 0;
    let autoplayInterval: ReturnType<typeof setInterval>;

    const goToSlide = (index: number) => {
      slides.forEach(slide => slide.classList.replace('opacity-100', 'opacity-0'));
      contents.forEach(content => {
        content.classList.add('hidden', 'opacity-0');
        content.classList.remove('block', 'opacity-100');
      });
      dots.forEach(dot => {
        dot.classList.remove('bg-[#d97706]');
        dot.classList.add('bg-white/30');
      });

      slides[index]?.classList.replace('opacity-0', 'opacity-100');
      contents[index]?.classList.remove('hidden', 'opacity-0');
      contents[index]?.classList.add('block', 'opacity-100');
      dots[index]?.classList.add('bg-[#d97706]');
      dots[index]?.classList.remove('bg-white/30');

      currentSlide = index;
    };

    const nextSlide = () => {
      goToSlide((currentSlide + 1) % slides.length);
    };

    const startAutoplay = () => {
      autoplayInterval = setInterval(nextSlide, 10000);
    };

    const stopAutoplay = () => {
      clearInterval(autoplayInterval);
    };

    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        stopAutoplay();
        goToSlide(index);
        startAutoplay();
      });
    });

    if (slides.length > 1) {
      startAutoplay();
    }

    // ═══════════════════════════════════════════════════════════════
    // Animated Statistics
    // ═══════════════════════════════════════════════════════════════
    const animateStats = () => {
      const stats = document.querySelectorAll('.stat-number');

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const el = entry.target as HTMLElement;
            const target = parseInt(el.dataset.value || '0');
            const suffix = el.dataset.suffix || '';
            const duration = 600; // Fast animation - 0.6 seconds
            const steps = 30; // Total animation steps
            const stepValue = target / steps;
            let current = 0;
            let stepCount = 0;

            const animate = () => {
              stepCount++;
              current = Math.min(stepValue * stepCount, target);

              if (stepCount < steps) {
                if (target >= 1000000) {
                  el.textContent = (current / 1000000).toFixed(1) + 'M' + suffix;
                } else if (target >= 1000) {
                  el.textContent = (current / 1000).toFixed(1) + 'K' + suffix;
                } else {
                  el.textContent = Math.floor(current) + suffix;
                }
                setTimeout(animate, duration / steps);
              } else {
                // Final value
                if (target >= 1000000) {
                  el.textContent = (target / 1000000).toFixed(1) + 'M' + suffix;
                } else if (target >= 1000) {
                  el.textContent = (target / 1000).toFixed(1) + 'K' + suffix;
                } else {
                  el.textContent = target + suffix;
                }
              }
            };

            animate();
            observer.unobserve(el);
          }
        });
      }, { threshold: 0.3 });

      stats.forEach(stat => observer.observe(stat));
    };

    animateStats();

    // ═══════════════════════════════════════════════════════════════
    // Live Donors Counter - Deterministic daily counter
    // Resets at midnight Eastern time, grows throughout day
    // Same number shown to all visitors at any given moment
    // Increments when real donations happen
    // ═══════════════════════════════════════════════════════════════
    const liveDonors = document.getElementById('live-donors');
    if (liveDonors) {
      // Seeded random number generator (deterministic)
      function seededRandom(seed: number): number {
        const x = Math.sin(seed) * 10000;
        return x - Math.floor(x);
      }

      function getEasternTime(): Date {
        const now = new Date();
        // Eastern Time: UTC-5 (EST) or UTC-4 (EDT)
        // Check if DST is in effect
        const jan = new Date(now.getFullYear(), 0, 1);
        const jul = new Date(now.getFullYear(), 6, 1);
        const stdOffset = Math.max(jan.getTimezoneOffset(), jul.getTimezoneOffset());
        const isDST = now.getTimezoneOffset() < stdOffset;
        const etOffset = isDST ? -4 : -5; // EDT or EST

        const utcTime = now.getTime() + (now.getTimezoneOffset() * 60000);
        return new Date(utcTime + (etOffset * 60 * 60 * 1000));
      }

      function getEasternDateKey(): string {
        const et = getEasternTime();
        return `${et.getFullYear()}-${String(et.getMonth() + 1).padStart(2, '0')}-${String(et.getDate()).padStart(2, '0')}`;
      }

      function getRealDonations(): number {
        const dateKey = getEasternDateKey();
        const stored = localStorage.getItem(`donations_${dateKey}`);
        return stored ? parseInt(stored) : 0;
      }

      function addRealDonation(): void {
        const dateKey = getEasternDateKey();
        const current = getRealDonations();
        localStorage.setItem(`donations_${dateKey}`, (current + 1).toString());
        updateDonorDisplay();
      }

      function getBaseDonorCount(): number {
        const easternTime = getEasternTime();

        // Get date string for seed (resets daily)
        const dateKey = getEasternDateKey();
        const dateSeed = dateKey.split('-').reduce((a, b) => a + parseInt(b), 0);

        // Minutes since midnight Eastern time
        const minutesSinceMidnight = easternTime.getHours() * 60 + easternTime.getMinutes();

        // Generate donation events with random intervals
        let donorCount = 0;
        let currentMinute = 0;
        let eventIndex = 0;

        while (currentMinute <= minutesSinceMidnight) {
          const seed = dateSeed * 1000 + eventIndex;
          const rand = seededRandom(seed);

          // Random interval between 2-12 minutes
          const interval = Math.floor(rand * 11) + 2;

          // Sometimes add 1, sometimes 2 donors per event
          const donorsAdded = seededRandom(seed + 0.5) > 0.75 ? 2 : 1;

          currentMinute += interval;
          if (currentMinute <= minutesSinceMidnight) {
            donorCount += donorsAdded;
          }
          eventIndex++;
        }

        return donorCount;
      }

      function getTotalDonorCount(): number {
        return getBaseDonorCount() + getRealDonations();
      }

      function updateDonorDisplay(): void {
        if (liveDonors) {
          liveDonors.textContent = getTotalDonorCount().toString();
        }
      }

      // Expose function globally so addToCart can call it
      (window as any).incrementDonorCount = addRealDonation;

      // Initial display
      updateDonorDisplay();

      // Update every 30 seconds to catch new simulated donations
      setInterval(updateDonorDisplay, 30000);
    }

    // ═══════════════════════════════════════════════════════════════
    // Smooth scroll for anchor links
    // ═══════════════════════════════════════════════════════════════
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const href = (this as HTMLAnchorElement).getAttribute('href');
        if (href) {
          const target = document.querySelector(href);
          if (target) {
            target.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        }
      });
    });
  });
</script>
