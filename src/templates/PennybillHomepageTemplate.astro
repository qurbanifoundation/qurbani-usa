<script>
  document.addEventListener('DOMContentLoaded', () => {
    // ═══════════════════════════════════════════════════════════════
    // Hero Carousel
    // ═══════════════════════════════════════════════════════════════
    const slides = document.querySelectorAll('.hero-slide');
    const contents = document.querySelectorAll('.hero-content');
    const dots = document.querySelectorAll('.carousel-dot');
    let currentSlide = 0;
    let autoplayInterval: ReturnType<typeof setInterval>;

    const goToSlide = (index: number) => {
      slides.forEach(slide => slide.classList.replace('opacity-100', 'opacity-0'));
      contents.forEach(content => {
        content.classList.add('hidden', 'opacity-0');
        content.classList.remove('block', 'opacity-100');
      });
      dots.forEach(dot => {
        dot.classList.remove('bg-[#d97706]');
        dot.classList.add('bg-white/30');
      });

      slides[index]?.classList.replace('opacity-0', 'opacity-100');
      contents[index]?.classList.remove('hidden', 'opacity-0');
      contents[index]?.classList.add('block', 'opacity-100');
      dots[index]?.classList.add('bg-[#d97706]');
      dots[index]?.classList.remove('bg-white/30');

      currentSlide = index;
    };

    const nextSlide = () => {
      goToSlide((currentSlide + 1) % slides.length);
    };

    const startAutoplay = () => {
      autoplayInterval = setInterval(nextSlide, 10000);
    };

    const stopAutoplay = () => {
      clearInterval(autoplayInterval);
    };

    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        stopAutoplay();
        goToSlide(index);
        startAutoplay();
      });
    });

    if (slides.length > 1) {
      startAutoplay();
    }

    // ═══════════════════════════════════════════════════════════════
    // Animated Statistics
    // ═══════════════════════════════════════════════════════════════
    const animateStats = () => {
      const stats = document.querySelectorAll('.stat-number');

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const el = entry.target as HTMLElement;
            const target = parseInt(el.dataset.value || '0');
            const suffix = el.dataset.suffix || '';
            const duration = 600; // Fast animation - 0.6 seconds
            const steps = 30; // Total animation steps
            const stepValue = target / steps;
            let current = 0;
            let stepCount = 0;

            const animate = () => {
              stepCount++;
              current = Math.min(stepValue * stepCount, target);

              if (stepCount < steps) {
                if (target >= 1000000) {
                  el.textContent = (current / 1000000).toFixed(1) + 'M' + suffix;
                } else if (target >= 1000) {
                  el.textContent = (current / 1000).toFixed(1) + 'K' + suffix;
                } else {
                  el.textContent = Math.floor(current) + suffix;
                }
                setTimeout(animate, duration / steps);
              } else {
                // Final value
                if (target >= 1000000) {
                  el.textContent = (target / 1000000).toFixed(1) + 'M' + suffix;
                } else if (target >= 1000) {
                  el.textContent = (target / 1000).toFixed(1) + 'K' + suffix;
                } else {
                  el.textContent = target + suffix;
                }
              }
            };

            animate();
            observer.unobserve(el);
          }
        });
      }, { threshold: 0.3 });

      stats.forEach(stat => observer.observe(stat));
    };

    animateStats();

    // ═══════════════════════════════════════════════════════════════
    // Live Donors Counter - Deterministic daily counter
    // Resets at midnight Eastern time, grows throughout day
    // Same number shown to all visitors at any given moment
    // Increments when real donations happen
    // ═══════════════════════════════════════════════════════════════
    const liveDonors = document.getElementById('live-donors');
    if (liveDonors) {
      // Seeded random number generator (deterministic)
      function seededRandom(seed: number): number {
        const x = Math.sin(seed) * 10000;
        return x - Math.floor(x);
      }

      function getEasternTime(): Date {
        const now = new Date();
        // Eastern Time: UTC-5 (EST) or UTC-4 (EDT)
        // Check if DST is in effect
        const jan = new Date(now.getFullYear(), 0, 1);
        const jul = new Date(now.getFullYear(), 6, 1);
        const stdOffset = Math.max(jan.getTimezoneOffset(), jul.getTimezoneOffset());
        const isDST = now.getTimezoneOffset() < stdOffset;
        const etOffset = isDST ? -4 : -5; // EDT or EST

        const utcTime = now.getTime() + (now.getTimezoneOffset() * 60000);
        return new Date(utcTime + (etOffset * 60 * 60 * 1000));
      }

      function getEasternDateKey(): string {
        const et = getEasternTime();
        return `${et.getFullYear()}-${String(et.getMonth() + 1).padStart(2, '0')}-${String(et.getDate()).padStart(2, '0')}`;
      }

      function getRealDonations(): number {
        const dateKey = getEasternDateKey();
        const stored = localStorage.getItem(`donations_${dateKey}`);
        return stored ? parseInt(stored) : 0;
      }

      function addRealDonation(): void {
        const dateKey = getEasternDateKey();
        const current = getRealDonations();
        localStorage.setItem(`donations_${dateKey}`, (current + 1).toString());
        updateDonorDisplay();
      }

      function getBaseDonorCount(): number {
        const easternTime = getEasternTime();

        // Get date string for seed (resets daily)
        const dateKey = getEasternDateKey();
        const dateSeed = dateKey.split('-').reduce((a, b) => a + parseInt(b), 0);

        // Minutes since midnight Eastern time
        const minutesSinceMidnight = easternTime.getHours() * 60 + easternTime.getMinutes();

        // Generate donation events with random intervals
        let donorCount = 0;
        let currentMinute = 0;
        let eventIndex = 0;

        while (currentMinute <= minutesSinceMidnight) {
          const seed = dateSeed * 1000 + eventIndex;
          const rand = seededRandom(seed);

          // Random interval between 2-12 minutes
          const interval = Math.floor(rand * 11) + 2;

          // Sometimes add 1, sometimes 2 donors per event
          const donorsAdded = seededRandom(seed + 0.5) > 0.75 ? 2 : 1;

          currentMinute += interval;
          if (currentMinute <= minutesSinceMidnight) {
            donorCount += donorsAdded;
          }
          eventIndex++;
        }

        return donorCount;
      }

      function getTotalDonorCount(): number {
        return getBaseDonorCount() + getRealDonations();
      }

      function updateDonorDisplay(): void {
        if (liveDonors) {
          liveDonors.textContent = getTotalDonorCount().toString();
        }
      }

      // Expose function globally so addToCart can call it
      (window as any).incrementDonorCount = addRealDonation;

      // Initial display
      updateDonorDisplay();

      // Update every 30 seconds to catch new simulated donations
      setInterval(updateDonorDisplay, 30000);
    }

    // ═══════════════════════════════════════════════════════════════
    // Quick Donate functionality
    // ═══════════════════════════════════════════════════════════════
    const amountBtns = document.querySelectorAll('.amount-btn');
    const fundBtns = document.querySelectorAll('.fund-btn');
    const customAmount = document.getElementById('custom-amount') as HTMLInputElement;
    const monthlyToggle = document.getElementById('monthly-toggle') as HTMLInputElement;
    const donateBtn = document.getElementById('hero-donate-btn');
    const fundSelect = document.getElementById('fund-select') as HTMLInputElement;

    let selectedAmount = 0; // No default selection
    let selectedFund = 'where-needed';
    let selectedImpact = ''; // No default selection
    let isMonthly = false;

    const fundLabels: Record<string, string> = {
      'where-needed': 'Where Most Needed',
      'zakat': 'Zakat',
      'orphans': 'Orphan Care',
      'palestine': 'Palestine Emergency',
      'food': 'Food Aid',
      'water': 'Water Projects'
    };

    const impactLabels: Record<number, string> = {
      100: 'Feed a family for a month',
      45: 'Sponsor an orphan for a month',
      250: 'Build a water well',
      500: 'Emergency shelter'
    };

    // Amount button click
    amountBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        amountBtns.forEach(b => {
          b.classList.remove('border-[#d97706]', 'bg-amber-50');
          b.classList.add('border-neutral-200');
          const amountText = b.querySelector('div:first-child');
          const impactText = b.querySelector('div:last-child');
          if (amountText) {
            amountText.classList.remove('text-[#d97706]');
            amountText.classList.add('text-neutral-800');
          }
          if (impactText) {
            impactText.classList.remove('text-amber-700');
            impactText.classList.add('text-neutral-500');
          }
        });
        btn.classList.add('border-[#d97706]', 'bg-amber-50');
        btn.classList.remove('border-neutral-200');
        const amountText = btn.querySelector('div:first-child');
        const impactText = btn.querySelector('div:last-child');
        if (amountText) {
          amountText.classList.add('text-[#d97706]');
          amountText.classList.remove('text-neutral-800');
        }
        if (impactText) {
          impactText.classList.add('text-amber-700');
          impactText.classList.remove('text-neutral-500');
        }
        selectedAmount = parseInt(btn.getAttribute('data-amount') || '100');
        // Get the impact text from the button
        const impact = btn.querySelector('div:last-child');
        if (impact) {
          selectedImpact = impact.textContent || impactLabels[selectedAmount] || `$${selectedAmount} Donation`;
        }
        if (customAmount) customAmount.value = '';
      });
    });

    // Custom amount input
    customAmount?.addEventListener('input', () => {
      if (customAmount.value) {
        amountBtns.forEach(b => {
          b.classList.remove('border-[#d97706]', 'bg-amber-50');
          b.classList.add('border-neutral-200');
        });
        selectedAmount = parseInt(customAmount.value) || 0;
        selectedImpact = `$${selectedAmount} Donation`; // Custom amount has generic label
      }
    });

    // Fund button click
    fundBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        fundBtns.forEach(b => {
          b.classList.remove('border-[#d97706]', 'bg-amber-50');
          b.classList.add('border-neutral-200');
          const icon = b.querySelector('svg');
          const label = b.querySelector('span');
          if (icon) {
            icon.classList.remove('text-[#d97706]');
            icon.classList.add('text-neutral-500');
          }
          if (label) {
            label.classList.remove('text-[#d97706]');
            label.classList.add('text-neutral-600');
          }
        });
        btn.classList.add('border-[#d97706]', 'bg-amber-50');
        btn.classList.remove('border-neutral-200');
        const icon = btn.querySelector('svg');
        const label = btn.querySelector('span');
        if (icon) {
          icon.classList.add('text-[#d97706]');
          icon.classList.remove('text-neutral-500');
        }
        if (label) {
          label.classList.add('text-[#d97706]');
          label.classList.remove('text-neutral-600');
        }
        selectedFund = btn.getAttribute('data-fund') || 'where-needed';
        if (fundSelect) fundSelect.value = selectedFund;
      });
    });

    // Monthly toggle
    monthlyToggle?.addEventListener('change', () => {
      isMonthly = monthlyToggle.checked;
    });

    // Donate button click
    donateBtn?.addEventListener('click', () => {
      if (selectedAmount > 0 && typeof (window as any).addToCart === 'function') {
        const fundName = fundLabels[selectedFund] || 'Where Most Needed';

        (window as any).addToCart({
          id: `donation-${selectedFund}-${Date.now()}`,
          type: 'donation',
          name: selectedImpact, // Impact statement as main title (e.g., "Feeds 5 families")
          label: `$${selectedAmount}`, // Amount label
          amount: selectedAmount,
          quantity: 1,
          description: `${fundName} • ${isMonthly ? 'Monthly' : 'One-time'}`, // Fund category in description
          frequency: isMonthly ? 'monthly' : 'single'
        });

        // Increment the live donor count
        if (typeof (window as any).incrementDonorCount === 'function') {
          (window as any).incrementDonorCount();
        }
      }
    });

    // ═══════════════════════════════════════════════════════════════
    // Smooth scroll for anchor links
    // ═══════════════════════════════════════════════════════════════
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const href = (this as HTMLAnchorElement).getAttribute('href');
        if (href) {
          const target = document.querySelector(href);
          if (target) {
            target.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        }
      });
    });
  });
</script>
