---
/**
 * Pennybill Homepage Template
 *
 * A professional charity homepage template inspired by Penny Appeal,
 * featuring:
 * - Emergency alert banner
 * - Hero carousel with multiple slides
 * - Animated statistics
 * - Active appeals grid with progress bars
 * - 100% Zakat Policy trust section
 * - How We Work process steps
 * - Programs grid
 * - Testimonials carousel
 * - Trust badges
 * - Newsletter signup
 * - CTA banner
 *
 * Primary Color: #d97706 (Amber/Orange)
 */

import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import CWDonationBox from '../components/donation/CWDonationBox.astro';
import HomeDonationBox from '../components/donation/HomeDonationBox.astro';
import { supabaseAdmin } from '../lib/supabase';

// Fetch campaigns for Emergency Appeals section
// Fetches all active campaigns from the "emergencies" category
// Dynamically updates when new emergency campaigns are added
let campaigns: any[] = [];

try {
  const { data, error } = await supabaseAdmin
    .from('campaigns')
    .select('*')
    .eq('is_active', true)
    .eq('category', 'emergencies')
    .order('display_order', { ascending: true })
    .limit(6);

  if (error) {
    console.error('[Homepage] Error fetching emergency campaigns:', error);
  } else if (data && data.length > 0) {
    campaigns = data;
    console.log('[Homepage] Fetched', data.length, 'emergency campaigns from DB');
  } else {
    console.log('[Homepage] No emergency campaigns found in the "emergencies" category');
  }
} catch (e) {
  console.error('[Homepage] Error fetching campaigns:', e);
}

// Fetch donation box template setting
// Priority: page-level override > site default > fallback
let donationBoxTemplate = 'pennybill-default';
let homepageDonationBoxHeading = '';
try {
  // Check page-level override first (Home page)
  const { data: homePage } = await supabaseAdmin
    .from('pages')
    .select('donation_box_template')
    .eq('slug', '/home')
    .single();

  if (homePage?.donation_box_template) {
    donationBoxTemplate = homePage.donation_box_template;
  } else {
    // Fall back to site default
    const { data: dbSettings } = await supabaseAdmin
      .from('site_settings')
      .select('default_donation_box_template, donation_box_heading')
      .eq('id', 'main')
      .single();
    if (dbSettings?.default_donation_box_template) {
      donationBoxTemplate = dbSettings.default_donation_box_template;
    }
    if (dbSettings?.donation_box_heading) {
      homepageDonationBoxHeading = dbSettings.donation_box_heading;
    }
  }
  // If heading not set yet, try fetching it separately
  if (!homepageDonationBoxHeading) {
    const { data: headingSettings } = await supabaseAdmin
      .from('site_settings')
      .select('donation_box_heading')
      .eq('id', 'main')
      .single();
    if (headingSettings?.donation_box_heading) {
      homepageDonationBoxHeading = headingSettings.donation_box_heading;
    }
  }
} catch (e) {
  console.error('[Homepage] Error fetching donation box template setting:', e);
}
const isCWDonation = donationBoxTemplate === 'cw-donation';
const isHomeDonation = donationBoxTemplate === 'home-donation';

// Hero slides data
const heroSlides = [
  {
    image: '/images/qurbani-foundation-zakat-hero.png',
    eyebrow: '100% Zakat Policy',
    headline: 'Your Zakat,',
    headlineAccent: 'Their Future',
    description: 'Empowering lives with every donation. Join thousands in delivering 100% of your Zakat directly to those who need it most.',
    primaryCta: { text: 'Give Zakat', href: '/zakat' },
    secondaryCta: { text: 'Calculate Zakat', href: '/zakat-calculator' }
  },
  {
    image: '/images/qurbani-foundation-orphan-sponsorship.jpg',
    eyebrow: 'Change a Life Today',
    headline: 'Sponsor an',
    headlineAccent: 'Orphan',
    description: 'For just $45/month, you can provide education, healthcare, and hope to a child who has lost everything.',
    primaryCta: { text: 'Sponsor Now', href: '/appeals/sponsor-an-orphan' },
    secondaryCta: { text: 'About Orphan Sponsorship', href: '/appeals/sponsor-an-orphan' }
  },
  {
    image: '/images/qurbani-foundation-food-distribution.png',
    eyebrow: 'Emergency Response',
    headline: 'Feed a',
    headlineAccent: 'Family',
    description: 'Millions are facing starvation. Your donation provides nutritious food packs to families in desperate need.',
    primaryCta: { text: 'Feed Families', href: '/food-packs' },
    secondaryCta: { text: 'View Food Programs', href: '/food-packs' }
  }
];
---

<Layout title="Qurbani Foundation - A Muslim Charity Serving Humanity | 100% Zakat Policy">
  <Navbar />

  <main class="overflow-hidden">
    <!-- ═══════════════════════════════════════════════════════════════════════
         HERO SECTION - Full viewport with carousel
    ════════════════════════════════════════════════════════════════════════ -->
    <section class="relative min-h-screen flex items-center">
      <!-- Carousel Background -->
      <div id="hero-carousel" class="absolute inset-0">
        {heroSlides.map((slide, index) => (
          <div
            class={`hero-slide absolute inset-0 transition-opacity duration-1000 ${index === 0 ? 'opacity-100' : 'opacity-0'}`}
            data-slide={index}
          >
            <img
              src={slide.image}
              alt="Qurbani Foundation"
              class="w-full h-full object-cover"
              loading={index === 0 ? 'eager' : 'lazy'}
            />
            <div class="absolute inset-0 bg-gradient-to-r from-black/90 via-black/70 to-black/30"></div>
          </div>
        ))}
      </div>

      <!-- Content -->
      <div class="relative z-10 w-full">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32">
          <div class="grid lg:grid-cols-5 gap-16 items-center">

            <!-- Left Content (3 cols) -->
            <div class="lg:col-span-3 text-white">
              {heroSlides.map((slide, index) => (
                <div
                  class={`hero-content transition-all duration-700 ${index === 0 ? 'block opacity-100' : 'hidden opacity-0'}`}
                  data-content={index}
                >
                  <!-- Eyebrow -->
                  <div class="inline-flex items-center gap-3 mb-8">
                    <span class="h-px w-12 bg-[#d97706]"></span>
                    <span class="text-[#d97706] text-sm font-semibold tracking-widest uppercase">{slide.eyebrow}</span>
                  </div>

                  <!-- Headline -->
                  <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold leading-[1.1] mb-8 tracking-tight" style="font-family: 'Signika', sans-serif;">
                    {slide.headline}<br/>
                    <span class="text-[#d97706]">{slide.headlineAccent}</span>
                  </h1>

                  <!-- Subheadline -->
                  <p class="text-xl md:text-2xl text-white/70 mb-10 max-w-2xl leading-relaxed font-light">
                    {slide.description}
                  </p>

                  <!-- CTA Buttons -->
                  <div class="flex flex-wrap gap-4 mb-16">
                    <a href={slide.primaryCta.href} class="group inline-flex items-center gap-3 bg-[#d97706] hover:bg-[#b45309] text-white font-semibold px-8 py-4 rounded-full transition-all shadow-lg shadow-[#d97706]/25 hover:shadow-xl hover:shadow-[#d97706]/40">
                      <span>{slide.primaryCta.text}</span>
                      <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                      </svg>
                    </a>
                    <a href={slide.secondaryCta.href} class="inline-flex items-center gap-3 bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white font-semibold px-8 py-4 rounded-full transition-all border border-white/20">
                      <span>{slide.secondaryCta.text}</span>
                    </a>
                  </div>
                </div>
              ))}

              <!-- Trust Stats (always visible) -->
              <div class="grid grid-cols-3 gap-8 pt-8 border-t border-white/10">
                <div>
                  <div class="text-3xl md:text-4xl font-bold text-white mb-1" style="font-family: 'Signika', sans-serif;">2M+</div>
                  <div class="text-white/50 text-sm">Lives Changed</div>
                </div>
                <div>
                  <div class="text-3xl md:text-4xl font-bold text-white mb-1" style="font-family: 'Signika', sans-serif;">53+</div>
                  <div class="text-white/50 text-sm">Countries</div>
                </div>
                <div>
                  <div class="text-3xl md:text-4xl font-bold text-white mb-1" style="font-family: 'Signika', sans-serif;">100%</div>
                  <div class="text-white/50 text-sm">Zakat Delivered</div>
                </div>
              </div>

              <!-- Carousel Indicators -->
              <div class="flex items-center gap-3 mt-8">
                {heroSlides.map((_, index) => (
                  <button
                    class={`carousel-dot w-12 h-1 rounded-full transition-all ${index === 0 ? 'bg-[#d97706]' : 'bg-white/30 hover:bg-white/50'}`}
                    data-goto={index}
                  ></button>
                ))}
              </div>
            </div>

            <!-- Right: Donation Widget (2 cols) -->
            <div class="lg:col-span-2" id="donate">
              {isCWDonation ? (
                <CWDonationBox
                  campaignSlug="where-needed"
                  campaignTitle="Where Most Needed"
                  campaignImage="/images/qurbani-foundation-zakat-hero.png"
                  monthlyAmounts={[10, 20, 40, 100]}
                  oneTimeAmounts={[50, 100, 150, 200]}
                  impactTexts={{
                    monthly: {
                      10: 'Feed a child for a month',
                      20: 'Provide clean water for a family',
                      40: 'Support an orphan for a month',
                      100: 'Transform an entire community'
                    },
                    single: {
                      50: 'Provide emergency food parcels',
                      100: 'Feed a family for a month',
                      150: 'Build a water well share',
                      200: 'Emergency shelter for a family'
                    }
                  }}
                  monthlyImpactText="Your monthly gift serves people all year long."
                  upsellBody="Make your gift go further by giving monthly. Monthly donors provide sustainable support that changes lives all year."
                  upsellSubText="Monthly giving helps us plan ahead and reach more people in need."
                  upsellMonthlyRatio={0.4}
                  buttonTextMonthly="JOIN TODAY"
                  buttonTextOneTime="GIVE"
                  donationBoxHeading={homepageDonationBoxHeading}
                />
              ) : (
                <HomeDonationBox campaignSlug="where-needed" campaignTitle="Where Most Needed" />
              )}
            </div>
          </div>
        </div>
      </div>

      <!-- Scroll Indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2">
        <div class="w-6 h-10 border-2 border-white/30 rounded-full flex justify-center pt-2">
          <div class="w-1.5 h-3 bg-white/50 rounded-full animate-bounce"></div>
        </div>
      </div>
    </section>

    <!-- ═══════════════════════════════════════════════════════════════════════
         IMPACT NUMBERS - Animated stats bar
    ════════════════════════════════════════════════════════════════════════ -->
    <section class="py-8 bg-neutral-900 border-y border-neutral-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
          <div class="group">
            <div class="text-3xl md:text-4xl font-bold text-white mb-1 stat-number" data-value="2000000" data-suffix="+" style="font-family: 'Signika', sans-serif;">0</div>
            <div class="text-neutral-500 text-sm group-hover:text-[#d97706] transition-colors">Lives Impacted</div>
          </div>
          <div class="group">
            <div class="text-3xl md:text-4xl font-bold text-white mb-1 stat-number" data-value="15847" data-suffix="+" style="font-family: 'Signika', sans-serif;">0</div>
            <div class="text-neutral-500 text-sm group-hover:text-[#d97706] transition-colors">Orphans Supported</div>
          </div>
          <div class="group">
            <div class="text-3xl md:text-4xl font-bold text-white mb-1 stat-number" data-value="15600" data-suffix="+" style="font-family: 'Signika', sans-serif;">0</div>
            <div class="text-neutral-500 text-sm group-hover:text-[#d97706] transition-colors">Water Wells Built</div>
          </div>
          <div class="group">
            <div class="text-3xl md:text-4xl font-bold text-white mb-1 stat-number" data-value="53" data-suffix="+" style="font-family: 'Signika', sans-serif;">0</div>
            <div class="text-neutral-500 text-sm group-hover:text-[#d97706] transition-colors">Countries Reached</div>
          </div>
        </div>
      </div>
    </section>

    <!-- ═══════════════════════════════════════════════════════════════════════
         EMERGENCY APPEALS - Card grid with hover effects (only shows if DB has urgent campaigns)
    ════════════════════════════════════════════════════════════════════════ -->
    {campaigns.length > 0 && (
    <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="flex flex-col md:flex-row md:items-end md:justify-between mb-12">
          <div>
            <div class="inline-flex items-center gap-3 mb-4">
              <span class="h-px w-8 bg-[#d97706]"></span>
              <span class="text-[#d97706] text-sm font-semibold tracking-widest uppercase">Emergency Appeals</span>
            </div>
            <h2 class="text-4xl md:text-5xl font-bold text-neutral-900" style="font-family: 'Signika', sans-serif;">
              Where Your Help is Needed
            </h2>
          </div>
          <a href="/appeals" class="mt-6 md:mt-0 group inline-flex items-center gap-2 text-neutral-600 hover:text-[#d97706] font-medium transition-colors">
            View all appeals
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>

        <!-- Appeals Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {campaigns.slice(0, 6).map((campaign, index) => (
            <a href={`/appeals/${campaign.slug || campaign.id}`} class="group block">
              <div class="relative overflow-hidden rounded-2xl bg-neutral-100 aspect-[4/3] mb-4">
                <img
                  src={campaign.featured_image}
                  alt={campaign.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
                  loading={index < 3 ? 'eager' : 'lazy'}
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>

                {campaign.is_urgent && (
                  <div class="absolute top-4 left-4">
                    <span class="inline-flex items-center gap-1.5 bg-red-500 text-white text-xs font-bold px-3 py-1.5 rounded-full shadow-lg">
                      <span class="relative flex h-2 w-2">
                        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-white opacity-75"></span>
                        <span class="relative inline-flex rounded-full h-2 w-2 bg-white"></span>
                      </span>
                      URGENT
                    </span>
                  </div>
                )}

                <!-- Quick Donate Button - Centered on hover -->
                <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300">
                  <span class="inline-flex items-center gap-2 bg-[#d97706] text-white text-sm font-bold px-6 py-3 rounded-full shadow-lg transform scale-90 group-hover:scale-100 transition-transform duration-300">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                    </svg>
                    Donate Now
                  </span>
                </div>

                <!-- Title and Progress - Bottom of card -->
                <div class="absolute bottom-4 left-4 right-4">
                  <h3 class="text-xl font-bold text-white mb-2 drop-shadow-lg" style="font-family: 'Signika', sans-serif;">
                    {campaign.title || campaign.name}
                  </h3>
                  {campaign.goal_amount && campaign.raised_amount && (
                    <div>
                      <div class="flex justify-between text-white text-sm mb-2">
                        <span class="font-semibold">${(campaign.raised_amount / 1000).toFixed(0)}K raised</span>
                        <span class="text-white/70">{Math.round((campaign.raised_amount / campaign.goal_amount) * 100)}%</span>
                      </div>
                      <div class="h-1.5 bg-white/30 rounded-full overflow-hidden backdrop-blur-sm">
                        <div
                          class="h-full bg-gradient-to-r from-[#d97706] to-[#f59e0b] rounded-full transition-all duration-1000"
                          style={`width: ${Math.min((campaign.raised_amount / campaign.goal_amount) * 100, 100)}%`}
                        ></div>
                      </div>
                    </div>
                  )}
                </div>
              </div>

              <p class="text-neutral-600 text-sm line-clamp-2 leading-relaxed group-hover:text-neutral-900 transition-colors">
                {campaign.description}
              </p>
            </a>
          ))}
        </div>
      </div>
    </section>
    )}

    <!-- ═══════════════════════════════════════════════════════════════════════
         100% ZAKAT POLICY - Trust Section with video-like visual
    ════════════════════════════════════════════════════════════════════════ -->
    <section class="py-24 bg-neutral-900 text-white relative overflow-hidden">
      <!-- Animated background pattern -->
      <div class="absolute inset-0">
        <div class="absolute inset-0 opacity-5" style="background-image: url('data:image/svg+xml,%3Csvg width=%2260%22 height=%2260%22 viewBox=%220 0 60 60%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%23ffffff%22 fill-opacity=%221%22%3E%3Cpath d=%22M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
        <!-- Gradient orbs -->
        <div class="absolute top-0 right-0 w-96 h-96 bg-[#d97706]/10 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 left-0 w-96 h-96 bg-[#d97706]/5 rounded-full blur-3xl"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <!-- Left -->
          <div>
            <div class="inline-flex items-center gap-3 mb-6">
              <span class="h-px w-8 bg-[#d97706]"></span>
              <span class="text-[#d97706] text-sm font-semibold tracking-widest uppercase">Our Promise</span>
            </div>

            <h2 class="text-4xl md:text-5xl font-bold leading-tight mb-6" style="font-family: 'Signika', sans-serif;">
              100% of Your Zakat<br/>
              <span class="text-[#d97706]">Reaches Those in Need</span>
            </h2>

            <p class="text-xl text-neutral-400 mb-10 leading-relaxed">
              We don't take a single penny from your Zakat for admin costs. Our operations are funded separately, ensuring every cent of your sacred trust goes directly to those who need it.
            </p>

            <div class="grid grid-cols-2 gap-6 mb-10">
              <div class="bg-white/5 rounded-2xl p-6 border border-white/10 backdrop-blur-sm hover:border-[#d97706]/30 transition-colors">
                <div class="text-4xl font-bold text-[#d97706] mb-2" style="font-family: 'Signika', sans-serif;">$0</div>
                <div class="text-neutral-400">Admin fees from Zakat</div>
              </div>
              <div class="bg-white/5 rounded-2xl p-6 border border-white/10 backdrop-blur-sm hover:border-[#d97706]/30 transition-colors">
                <div class="text-4xl font-bold text-[#d97706] mb-2" style="font-family: 'Signika', sans-serif;">100%</div>
                <div class="text-neutral-400">To beneficiaries</div>
              </div>
            </div>

            <a href="/zakat" class="group inline-flex items-center gap-3 bg-[#d97706] hover:bg-[#b45309] text-white font-semibold px-8 py-4 rounded-full transition-all shadow-lg shadow-[#d97706]/25 hover:shadow-xl hover:shadow-[#d97706]/40 hover:-translate-y-0.5">
              <span>Calculate Your Zakat</span>
              <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>

          <!-- Right - Stats Grid -->
          <div class="grid grid-cols-2 gap-6">
            <div class="bg-white/5 rounded-3xl p-8 border border-white/10 text-center backdrop-blur-sm hover:border-[#d97706]/30 hover:bg-white/10 transition-all group">
              <div class="w-16 h-16 bg-[#d97706]/20 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
                <svg class="w-8 h-8 text-[#d97706]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
              </div>
              <div class="text-3xl font-bold mb-1" style="font-family: 'Signika', sans-serif;">15.8K+</div>
              <div class="text-neutral-400 text-sm">Orphans Supported</div>
            </div>

            <div class="bg-white/5 rounded-3xl p-8 border border-white/10 text-center backdrop-blur-sm hover:border-[#d97706]/30 hover:bg-white/10 transition-all group">
              <div class="w-16 h-16 bg-[#d97706]/20 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
                <svg class="w-8 h-8 text-[#d97706]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="text-3xl font-bold mb-1" style="font-family: 'Signika', sans-serif;">53+</div>
              <div class="text-neutral-400 text-sm">Countries Reached</div>
            </div>

            <div class="bg-white/5 rounded-3xl p-8 border border-white/10 text-center backdrop-blur-sm hover:border-[#d97706]/30 hover:bg-white/10 transition-all group">
              <div class="w-16 h-16 bg-[#d97706]/20 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
                <svg class="w-8 h-8 text-[#d97706]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
              </div>
              <div class="text-3xl font-bold mb-1" style="font-family: 'Signika', sans-serif;">2M+</div>
