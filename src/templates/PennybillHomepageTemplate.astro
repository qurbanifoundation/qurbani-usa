---
/**
 * Pennybill Homepage Template
 *
 * A professional charity homepage template inspired by Penny Appeal,
 * featuring:
 * - Emergency alert banner
 * - Hero carousel with multiple slides
 * - Animated statistics
 * - Active appeals grid with progress bars
 * - 100% Zakat Policy trust section
 * - How We Work process steps
 * - Programs grid
 * - Testimonials carousel
 * - Trust badges
 * - Newsletter signup
 * - CTA banner
 *
 * Primary Color: #d97706 (Amber/Orange)
 */

import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { supabaseAdmin } from '../lib/supabase';

// Fetch emergency campaigns only (is_urgent = true)
let campaigns: any[] = [];
let usingFallback = false;

try {
  const { data, error } = await supabaseAdmin
    .from('campaigns')
    .select('*')
    .eq('is_active', true)
    .eq('is_urgent', true)
    .order('display_order', { ascending: true })
    .limit(6);

  if (data && data.length > 0) {
    campaigns = data;
    console.log('[Homepage] Fetched', data.length, 'urgent campaigns from DB:', data.map(c => c.slug || c.id));
  } else {
    console.log('[Homepage] No urgent campaigns found in DB (is_urgent = true)');
    // Don't fallback to non-urgent campaigns - only show emergency campaigns here
  }
} catch (e) {
  console.error('[Homepage] Error fetching campaigns:', e);
}

// Fallback to donate page if DB has nothing (shouldn't happen in production)
if (campaigns.length === 0) {
  usingFallback = true;
  console.log('[Homepage] Using static fallback campaigns - these link to /donate');
  // Note: These are placeholder campaigns that link to /donate since they don't exist in DB
  campaigns = [
    { id: 'fallback-1', title: 'Palestine Emergency', slug: null, description: 'Urgent humanitarian aid for families affected by the crisis in Gaza and Palestine.', featured_image: 'https://images.unsplash.com/photo-1469571486292-0ba58a3f068b?w=800&h=600&fit=crop&auto=format', is_urgent: true, goal_amount: 500000, raised_amount: 387500 },
    { id: 'fallback-2', title: 'Yemen Crisis', slug: null, description: 'Support families affected by the devastating humanitarian crisis in Yemen.', featured_image: 'https://images.unsplash.com/photo-1488521787991-ed7bbaae773c?w=800&h=600&fit=crop&auto=format', is_urgent: true, goal_amount: 300000, raised_amount: 234000 },
    { id: 'fallback-3', title: 'Syria Emergency', slug: null, description: 'Provide critical relief to Syrian families displaced by ongoing conflict.', featured_image: 'https://images.unsplash.com/photo-1532629345422-7515f3d16bb6?w=800&h=600&fit=crop&auto=format', is_urgent: true, goal_amount: 400000, raised_amount: 312000 },
    { id: 'fallback-4', title: 'Sudan Crisis', slug: null, description: 'Emergency relief for families caught in the ongoing humanitarian crisis in Sudan.', featured_image: 'https://images.unsplash.com/photo-1547471080-7cc2caa01a7e?w=800&h=600&fit=crop&auto=format', is_urgent: true, goal_amount: 250000, raised_amount: 178000 },
    { id: 'fallback-5', title: 'Afghanistan Emergency', slug: null, description: 'Provide food, shelter, and medical aid to families facing extreme hardship.', featured_image: 'https://images.unsplash.com/photo-1509099836639-18ba1795216d?w=800&h=600&fit=crop&auto=format', is_urgent: true, goal_amount: 350000, raised_amount: 267000 },
    { id: 'fallback-6', title: 'Gaza Relief', slug: null, description: 'Urgent support for displaced families in Gaza with food, water, and shelter.', featured_image: 'https://images.unsplash.com/photo-1542810634-71277d95dcbb?w=800&h=600&fit=crop&auto=format', is_urgent: true, goal_amount: 600000, raised_amount: 445000 },
  ];
}

// Hero slides data
const heroSlides = [
  {
    image: '/images/qurbani-foundation-zakat-hero.png',
    eyebrow: '100% Zakat Policy',
    headline: 'Your Zakat,',
    headlineAccent: 'Their Future',
    description: 'Empowering lives with every donation. Join thousands in delivering 100% of your Zakat directly to those who need it most.',
    primaryCta: { text: 'Give Zakat', href: '/zakat' },
    secondaryCta: { text: 'Calculate Zakat', href: '/zakat-calculator' }
  },
  {
    image: '/images/qurbani-foundation-orphan-sponsorship.jpg',
    eyebrow: 'Change a Life Today',
    headline: 'Sponsor an',
    headlineAccent: 'Orphan',
    description: 'For just $45/month, you can provide education, healthcare, and hope to a child who has lost everything.',
    primaryCta: { text: 'Sponsor Now', href: '/appeals/orphan-sponsorship' },
    secondaryCta: { text: 'Learn More', href: '/appeals/orphan-sponsorship' }
  },
  {
    image: '/images/qurbani-foundation-food-distribution.png',
    eyebrow: 'Emergency Response',
    headline: 'Feed a',
    headlineAccent: 'Family',
    description: 'Millions are facing starvation. Your donation provides nutritious food packs to families in desperate need.',
    primaryCta: { text: 'Feed Families', href: '/food-packs' },
    secondaryCta: { text: 'View Food Programs', href: '/food-packs' }
  }
];
---

<Layout title="Qurbani Foundation - A Muslim Charity Serving Humanity | 100% Zakat Policy">
  <Navbar />

  <main class="overflow-hidden">
    <!-- ═══════════════════════════════════════════════════════════════════════
         HERO SECTION - Full viewport with carousel
    ════════════════════════════════════════════════════════════════════════ -->
    <section class="relative min-h-screen flex items-center">
      <!-- Carousel Background -->
      <div id="hero-carousel" class="absolute inset-0">
        {heroSlides.map((slide, index) => (
          <div
            class={`hero-slide absolute inset-0 transition-opacity duration-1000 ${index === 0 ? 'opacity-100' : 'opacity-0'}`}
            data-slide={index}
          >
            <img
              src={slide.image}
              alt="Qurbani Foundation"
              class="w-full h-full object-cover"
              loading={index === 0 ? 'eager' : 'lazy'}
            />
            <div class="absolute inset-0 bg-gradient-to-r from-black/90 via-black/70 to-black/30"></div>
          </div>
        ))}
      </div>

      <!-- Content -->
      <div class="relative z-10 w-full">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32">
          <div class="grid lg:grid-cols-5 gap-16 items-center">

            <!-- Left Content (3 cols) -->
            <div class="lg:col-span-3 text-white">
              {heroSlides.map((slide, index) => (
                <div
                  class={`hero-content transition-all duration-700 ${index === 0 ? 'block opacity-100' : 'hidden opacity-0'}`}
                  data-content={index}
                >
                  <!-- Eyebrow -->
                  <div class="inline-flex items-center gap-3 mb-8">
                    <span class="h-px w-12 bg-[#d97706]"></span>
                    <span class="text-[#d97706] text-sm font-semibold tracking-widest uppercase">{slide.eyebrow}</span>
                  </div>

                  <!-- Headline -->
                  <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold leading-[1.1] mb-8 tracking-tight" style="font-family: 'Signika', sans-serif;">
                    {slide.headline}<br/>
                    <span class="text-[#d97706]">{slide.headlineAccent}</span>
                  </h1>

                  <!-- Subheadline -->
                  <p class="text-xl md:text-2xl text-white/70 mb-10 max-w-2xl leading-relaxed font-light">
                    {slide.description}
                  </p>

                  <!-- CTA Buttons -->
                  <div class="flex flex-wrap gap-4 mb-16">
                    <a href={slide.primaryCta.href} class="group inline-flex items-center gap-3 bg-[#d97706] hover:bg-[#b45309] text-white font-semibold px-8 py-4 rounded-full transition-all shadow-lg shadow-[#d97706]/25 hover:shadow-xl hover:shadow-[#d97706]/40">
                      <span>{slide.primaryCta.text}</span>
                      <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                      </svg>
                    </a>
                    <a href={slide.secondaryCta.href} class="inline-flex items-center gap-3 bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white font-semibold px-8 py-4 rounded-full transition-all border border-white/20">
                      <span>{slide.secondaryCta.text}</span>
                    </a>
                  </div>
                </div>
              ))}

              <!-- Trust Stats (always visible) -->
              <div class="grid grid-cols-3 gap-8 pt-8 border-t border-white/10">
                <div>
                  <div class="text-3xl md:text-4xl font-bold text-white mb-1" style="font-family: 'Signika', sans-serif;">2M+</div>
                  <div class="text-white/50 text-sm">Lives Changed</div>
                </div>
                <div>
                  <div class="text-3xl md:text-4xl font-bold text-white mb-1" style="font-family: 'Signika', sans-serif;">53+</div>
                  <div class="text-white/50 text-sm">Countries</div>
                </div>
                <div>
                  <div class="text-3xl md:text-4xl font-bold text-white mb-1" style="font-family: 'Signika', sans-serif;">100%</div>
                  <div class="text-white/50 text-sm">Zakat Delivered</div>
                </div>
              </div>

              <!-- Carousel Indicators -->
              <div class="flex items-center gap-3 mt-8">
                {heroSlides.map((_, index) => (
                  <button
                    class={`carousel-dot w-12 h-1 rounded-full transition-all ${index === 0 ? 'bg-[#d97706]' : 'bg-white/30 hover:bg-white/50'}`}
                    data-goto={index}
                  ></button>
                ))}
              </div>
            </div>

            <!-- Right: Donation Widget (2 cols) -->
            <div class="lg:col-span-2" id="donate">
              <div class="bg-white rounded-3xl shadow-2xl overflow-hidden transform hover:scale-[1.02] transition-transform duration-300 relative">
                <!-- Matching Banner -->
                <div class="bg-gradient-to-r from-[#d97706] to-[#f59e0b] px-4 py-2 text-center">
                  <div class="flex items-center justify-center gap-2 text-white text-sm font-medium">
                    <svg class="w-4 h-4 animate-pulse" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M5 2a2 2 0 00-2 2v14l3.5-2 3.5 2 3.5-2 3.5 2V4a2 2 0 00-2-2H5zm2.5 3a1.5 1.5 0 100 3 1.5 1.5 0 000-3zm6.207.293a1 1 0 00-1.414 0l-6 6a1 1 0 101.414 1.414l6-6a1 1 0 000-1.414zM12.5 10a1.5 1.5 0 100 3 1.5 1.5 0 000-3z" clip-rule="evenodd"></path>
                    </svg>
                    <span>2X MATCHING</span>
                    <span class="text-white/70">•</span>
                    <span class="text-amber-100">Double your impact today!</span>
                  </div>
                </div>

                <div class="p-6">
                  <!-- Live Social Proof -->
                  <div class="flex items-center gap-3 mb-5 p-3 bg-amber-50 rounded-xl border border-amber-100">
                    <div class="flex -space-x-2">
                      <div class="w-8 h-8 rounded-full bg-[#0096D6] flex items-center justify-center text-white text-xs font-bold ring-2 ring-white">S</div>
                      <div class="w-8 h-8 rounded-full bg-[#0096D6] flex items-center justify-center text-white text-xs font-bold ring-2 ring-white">A</div>
                      <div class="w-8 h-8 rounded-full bg-[#0096D6] flex items-center justify-center text-white text-xs font-bold ring-2 ring-white">M</div>
                    </div>
                    <div class="text-sm">
                      <span class="font-semibold text-amber-900"><span id="live-donors">127</span> people</span>
                      <span class="text-amber-700"> donated today</span>
                    </div>
                    <div class="ml-auto">
                      <span class="inline-flex items-center gap-1 text-emerald-600 text-xs font-medium">
                        <span class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse"></span>
                        Live
                      </span>
                    </div>
                  </div>

                  <!-- Amount Selection with Impact -->
                  <div class="space-y-3 mb-5">
                    <div class="grid grid-cols-2 gap-3">
                      <button class="amount-btn group relative py-4 px-3 rounded-xl border-2 border-neutral-200 hover:border-[#d97706] hover:bg-amber-50 transition-all text-left" data-amount="45">
                        <div class="font-bold text-lg text-neutral-800 group-hover:text-[#d97706]">$45</div>
                        <div class="text-xs text-neutral-500 group-hover:text-amber-700">Sponsor an orphan for a month</div>
                      </button>
                      <button class="amount-btn group relative py-4 px-3 rounded-xl border-2 border-neutral-200 hover:border-[#d97706] hover:bg-amber-50 transition-all text-left" data-amount="100">
                        <div class="absolute -top-2 -right-2 bg-[#d97706] text-white text-[10px] font-bold px-2 py-0.5 rounded-full">POPULAR</div>
                        <div class="font-bold text-lg text-neutral-800 group-hover:text-[#d97706]">$100</div>
                        <div class="text-xs text-neutral-500 group-hover:text-amber-700">Feed a family for a month</div>
                      </button>
                      <button class="amount-btn group relative py-4 px-3 rounded-xl border-2 border-neutral-200 hover:border-[#d97706] hover:bg-amber-50 transition-all text-left" data-amount="250">
                        <div class="font-bold text-lg text-neutral-800 group-hover:text-[#d97706]">$250</div>
                        <div class="text-xs text-neutral-500 group-hover:text-amber-700">Build a water well</div>
                      </button>
                      <button class="amount-btn group relative py-4 px-3 rounded-xl border-2 border-neutral-200 hover:border-[#d97706] hover:bg-amber-50 transition-all text-left" data-amount="500">
                        <div class="font-bold text-lg text-neutral-800 group-hover:text-[#d97706]">$500</div>
                        <div class="text-xs text-neutral-500 group-hover:text-amber-700">Emergency shelter</div>
                      </button>
                    </div>

                    <!-- Custom Amount with Currency -->
                    <div class="relative">
                      <span class="absolute left-4 top-1/2 -translate-y-1/2 text-neutral-400 font-bold text-lg">$</span>
                      <input
                        type="number"
                        id="custom-amount"
                        placeholder="Other amount"
                        class="w-full pl-10 pr-4 py-4 bg-neutral-50 border-2 border-neutral-200 rounded-xl focus:border-[#d97706] focus:bg-white focus:outline-none font-semibold text-neutral-700 transition-all"
                      />
                    </div>
                  </div>

                  <!-- Fund Selection with Icons -->
                  <div class="mb-5">
                    <div class="grid grid-cols-3 gap-2 mb-3">
                      <button class="fund-btn flex flex-col items-center gap-1 p-3 rounded-xl border-2 border-[#d97706] bg-amber-50 transition-all" data-fund="where-needed">
                        <svg class="w-5 h-5 text-[#d97706]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                        </svg>
                        <span class="text-xs font-medium text-[#d97706]">Most Needed</span>
                      </button>
                      <button class="fund-btn flex flex-col items-center gap-1 p-3 rounded-xl border-2 border-neutral-200 hover:border-[#d97706] hover:bg-amber-50 transition-all" data-fund="zakat">
                        <svg class="w-5 h-5 text-neutral-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span class="text-xs font-medium text-neutral-600">Zakat</span>
                      </button>
                      <button class="fund-btn flex flex-col items-center gap-1 p-3 rounded-xl border-2 border-neutral-200 hover:border-[#d97706] hover:bg-amber-50 transition-all" data-fund="orphans">
                        <svg class="w-5 h-5 text-neutral-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                        <span class="text-xs font-medium text-neutral-600">Orphans</span>
                      </button>
                    </div>
                    <div class="grid grid-cols-3 gap-2">
                      <button class="fund-btn flex flex-col items-center gap-1 p-3 rounded-xl border-2 border-neutral-200 hover:border-[#d97706] hover:bg-amber-50 transition-all" data-fund="palestine">
                        <svg class="w-5 h-5 text-neutral-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
                        </svg>
                        <span class="text-xs font-medium text-neutral-600">Palestine</span>
                      </button>
                      <button class="fund-btn flex flex-col items-center gap-1 p-3 rounded-xl border-2 border-neutral-200 hover:border-[#d97706] hover:bg-amber-50 transition-all" data-fund="food">
                        <svg class="w-5 h-5 text-neutral-500" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"></path>
                        </svg>
                        <span class="text-xs font-medium text-neutral-600">Food Aid</span>
                      </button>
                      <button class="fund-btn flex flex-col items-center gap-1 p-3 rounded-xl border-2 border-neutral-200 hover:border-[#d97706] hover:bg-amber-50 transition-all" data-fund="water">
                        <svg class="w-5 h-5 text-neutral-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
                        </svg>
                        <span class="text-xs font-medium text-neutral-600">Water</span>
                      </button>
                    </div>
                    <input type="hidden" id="fund-select" value="where-needed" />
                  </div>

                  <!-- Frequency Toggle -->
                  <div class="flex items-center justify-between p-3 bg-[#0096D6]/10 rounded-xl mb-5 border border-[#0096D6]/20">
                    <div class="flex items-center gap-3">
                      <div class="w-10 h-10 rounded-full bg-[#0096D6] flex items-center justify-center">
                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                        </svg>
                      </div>
                      <div>
                        <div class="font-semibold text-[#0096D6] text-sm">Make it monthly?</div>
                        <div class="text-xs text-[#0096D6]/70">12x the impact, same amount</div>
                      </div>
                    </div>
                    <label class="relative inline-flex items-center cursor-pointer">
                      <input type="checkbox" id="monthly-toggle" class="sr-only peer">
                      <div class="w-11 h-6 bg-neutral-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-[#0096D6]"></div>
                    </label>
                  </div>

                  <!-- Donate Button -->
                  <button id="hero-donate-btn" class="w-full bg-gradient-to-r from-[#d97706] to-[#f59e0b] hover:from-[#b45309] hover:to-[#d97706] text-white font-bold py-5 rounded-xl transition-all text-lg flex items-center justify-center gap-3 shadow-lg shadow-amber-500/30 hover:shadow-xl hover:shadow-amber-500/40 hover:-translate-y-0.5 relative overflow-hidden group">
                    <span class="relative z-10">Complete Donation</span>
                    <svg class="w-5 h-5 relative z-10 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                    </svg>
                    <div class="absolute inset-0 bg-gradient-to-r from-amber-400 to-orange-400 opacity-0 group-hover:opacity-100 transition-opacity"></div>
                  </button>

                  <!-- Trust Badges -->
                  <div class="flex items-center justify-center gap-6 mt-5 pt-4 border-t border-neutral-100">
                    <div class="flex items-center gap-1.5 text-neutral-500">
                      <svg class="w-4 h-4 text-emerald-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                      </svg>
                      <span class="text-xs font-medium">SSL Secure</span>
                    </div>
                    <div class="flex items-center gap-1.5 text-neutral-500">
                      <svg class="w-4 h-4 text-emerald-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                      </svg>
                      <span class="text-xs font-medium">501(c)(3)</span>
                    </div>
