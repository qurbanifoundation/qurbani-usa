  { id: 'yemen', name: 'Yemen', flag: 'ðŸ‡¾ðŸ‡ª', priceMultiplier: 0.89 },
  { id: 'syria', name: 'Syria', flag: 'ðŸ‡¸ðŸ‡¾', priceMultiplier: 1 },
