        const rand = Math.random();
        let change = 0;

        if (rand < 0.4) {
          // 40% chance: go up (1 to 3)
          change = Math.floor(Math.random() * 3) + 1;
        } else if (rand < 0.8) {
          // 40% chance: go down (1 to 3)
          change = -(Math.floor(Math.random() * 3) + 1);
        }
        // 20% chance: no change

        // Apply change with bounds (1-20)
