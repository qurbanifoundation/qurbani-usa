---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { defaultHomepageContent } from '../../../lib/homepage';

export const prerender = false;
---

<AdminLayout title="Homepage Content" activeNav="settings">
  <div class="max-w-5xl">
    <!-- Tabs -->
    <div class="flex border-b border-gray-200 mb-8 overflow-x-auto">
      <a href="/admin/settings" class="px-6 py-3 text-sm font-medium text-gray-500 hover:text-gray-700 whitespace-nowrap">General</a>
      <a href="/admin/settings/pages" class="px-6 py-3 text-sm font-medium text-gray-500 hover:text-gray-700 whitespace-nowrap">Pages</a>
      <button class="px-6 py-3 text-sm font-semibold text-[#01534d] border-b-2 border-[#01534d] whitespace-nowrap">Homepage</button>
      <a href="/admin/settings/header-footer" class="px-6 py-3 text-sm font-medium text-gray-500 hover:text-gray-700 whitespace-nowrap">Header & Footer</a>
      <a href="/admin/settings/gallery" class="px-6 py-3 text-sm font-medium text-gray-500 hover:text-gray-700 whitespace-nowrap">Hero Gallery</a>
      <a href="/admin/settings/media" class="px-6 py-3 text-sm font-medium text-gray-500 hover:text-gray-700 whitespace-nowrap">Media Library</a>
    </div>

    <!-- Toast -->
    <div id="toast" class="hidden fixed top-4 right-4 px-6 py-3 rounded-lg shadow-lg z-50 flex items-center gap-2"></div>

    <!-- Loading State -->
    <div id="loadingState" class="flex items-center justify-center py-20">
      <svg class="w-8 h-8 animate-spin text-[#01534d]" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
      </svg>
    </div>

    <!-- Content Editor -->
    <div id="editorContent" class="hidden">
      <!-- Section Tabs -->
      <div class="flex gap-2 mb-6">
        <button class="section-tab active px-4 py-2 rounded-lg font-medium transition" data-section="about">About Section</button>
        <button class="section-tab px-4 py-2 rounded-lg font-medium transition" data-section="stats">Stats</button>
        <button class="section-tab px-4 py-2 rounded-lg font-medium transition" data-section="faq">FAQ</button>
      </div>

      <!-- About Section Editor -->
      <div id="about-editor" class="section-editor">
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-6">
          <h2 class="text-lg font-bold text-gray-800 mb-6">About Section</h2>

          <div class="space-y-4">
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Badge Text</label>
                <input type="text" id="about-badge" class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#01534d]" />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Title</label>
                <input type="text" id="about-title" class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#01534d]" />
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Paragraph 1</label>
              <textarea id="about-p1" rows="3" class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#01534d]"></textarea>
              <p class="text-xs text-gray-500 mt-1">HTML supported: use &lt;strong&gt;text&lt;/strong&gt; for bold</p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Paragraph 2</label>
              <textarea id="about-p2" rows="3" class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#01534d]"></textarea>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Paragraph 3</label>
              <textarea id="about-p3" rows="3" class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#01534d]"></textarea>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Image URL</label>
              <input type="text" id="about-image" class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#01534d]" />
            </div>
          </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
          <h3 class="text-md font-bold text-gray-800 mb-4">Feature Boxes</h3>
          <div id="about-features" class="grid grid-cols-2 gap-4">
            <!-- Features will be rendered here -->
          </div>
        </div>
      </div>

      <!-- Stats Section Editor -->
      <div id="stats-editor" class="section-editor hidden">
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
          <h2 class="text-lg font-bold text-gray-800 mb-6">Stats Section</h2>
          <div id="stats-items" class="grid grid-cols-2 gap-4">
            <!-- Stats will be rendered here -->
          </div>
        </div>
      </div>

      <!-- FAQ Section Editor -->
      <div id="faq-editor" class="section-editor hidden">
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-6">
          <h2 class="text-lg font-bold text-gray-800 mb-4">FAQ Section</h2>
          <div class="grid grid-cols-2 gap-4 mb-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Section Title</label>
              <input type="text" id="faq-title" class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#01534d]" />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Subtitle</label>
              <input type="text" id="faq-subtitle" class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#01534d]" />
            </div>
          </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-md font-bold text-gray-800">Questions & Answers</h3>
            <button id="add-faq-btn" class="text-sm text-[#01534d] hover:underline">+ Add Question</button>
          </div>
          <div id="faq-items" class="space-y-4">
            <!-- FAQs will be rendered here -->
          </div>
        </div>
      </div>

      <!-- Save Button -->
      <div class="mt-6 flex justify-end">
        <button id="saveBtn" class="flex items-center gap-2 px-6 py-2 bg-[#01534d] text-white rounded-lg hover:bg-[#013d39] transition font-medium">
          <span id="saveBtnText">Save Changes</span>
          <svg id="saveSpinner" class="hidden w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</AdminLayout>

<style>
  .section-tab {
    background: #f3f4f6;
    color: #6b7280;
  }
  .section-tab:hover {
    background: #e5e7eb;
  }
  .section-tab.active {
    background: #01534d;
    color: white;
  }
</style>

<script define:vars={{ defaultContent: defaultHomepageContent }}>
  let content = JSON.parse(JSON.stringify(defaultContent));

  const loadingState = document.getElementById('loadingState');
  const editorContent = document.getElementById('editorContent');
  const toast = document.getElementById('toast');
  const saveBtn = document.getElementById('saveBtn');
  const saveBtnText = document.getElementById('saveBtnText');
  const saveSpinner = document.getElementById('saveSpinner');

  function showToast(message, isError = false) {
    toast.className = `fixed top-4 right-4 px-6 py-3 rounded-lg shadow-lg z-50 flex items-center gap-2 ${isError ? 'bg-red-600 text-white' : 'bg-green-600 text-white'}`;
    toast.innerHTML = `
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="${isError ? 'M6 18L18 6M6 6l12 12' : 'M5 13l4 4L19 7'}"></path>
      </svg>
      <span>${message}</span>
    `;
    toast.classList.remove('hidden');
    setTimeout(() => toast.classList.add('hidden'), 3000);
  }

  // Tab switching
  document.querySelectorAll('.section-tab').forEach(tab => {
    tab.addEventListener('click', () => {
      document.querySelectorAll('.section-tab').forEach(t => t.classList.remove('active'));
      tab.classList.add('active');

      document.querySelectorAll('.section-editor').forEach(e => e.classList.add('hidden'));
      document.getElementById(`${tab.dataset.section}-editor`)?.classList.remove('hidden');
    });
  });

  function renderAboutFeatures() {
    const container = document.getElementById('about-features');
    container.innerHTML = content.about.features.map((f, i) => `
      <div class="p-4 border border-gray-200 rounded-lg">
        <input type="text" class="feature-title w-full px-3 py-2 border border-gray-200 rounded mb-2 text-sm font-medium" data-index="${i}" value="${f.title}" placeholder="Title" />
        <input type="text" class="feature-desc w-full px-3 py-2 border border-gray-200 rounded text-sm" data-index="${i}" value="${f.description}" placeholder="Description" />
      </div>
    `).join('');

    container.querySelectorAll('.feature-title').forEach(input => {
      input.addEventListener('input', (e) => {
        const idx = parseInt(e.target.dataset.index);
        content.about.features[idx].title = e.target.value;
      });
    });

    container.querySelectorAll('.feature-desc').forEach(input => {
      input.addEventListener('input', (e) => {
        const idx = parseInt(e.target.dataset.index);
        content.about.features[idx].description = e.target.value;
      });
    });
  }

  function renderStats() {
    const container = document.getElementById('stats-items');
    container.innerHTML = content.stats.items.map((s, i) => `
      <div class="p-4 border border-gray-200 rounded-lg">
        <input type="text" class="stat-number w-full px-3 py-2 border border-gray-200 rounded mb-2 text-lg font-bold" data-index="${i}" value="${s.number}" placeholder="Number" />
        <input type="text" class="stat-label w-full px-3 py-2 border border-gray-200 rounded text-sm" data-index="${i}" value="${s.label}" placeholder="Label" />
      </div>
    `).join('');

    container.querySelectorAll('.stat-number').forEach(input => {
      input.addEventListener('input', (e) => {
        const idx = parseInt(e.target.dataset.index);
        content.stats.items[idx].number = e.target.value;
      });
    });

    container.querySelectorAll('.stat-label').forEach(input => {
      input.addEventListener('input', (e) => {
        const idx = parseInt(e.target.dataset.index);
        content.stats.items[idx].label = e.target.value;
      });
    });
  }

  function renderFAQs() {
    const container = document.getElementById('faq-items');
    container.innerHTML = content.faq.items.map((f, i) => `
      <div class="p-4 border border-gray-200 rounded-lg">
        <div class="flex items-start justify-between gap-2 mb-2">
          <input type="text" class="faq-question flex-1 px-3 py-2 border border-gray-200 rounded text-sm font-medium" data-index="${i}" value="${f.question}" placeholder="Question" />
          <button class="delete-faq p-2 text-red-500 hover:bg-red-50 rounded" data-index="${i}">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        <textarea class="faq-answer w-full px-3 py-2 border border-gray-200 rounded text-sm" data-index="${i}" rows="2" placeholder="Answer">${f.answer}</textarea>
      </div>
    `).join('');

    container.querySelectorAll('.faq-question').forEach(input => {
      input.addEventListener('input', (e) => {
        const idx = parseInt(e.target.dataset.index);
        content.faq.items[idx].question = e.target.value;
      });
    });

    container.querySelectorAll('.faq-answer').forEach(input => {
      input.addEventListener('input', (e) => {
        const idx = parseInt(e.target.dataset.index);
        content.faq.items[idx].answer = e.target.value;
      });
    });

    container.querySelectorAll('.delete-faq').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const idx = parseInt(e.currentTarget.dataset.index);
        content.faq.items.splice(idx, 1);
        renderFAQs();
      });
    });
  }

  function populateForm() {
    // About
    document.getElementById('about-badge').value = content.about.badge || '';
    document.getElementById('about-title').value = content.about.title || '';
    document.getElementById('about-p1').value = content.about.paragraphs?.[0] || '';
    document.getElementById('about-p2').value = content.about.paragraphs?.[1] || '';
    document.getElementById('about-p3').value = content.about.paragraphs?.[2] || '';
    document.getElementById('about-image').value = content.about.image || '';
    renderAboutFeatures();

    // Stats
    renderStats();

    // FAQ
    document.getElementById('faq-title').value = content.faq.title || '';
    document.getElementById('faq-subtitle').value = content.faq.subtitle || '';
    renderFAQs();

    // Add input listeners for text fields
    ['about-badge', 'about-title', 'about-image'].forEach(id => {
      document.getElementById(id)?.addEventListener('input', (e) => {
        const key = id.replace('about-', '');
        content.about[key] = e.target.value;
      });
    });

    ['about-p1', 'about-p2', 'about-p3'].forEach((id, i) => {
      document.getElementById(id)?.addEventListener('input', (e) => {
        content.about.paragraphs[i] = e.target.value;
      });
    });

    ['faq-title', 'faq-subtitle'].forEach(id => {
      document.getElementById(id)?.addEventListener('input', (e) => {
        const key = id.replace('faq-', '');
        content.faq[key] = e.target.value;
      });
    });
  }

  // Add FAQ
  document.getElementById('add-faq-btn')?.addEventListener('click', () => {
    content.faq.items.push({ question: '', answer: '' });
    renderFAQs();
  });

  // Save
  saveBtn?.addEventListener('click', async () => {
    saveSpinner.classList.remove('hidden');
    saveBtnText.textContent = 'Saving...';
    saveBtn.disabled = true;

    try {
      const response = await fetch('/api/homepage-content', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(content)
      });

      const result = await response.json();

      if (result.success) {
        showToast('Content saved successfully!');
      } else {
        throw new Error(result.error);
      }
    } catch (error) {
      showToast(error.message || 'Failed to save', true);
    }

    saveSpinner.classList.add('hidden');
    saveBtnText.textContent = 'Save Changes';
    saveBtn.disabled = false;
  });

  // Load content
  async function loadContent() {
    try {
      const response = await fetch('/api/homepage-content');
      const data = await response.json();

      if (data && !data.error) {
        // Merge with defaults
        content = {
          about: { ...defaultContent.about, ...data.about },
          stats: { ...defaultContent.stats, ...data.stats },
          faq: { ...defaultContent.faq, ...data.faq }
        };
      }
    } catch (error) {
      console.error('Failed to load content:', error);
    }

    loadingState.classList.add('hidden');
    editorContent.classList.remove('hidden');
    populateForm();
  }

  loadContent();
</script>
