---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import SettingsTabs from '../../../components/admin/SettingsTabs.astro';

export const prerender = false;
---

<AdminLayout title="Media Gallery" activeNav="settings">
  <div class="max-w-6xl">
    <SettingsTabs active="media" />

    <!-- Toast Messages -->
    <div id="successToast" class="hidden fixed top-4 right-4 bg-green-600 text-white px-6 py-3 rounded-lg shadow-lg z-50 flex items-center gap-2">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
      <span id="successMessage">Success!</span>
    </div>
    <div id="errorToast" class="hidden fixed top-4 right-4 bg-red-600 text-white px-6 py-3 rounded-lg shadow-lg z-50 flex items-center gap-2">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
      <span id="errorMessage">Error occurred</span>
    </div>

    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
      <div>
        <h1 class="text-2xl font-bold text-gray-800">Media Library</h1>
        <p class="text-gray-500 mt-1">Manage all your uploaded images</p>
      </div>
      <label class="cursor-pointer">
        <input type="file" id="uploadInput" accept="image/*" multiple class="hidden" />
        <div class="flex items-center gap-2 bg-[#01534d] text-white px-4 py-2 rounded-lg hover:bg-[#013d39] transition font-medium">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
          </svg>
          Upload Images
        </div>
      </label>
    </div>

    <!-- Toolbar -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4 mb-6">
      <div class="flex flex-col sm:flex-row gap-4">
        <!-- Search -->
        <div class="relative flex-1">
          <input
            type="text"
            id="searchInput"
            placeholder="Search images by name..."
            class="w-full pl-10 pr-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#01534d] focus:border-transparent"
          />
          <svg class="w-5 h-5 text-gray-400 absolute left-3 top-1/2 -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>

        <!-- Selection controls -->
        <div class="flex items-center gap-3">
          <label class="flex items-center gap-2 text-sm text-gray-600 cursor-pointer">
            <input type="checkbox" id="selectAll" class="w-4 h-4 text-[#01534d] rounded focus:ring-[#01534d]" />
            Select All
          </label>
          <span id="selectedCount" class="text-sm text-gray-500 hidden">
            <span id="selectedNum">0</span> selected
          </span>
          <button
            id="deleteSelectedBtn"
            disabled
            class="flex items-center gap-2 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition disabled:opacity-50 disabled:cursor-not-allowed"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            Delete Selected
          </button>
        </div>
      </div>
    </div>

    <!-- Upload Progress -->
    <div id="uploadProgress" class="hidden bg-white rounded-xl shadow-sm border border-gray-100 p-4 mb-6">
      <div class="flex items-center gap-4">
        <svg class="w-6 h-6 animate-spin text-[#01534d]" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <div class="flex-1">
          <div class="flex justify-between text-sm mb-1">
            <span id="uploadProgressText">Uploading...</span>
            <span id="uploadProgressPercent">0%</span>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div id="uploadProgressBar" class="bg-[#01534d] h-2 rounded-full transition-all" style="width: 0%"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Loading State -->
    <div id="loadingState" class="flex items-center justify-center py-20">
      <svg class="w-10 h-10 animate-spin text-[#01534d]" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    </div>

    <!-- Empty State -->
    <div id="emptyState" class="hidden bg-gray-50 border-2 border-dashed border-gray-300 rounded-xl p-12 text-center">
      <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      <h3 class="text-lg font-medium text-gray-600 mb-2">No images yet</h3>
      <p class="text-gray-500 mb-4">Upload your first image to get started</p>
    </div>

    <!-- No Results State -->
    <div id="noResultsState" class="hidden bg-gray-50 border-2 border-dashed border-gray-300 rounded-xl p-12 text-center">
      <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
      <h3 class="text-lg font-medium text-gray-600 mb-2">No images found</h3>
      <p class="text-gray-500">Try a different search term</p>
    </div>

    <!-- Images Grid -->
    <div id="imagesGrid" class="hidden grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
      <!-- Images will be rendered here -->
    </div>

    <!-- Image Count -->
    <div id="imageCount" class="hidden text-center mt-6 text-sm text-gray-500">
      Showing <span id="visibleCount">0</span> of <span id="totalCount">0</span> images
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div id="deleteModal" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-xl shadow-2xl w-full max-w-md p-6">
      <h3 class="text-lg font-bold text-gray-800 mb-2">Delete Images</h3>
      <p class="text-gray-600 mb-6">Are you sure you want to delete <span id="deleteCount">0</span> image(s)? This action cannot be undone.</p>
      <div class="flex justify-end gap-3">
        <button type="button" id="cancelDeleteBtn" class="px-4 py-2 text-gray-600 hover:text-gray-800">Cancel</button>
        <button type="button" id="confirmDeleteBtn" class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 flex items-center gap-2">
          <span>Delete</span>
          <svg id="deleteSpinner" class="hidden w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Image Preview Modal -->
  <div id="previewModal" class="hidden fixed inset-0 bg-black/80 z-50 flex items-center justify-center p-4">
    <button id="closePreviewBtn" class="absolute top-4 right-4 text-white hover:text-gray-300">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
    <img id="previewImage" src="" alt="Preview" class="max-w-full max-h-[90vh] rounded-lg" />
    <div id="previewInfo" class="absolute bottom-4 left-1/2 -translate-x-1/2 bg-black/70 text-white px-4 py-2 rounded-lg text-sm">
      <span id="previewName"></span>
    </div>
  </div>
</AdminLayout>

<script>
  // Elements
  const loadingState = document.getElementById('loadingState') as HTMLElement;
  const emptyState = document.getElementById('emptyState') as HTMLElement;
  const noResultsState = document.getElementById('noResultsState') as HTMLElement;
  const imagesGrid = document.getElementById('imagesGrid') as HTMLElement;
  const imageCount = document.getElementById('imageCount') as HTMLElement;
  const visibleCount = document.getElementById('visibleCount') as HTMLElement;
  const totalCount = document.getElementById('totalCount') as HTMLElement;
  const searchInput = document.getElementById('searchInput') as HTMLInputElement;
  const selectAllCheckbox = document.getElementById('selectAll') as HTMLInputElement;
  const selectedCount = document.getElementById('selectedCount') as HTMLElement;
  const selectedNum = document.getElementById('selectedNum') as HTMLElement;
  const deleteSelectedBtn = document.getElementById('deleteSelectedBtn') as HTMLButtonElement;
  const uploadInput = document.getElementById('uploadInput') as HTMLInputElement;
  const uploadProgress = document.getElementById('uploadProgress') as HTMLElement;
  const uploadProgressBar = document.getElementById('uploadProgressBar') as HTMLElement;
  const uploadProgressText = document.getElementById('uploadProgressText') as HTMLElement;
  const uploadProgressPercent = document.getElementById('uploadProgressPercent') as HTMLElement;
  const deleteModal = document.getElementById('deleteModal') as HTMLElement;
  const deleteCountEl = document.getElementById('deleteCount') as HTMLElement;
  const cancelDeleteBtn = document.getElementById('cancelDeleteBtn') as HTMLButtonElement;
  const confirmDeleteBtn = document.getElementById('confirmDeleteBtn') as HTMLButtonElement;
  const deleteSpinner = document.getElementById('deleteSpinner') as HTMLElement;
  const previewModal = document.getElementById('previewModal') as HTMLElement;
  const closePreviewBtn = document.getElementById('closePreviewBtn') as HTMLButtonElement;
  const previewImage = document.getElementById('previewImage') as HTMLImageElement;
  const previewName = document.getElementById('previewName') as HTMLElement;
  const successToast = document.getElementById('successToast') as HTMLElement;
  const errorToast = document.getElementById('errorToast') as HTMLElement;
  const successMessage = document.getElementById('successMessage') as HTMLElement;
  const errorMessage = document.getElementById('errorMessage') as HTMLElement;

  let allImages: any[] = [];
  let filteredImages: any[] = [];
  let selectedImages: Set<string> = new Set();

  function showToast(type: 'success' | 'error', message: string) {
    const toast = type === 'success' ? successToast : errorToast;
    const msgEl = type === 'success' ? successMessage : errorMessage;
    msgEl.textContent = message;
    toast.classList.remove('hidden');
    setTimeout(() => toast.classList.add('hidden'), 3000);
  }

  function updateSelectionUI() {
    const count = selectedImages.size;
    selectedNum.textContent = count.toString();
    selectedCount.classList.toggle('hidden', count === 0);
    deleteSelectedBtn.disabled = count === 0;
    selectAllCheckbox.checked = count === filteredImages.length && count > 0;
    selectAllCheckbox.indeterminate = count > 0 && count < filteredImages.length;
  }

  function renderImages() {
    loadingState.classList.add('hidden');

    if (allImages.length === 0) {
      emptyState.classList.remove('hidden');
      noResultsState.classList.add('hidden');
      imagesGrid.classList.add('hidden');
      imageCount.classList.add('hidden');
      return;
    }

    if (filteredImages.length === 0) {
      emptyState.classList.add('hidden');
      noResultsState.classList.remove('hidden');
      imagesGrid.classList.add('hidden');
      imageCount.classList.add('hidden');
      return;
    }

    emptyState.classList.add('hidden');
    noResultsState.classList.add('hidden');
    imagesGrid.classList.remove('hidden');
    imageCount.classList.remove('hidden');

    visibleCount.textContent = filteredImages.length.toString();
    totalCount.textContent = allImages.length.toString();

    imagesGrid.innerHTML = filteredImages.map(img => `
      <div class="image-item relative group bg-white rounded-lg border border-gray-200 overflow-hidden hover:shadow-lg transition" data-name="${img.name}">
        <!-- Checkbox -->
        <label class="absolute top-2 left-2 z-10 cursor-pointer">
          <input type="checkbox" class="image-checkbox w-5 h-5 text-[#01534d] rounded border-2 border-white shadow-sm focus:ring-[#01534d]" data-name="${img.name}" ${selectedImages.has(img.name) ? 'checked' : ''} />
        </label>

        <!-- Image -->
        <div class="aspect-square bg-gray-100 cursor-pointer preview-btn" data-url="${img.url}" data-name="${img.name}">
          <img src="${img.url}" alt="${img.name}" class="w-full h-full object-cover" loading="lazy" />
        </div>

        <!-- Hover Actions -->
        <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition flex items-center justify-center gap-2 pointer-events-none">
          <button class="preview-btn pointer-events-auto p-2 bg-white rounded-full text-gray-700 hover:bg-gray-100" data-url="${img.url}" data-name="${img.name}" title="Preview">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
          </button>
          <button class="copy-url-btn pointer-events-auto p-2 bg-white rounded-full text-gray-700 hover:bg-gray-100" data-url="${img.url}" title="Copy URL">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </button>
          <button class="delete-single-btn pointer-events-auto p-2 bg-red-600 rounded-full text-white hover:bg-red-700" data-name="${img.name}" title="Delete">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
          </button>
        </div>

        <!-- Name -->
        <div class="p-2 border-t">
          <p class="text-xs text-gray-600 truncate" title="${img.name}">${img.name}</p>
        </div>
      </div>
    `).join('');

    // Add event listeners
    attachEventListeners();
  }

  function attachEventListeners() {
    // Image checkboxes
    document.querySelectorAll('.image-checkbox').forEach(checkbox => {
      checkbox.addEventListener('change', (e) => {
        const target = e.target as HTMLInputElement;
        const name = target.dataset.name || '';
        if (target.checked) {
          selectedImages.add(name);
        } else {
          selectedImages.delete(name);
        }
        updateSelectionUI();
      });
    });

    // Preview buttons
    document.querySelectorAll('.preview-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        const target = e.currentTarget as HTMLElement;
        const url = target.dataset.url || '';
        const name = target.dataset.name || '';
        previewImage.src = url;
        previewName.textContent = name;
        previewModal.classList.remove('hidden');
      });
    });

    // Copy URL buttons
    document.querySelectorAll('.copy-url-btn').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        e.stopPropagation();
        const target = e.currentTarget as HTMLElement;
        const url = target.dataset.url || '';
        await navigator.clipboard.writeText(url);
        showToast('success', 'URL copied to clipboard!');
      });
    });

    // Delete single buttons
    document.querySelectorAll('.delete-single-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        const target = e.currentTarget as HTMLElement;
        const name = target.dataset.name || '';
        selectedImages.clear();
        selectedImages.add(name);
        deleteCountEl.textContent = '1';
        deleteModal.classList.remove('hidden');
      });
    });
  }

  // Load images
  async function loadImages() {
    try {
      const response = await fetch('/api/media/list');
      const result = await response.json();

      allImages = result.images || [];
      filteredImages = [...allImages];
      selectedImages.clear();
      renderImages();
      updateSelectionUI();
    } catch (error) {
      loadingState.classList.add('hidden');
      showToast('error', 'Failed to load images');
    }
  }

  // Search
  searchInput?.addEventListener('input', () => {
    const query = searchInput.value.toLowerCase().trim();
    if (query) {
      filteredImages = allImages.filter(img => img.name.toLowerCase().includes(query));
    } else {
      filteredImages = [...allImages];
    }
    selectedImages.clear();
    renderImages();
    updateSelectionUI();
  });

  // Select All
  selectAllCheckbox?.addEventListener('change', () => {
    if (selectAllCheckbox.checked) {
      filteredImages.forEach(img => selectedImages.add(img.name));
    } else {
      selectedImages.clear();
    }
    renderImages();
    updateSelectionUI();
  });

  // Delete selected button
  deleteSelectedBtn?.addEventListener('click', () => {
    deleteCountEl.textContent = selectedImages.size.toString();
    deleteModal.classList.remove('hidden');
  });

  // Cancel delete
  cancelDeleteBtn?.addEventListener('click', () => {
    deleteModal.classList.add('hidden');
  });

  deleteModal?.addEventListener('click', (e) => {
    if (e.target === deleteModal) {
      deleteModal.classList.add('hidden');
    }
  });

  // Confirm delete
  confirmDeleteBtn?.addEventListener('click', async () => {
    if (selectedImages.size === 0) return;

    confirmDeleteBtn.disabled = true;
    deleteSpinner.classList.remove('hidden');

    let successCount = 0;
    let failCount = 0;

    for (const filename of selectedImages) {
      try {
        const response = await fetch('/api/media/delete', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ filename })
        });
        const result = await response.json();

        if (result.success) {
          successCount++;
        } else {
          failCount++;
        }
      } catch (error) {
        failCount++;
      }
    }

    confirmDeleteBtn.disabled = false;
    deleteSpinner.classList.add('hidden');
    deleteModal.classList.add('hidden');

    if (successCount > 0) {
      showToast('success', `Deleted ${successCount} image(s)${failCount > 0 ? `, ${failCount} failed` : ''}`);
      loadImages();
    } else {
      showToast('error', 'Failed to delete images');
    }
  });

  // Preview modal close
  closePreviewBtn?.addEventListener('click', () => {
    previewModal.classList.add('hidden');
  });

  previewModal?.addEventListener('click', (e) => {
    if (e.target === previewModal) {
      previewModal.classList.add('hidden');
    }
  });

  // Keyboard shortcuts
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      deleteModal.classList.add('hidden');
      previewModal.classList.add('hidden');
    }
  });

  // Upload
  uploadInput?.addEventListener('change', async (e) => {
    const files = (e.target as HTMLInputElement).files;
    if (!files || files.length === 0) return;

    uploadProgress.classList.remove('hidden');
    let completed = 0;
    const total = files.length;

    for (const file of Array.from(files)) {
      uploadProgressText.textContent = `Uploading ${file.name}...`;

      try {
        const formData = new FormData();
        formData.append('file', file);

        const response = await fetch('/api/media/upload', {
          method: 'POST',
          body: formData
        });

        await response.json();
      } catch (error) {
        console.error('Upload error:', error);
      }

      completed++;
      const percent = Math.round((completed / total) * 100);
      uploadProgressBar.style.width = `${percent}%`;
      uploadProgressPercent.textContent = `${percent}%`;
    }

    uploadProgress.classList.add('hidden');
    uploadInput.value = '';
    showToast('success', `Uploaded ${completed} image(s)`);
    loadImages();
  });

  // Initial load
  loadImages();
</script>
