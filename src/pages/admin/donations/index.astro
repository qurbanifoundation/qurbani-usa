---
import AdminLayout from '../../../layouts/AdminLayout.astro';

// Mock donations data - replace with Supabase query
const donations = [
  { id: 'DON-001', donor: 'Ahmed Mohamed', email: 'ahmed@example.com', amount: 100, campaign: 'Gaza Emergency', frequency: 'single', status: 'completed', date: '2024-02-15 14:32' },
  { id: 'DON-002', donor: 'Sarah Khan', email: 'sarah@example.com', amount: 250, campaign: 'Orphan Sponsorship', frequency: 'monthly', status: 'completed', date: '2024-02-15 12:18' },
  { id: 'DON-003', donor: 'Mohammad Ali', email: 'mali@example.com', amount: 50, campaign: 'Water for Life', frequency: 'single', status: 'completed', date: '2024-02-15 10:45' },
  { id: 'DON-004', donor: 'Fatima Hassan', email: 'fatima@example.com', amount: 500, campaign: 'Most Needed', frequency: 'single', status: 'completed', date: '2024-02-14 18:22' },
  { id: 'DON-005', donor: 'Omar Siddiqui', email: 'omar@example.com', amount: 75, campaign: 'Food Aid', frequency: 'single', status: 'completed', date: '2024-02-14 15:10' },
  { id: 'DON-006', donor: 'Aisha Begum', email: 'aisha@example.com', amount: 150, campaign: 'Yemen Emergency', frequency: 'monthly', status: 'completed', date: '2024-02-14 11:05' },
  { id: 'DON-007', donor: 'Ibrahim Khan', email: 'ibrahim@example.com', amount: 200, campaign: 'Education', frequency: 'single', status: 'refunded', date: '2024-02-13 16:45' },
  { id: 'DON-008', donor: 'Zainab Ali', email: 'zainab@example.com', amount: 100, campaign: 'Gaza Emergency', frequency: 'single', status: 'completed', date: '2024-02-13 09:30' },
];

const totalDonations = donations.length;
const totalAmount = donations.filter(d => d.status === 'completed').reduce((sum, d) => sum + d.amount, 0);
const monthlyDonors = donations.filter(d => d.frequency === 'monthly').length;
---

<AdminLayout title="Donations" activeNav="donations">
  <!-- Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <p class="text-sm text-gray-500 mb-1">Total Collected</p>
      <p class="text-3xl font-bold text-gray-800">${totalAmount.toLocaleString()}</p>
    </div>
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <p class="text-sm text-gray-500 mb-1">Total Donations</p>
      <p class="text-3xl font-bold text-gray-800">{totalDonations}</p>
    </div>
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <p class="text-sm text-gray-500 mb-1">Monthly Donors</p>
      <p class="text-3xl font-bold text-gray-800">{monthlyDonors}</p>
    </div>
  </div>

  <!-- Filters -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
    <div class="flex items-center gap-4">
      <div class="relative">
        <input
          type="text"
          placeholder="Search by donor or email..."
          class="pl-10 pr-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#01534d] focus:border-transparent w-72"
        />
        <svg class="w-5 h-5 text-gray-400 absolute left-3 top-1/2 -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>
      <select class="px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#01534d] bg-white">
        <option value="all">All Status</option>
        <option value="completed">Completed</option>
        <option value="pending">Pending</option>
        <option value="refunded">Refunded</option>
      </select>
      <select class="px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#01534d] bg-white">
        <option value="all">All Frequency</option>
        <option value="single">Single</option>
        <option value="monthly">Monthly</option>
      </select>
    </div>
    <button class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200 transition">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
      </svg>
      Export CSV
    </button>
  </div>

  <!-- Donations Table -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <table class="w-full">
      <thead class="bg-gray-50 border-b border-gray-100">
        <tr>
          <th class="text-left px-6 py-4 text-sm font-semibold text-gray-600">ID</th>
          <th class="text-left px-6 py-4 text-sm font-semibold text-gray-600">Donor</th>
          <th class="text-left px-6 py-4 text-sm font-semibold text-gray-600">Campaign</th>
          <th class="text-left px-6 py-4 text-sm font-semibold text-gray-600">Amount</th>
          <th class="text-left px-6 py-4 text-sm font-semibold text-gray-600">Type</th>
          <th class="text-left px-6 py-4 text-sm font-semibold text-gray-600">Status</th>
          <th class="text-left px-6 py-4 text-sm font-semibold text-gray-600">Date</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100">
        {donations.map((donation) => (
          <tr class="hover:bg-gray-50 transition">
            <td class="px-6 py-4">
              <span class="text-sm font-mono text-gray-600">{donation.id}</span>
            </td>
            <td class="px-6 py-4">
              <div>
                <p class="font-medium text-gray-800">{donation.donor}</p>
                <p class="text-sm text-gray-500">{donation.email}</p>
              </div>
            </td>
            <td class="px-6 py-4">
              <span class="text-sm text-gray-600">{donation.campaign}</span>
            </td>
            <td class="px-6 py-4">
              <span class="font-semibold text-gray-800">${donation.amount}</span>
            </td>
            <td class="px-6 py-4">
              <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
                donation.frequency === 'monthly'
                  ? 'bg-blue-100 text-blue-800'
                  : 'bg-gray-100 text-gray-600'
              }`}>
                {donation.frequency === 'monthly' ? 'Monthly' : 'One-time'}
              </span>
            </td>
            <td class="px-6 py-4">
              <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
                donation.status === 'completed'
                  ? 'bg-green-100 text-green-800'
                  : donation.status === 'refunded'
                  ? 'bg-red-100 text-red-800'
                  : 'bg-yellow-100 text-yellow-800'
              }`}>
                {donation.status.charAt(0).toUpperCase() + donation.status.slice(1)}
              </span>
            </td>
            <td class="px-6 py-4">
              <span class="text-sm text-gray-500">{donation.date}</span>
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <div class="flex items-center justify-between mt-6">
    <p class="text-sm text-gray-500">Showing 1-8 of 8 donations</p>
    <div class="flex items-center gap-2">
      <button class="px-3 py-1 border border-gray-200 rounded text-sm text-gray-500 hover:bg-gray-50 disabled:opacity-50" disabled>
        Previous
      </button>
      <button class="px-3 py-1 bg-[#01534d] text-white rounded text-sm">1</button>
      <button class="px-3 py-1 border border-gray-200 rounded text-sm text-gray-500 hover:bg-gray-50 disabled:opacity-50" disabled>
        Next
      </button>
    </div>
  </div>
</AdminLayout>
