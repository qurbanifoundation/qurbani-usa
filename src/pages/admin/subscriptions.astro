---
import AdminLayout from '../../layouts/AdminLayout.astro';
import { supabaseAdmin } from '../../lib/supabase';

export const prerender = false;

// Get filter params
const url = Astro.url;
const statusFilter = url.searchParams.get('status') || 'all';
const page = parseInt(url.searchParams.get('page') || '1');
const perPage = 25;

// Build query
let query = supabaseAdmin
  .from('donation_subscriptions')
  .select('*', { count: 'exact' })
  .order('created_at', { ascending: false });

if (statusFilter !== 'all') {
  query = query.eq('status', statusFilter);
}

// Paginate
const { data: subscriptions, count, error } = await query
  .range((page - 1) * perPage, page * perPage - 1);

const totalPages = Math.ceil((count || 0) / perPage);

// Get stats
const { data: stats } = await supabaseAdmin.rpc('get_subscription_stats').single() || { data: null };

// Calculate stats manually if RPC doesn't exist
let activeCount = 0;
let pausedCount = 0;
let cancelledCount = 0;
let monthlyRevenue = 0;

if (!stats) {
  const { data: allSubs } = await supabaseAdmin
    .from('donation_subscriptions')
    .select('status, amount');

  if (allSubs) {
    activeCount = allSubs.filter(s => s.status === 'active').length;
    pausedCount = allSubs.filter(s => s.status === 'paused').length;
    cancelledCount = allSubs.filter(s => s.status === 'cancelled').length;
    monthlyRevenue = allSubs
      .filter(s => s.status === 'active')
      .reduce((sum, s) => sum + parseFloat(s.amount || 0), 0);
  }
}

const formatDate = (dateStr: string) => {
  if (!dateStr) return '-';
  return new Date(dateStr).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
    timeZone: 'America/New_York',
  });
};

const formatCurrency = (amount: number | string) => {
  const num = typeof amount === 'string' ? parseFloat(amount) : amount;
  return new Intl.NumberFormat('en-US', {
    style: 'currency',
    currency: 'USD',
  }).format(num || 0);
};

const statusColors: Record<string, string> = {
  active: 'bg-green-100 text-green-800',
  paused: 'bg-yellow-100 text-yellow-800',
  past_due: 'bg-red-100 text-red-800',
  cancelled: 'bg-gray-100 text-gray-600',
};
---

<AdminLayout title="Recurring Subscriptions" activeNav="subscriptions">
  <!-- Stats Grid -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <p class="text-sm text-gray-500 mb-1">Active Subscriptions</p>
      <p class="text-3xl font-bold text-green-600">{activeCount}</p>
    </div>
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <p class="text-sm text-gray-500 mb-1">Recurring Revenue</p>
      <p class="text-3xl font-bold text-[#01534d]">{formatCurrency(monthlyRevenue)}</p>
      <p class="text-xs text-gray-400 mt-1">Monthly + Weekly</p>
    </div>
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <p class="text-sm text-gray-500 mb-1">Paused</p>
      <p class="text-3xl font-bold text-yellow-600">{pausedCount}</p>
    </div>
    <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
      <p class="text-sm text-gray-500 mb-1">Cancelled</p>
      <p class="text-3xl font-bold text-gray-600">{cancelledCount}</p>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4 mb-6">
    <div class="flex flex-wrap items-center gap-4">
      <span class="text-sm font-medium text-gray-700">Filter by status:</span>
      <div class="flex gap-2">
        <a
          href="/admin/subscriptions?status=all"
          class={`px-4 py-2 rounded-lg text-sm font-medium transition ${statusFilter === 'all' ? 'bg-[#01534d] text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}`}
        >
          All
        </a>
        <a
          href="/admin/subscriptions?status=active"
          class={`px-4 py-2 rounded-lg text-sm font-medium transition ${statusFilter === 'active' ? 'bg-green-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}`}
        >
          Active
        </a>
        <a
          href="/admin/subscriptions?status=paused"
          class={`px-4 py-2 rounded-lg text-sm font-medium transition ${statusFilter === 'paused' ? 'bg-yellow-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}`}
        >
          Paused
        </a>
        <a
          href="/admin/subscriptions?status=past_due"
          class={`px-4 py-2 rounded-lg text-sm font-medium transition ${statusFilter === 'past_due' ? 'bg-red-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}`}
        >
          Past Due
        </a>
        <a
          href="/admin/subscriptions?status=cancelled"
          class={`px-4 py-2 rounded-lg text-sm font-medium transition ${statusFilter === 'cancelled' ? 'bg-gray-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}`}
        >
          Cancelled
        </a>
      </div>
    </div>
  </div>

  <!-- Subscriptions Table -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50 border-b border-gray-100">
          <tr>
            <th class="text-left px-6 py-4 text-sm font-semibold text-gray-700">Donor</th>
            <th class="text-left px-6 py-4 text-sm font-semibold text-gray-700">Type</th>
            <th class="text-left px-6 py-4 text-sm font-semibold text-gray-700">Amount</th>
            <th class="text-left px-6 py-4 text-sm font-semibold text-gray-700">Status</th>
            <th class="text-left px-6 py-4 text-sm font-semibold text-gray-700">Card</th>
            <th class="text-left px-6 py-4 text-sm font-semibold text-gray-700">Next Billing</th>
            <th class="text-left px-6 py-4 text-sm font-semibold text-gray-700">Started</th>
            <th class="text-left px-6 py-4 text-sm font-semibold text-gray-700">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          {subscriptions && subscriptions.length > 0 ? (
            subscriptions.map((sub) => (
              <tr class="hover:bg-gray-50 transition">
                <td class="px-6 py-4">
                  <div>
                    <p class="font-medium text-gray-800">{sub.donor_name || 'Anonymous'}</p>
                    <p class="text-sm text-gray-500">{sub.donor_email}</p>
                  </div>
                </td>
                <td class="px-6 py-4">
                  {sub.interval === 'weekly' ? (
                    <span class="px-2 py-1 bg-purple-100 text-purple-700 rounded-full text-xs font-medium">Jummah</span>
                  ) : (
                    <span class="px-2 py-1 bg-blue-100 text-blue-700 rounded-full text-xs font-medium">Monthly</span>
                  )}
                </td>
                <td class="px-6 py-4">
                  <span class="font-bold text-[#01534d]">{formatCurrency(sub.amount)}{sub.interval === 'weekly' ? '/wk' : '/mo'}</span>
                </td>
                <td class="px-6 py-4">
                  <span class={`px-3 py-1 rounded-full text-xs font-medium ${statusColors[sub.status] || 'bg-gray-100 text-gray-600'}`}>
                    {sub.status}
                  </span>
                  {sub.failure_count > 0 && (
                    <span class="ml-2 text-xs text-red-600">({sub.failure_count} failures)</span>
                  )}
                </td>
                <td class="px-6 py-4 text-sm text-gray-600">
                  {sub.card_brand && sub.card_last4 ? (
                    <span>
                      {sub.card_brand} •••• {sub.card_last4}
                      {sub.card_exp_month && sub.card_exp_year && (
                        <span class="text-gray-400 ml-1">
                          {sub.card_exp_month}/{sub.card_exp_year}
                        </span>
                      )}
                    </span>
                  ) : (
                    <span class="text-gray-400">-</span>
                  )}
                </td>
                <td class="px-6 py-4 text-sm text-gray-600">
                  {formatDate(sub.next_billing_date)}
                </td>
                <td class="px-6 py-4 text-sm text-gray-600">
                  {formatDate(sub.created_at)}
                </td>
                <td class="px-6 py-4">
                  {sub.stripe_subscription_id && (
                    <a
                      href={`https://dashboard.stripe.com/subscriptions/${sub.stripe_subscription_id}`}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-[#01534d] hover:underline text-sm font-medium"
                    >
                      View in Stripe →
                    </a>
                  )}
                </td>
              </tr>
            ))
          ) : (
            <tr>
              <td colspan="8" class="px-6 py-12 text-center text-gray-500">
                No subscriptions found
              </td>
            </tr>
          )}
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    {totalPages > 1 && (
      <div class="border-t border-gray-100 px-6 py-4 flex items-center justify-between">
        <p class="text-sm text-gray-500">
          Showing {(page - 1) * perPage + 1} to {Math.min(page * perPage, count || 0)} of {count} subscriptions
        </p>
        <div class="flex gap-2">
          {page > 1 && (
            <a
              href={`/admin/subscriptions?status=${statusFilter}&page=${page - 1}`}
              class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200 transition"
            >
              Previous
            </a>
          )}
          {page < totalPages && (
            <a
              href={`/admin/subscriptions?status=${statusFilter}&page=${page + 1}`}
              class="px-4 py-2 bg-[#01534d] text-white rounded-lg text-sm font-medium hover:bg-[#013d39] transition"
            >
              Next
            </a>
          )}
        </div>
      </div>
    )}
  </div>
</AdminLayout>
