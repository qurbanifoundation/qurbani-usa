---

<Layout title="Media Center | Qurbani USA - Press, News & Resources">
  <Navbar />

  <main>
    <!-- Hero Section -->
    <section class="relative min-h-[450px] flex items-center overflow-hidden">
      <div class="absolute inset-0">
        <img
          src="https://images.unsplash.com/photo-1504711434969-e33886168f5c?w=1920&q=80"
          alt="Media and press"
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-[#255764]/90 to-[#255764]/70"></div>
      </div>

      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32">
        <div class="max-w-3xl">
          <span class="inline-block bg-[#D97706] text-white text-sm font-bold px-4 py-2 rounded-full mb-6" style="font-family: 'Signika', sans-serif;">
            MEDIA CENTER
          </span>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6" style="font-family: 'Signika', sans-serif;">
            News & Press
          </h1>
          <p class="text-xl text-gray-200 leading-relaxed" style="font-family: 'Lato', sans-serif;">
            Stay updated with our latest news, press releases, and media resources. For press inquiries, contact our communications team.
          </p>
        </div>
      </div>
    </section>

    <!-- Media Contact Banner -->
    <section class="py-8 bg-[#D97706]">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row items-center justify-between gap-4">
          <div class="flex items-center gap-4 text-white">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <div>
              <p class="font-bold" style="font-family: 'Signika', sans-serif;">Media Inquiries</p>
              <p style="font-family: 'Lato', sans-serif;">press@qurbani.com | (800) 900-0027</p>
            </div>
          </div>
          <a href="#media-kit" class="bg-white text-[#D97706] font-bold px-6 py-3 rounded-lg hover:bg-gray-100 transition" style="font-family: 'Signika', sans-serif;">
            Download Media Kit
          </a>
        </div>
      </div>
    </section>

    <!-- Press Releases Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row md:items-end justify-between mb-12">
          <div>
            <span class="inline-block bg-[#255764]/10 text-[#255764] text-sm font-bold px-4 py-2 rounded-full mb-4" style="font-family: 'Signika', sans-serif;">
              PRESS RELEASES
            </span>
            <h2 class="text-3xl md:text-4xl font-bold text-[#333]" style="font-family: 'Signika', sans-serif;">
              Latest Announcements
            </h2>
          </div>
          <a href="#all-releases" class="text-[#255764] font-bold hover:text-[#D97706] transition mt-4 md:mt-0" style="font-family: 'Signika', sans-serif;">
            View All Press Releases
          </a>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
          {pressReleases.map((release) => (
            <div class="bg-stone-50 rounded-xl p-8 hover:shadow-lg transition group">
              <div class="flex items-center gap-2 text-gray-500 text-sm mb-3" style="font-family: 'Lato', sans-serif;">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                {release.date}
              </div>
              <h3 class="text-xl font-bold text-[#333] mb-3 group-hover:text-[#255764] transition" style="font-family: 'Signika', sans-serif;">
                {release.title}
              </h3>
              <p class="text-gray-600 mb-4" style="font-family: 'Lato', sans-serif;">
                {release.excerpt}
              </p>
              <a href={release.downloadUrl} class="inline-flex items-center gap-2 text-[#D97706] font-bold hover:text-[#c46a14] transition" style="font-family: 'Signika', sans-serif;">
                Read Full Release
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- News Coverage Section -->
    <section class="py-20 bg-stone-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <span class="inline-block bg-[#D97706]/10 text-[#D97706] text-sm font-bold px-4 py-2 rounded-full mb-4" style="font-family: 'Signika', sans-serif;">
            IN THE NEWS
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-[#333] mb-4" style="font-family: 'Signika', sans-serif;">
            Media Coverage
          </h2>
          <p class="text-gray-600 max-w-2xl mx-auto" style="font-family: 'Lato', sans-serif;">
            Recent articles and features about our work from leading publications.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {newsArticles.map((article) => (
            <a href={article.url} class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition group">
              <div class="h-48 overflow-hidden">
                <img
                  src={article.image}
                  alt={article.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                />
              </div>
              <div class="p-6">
                <div class="flex items-center gap-2 text-gray-500 text-sm mb-3" style="font-family: 'Lato', sans-serif;">
                  <span class="bg-[#255764]/10 text-[#255764] px-2 py-1 rounded text-xs font-medium">
                    {article.publication}
                  </span>
                  <span>{article.date}</span>
                </div>
                <h3 class="text-lg font-bold text-[#333] group-hover:text-[#D97706] transition" style="font-family: 'Signika', sans-serif;">
                  {article.title}
                </h3>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Video Gallery -->
    <section class="py-20 bg-gradient-to-br from-[#255764] to-[#1a4a55]">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <span class="inline-block bg-white/20 text-white text-sm font-bold px-4 py-2 rounded-full mb-4" style="font-family: 'Signika', sans-serif;">
            VIDEO LIBRARY
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4" style="font-family: 'Signika', sans-serif;">
            Watch Our Stories
          </h2>
          <p class="text-gray-300 max-w-2xl mx-auto" style="font-family: 'Lato', sans-serif;">
            Documentaries, impact videos, and campaign highlights showcasing our work.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {videos.map((video) => (
            <a href={video.url} class="group cursor-pointer">
              <div class="relative rounded-xl overflow-hidden mb-4">
                <img
                  src={video.thumbnail}
                  alt={video.title}
                  class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-black/40 flex items-center justify-center group-hover:bg-black/50 transition">
                  <div class="w-16 h-16 bg-[#D97706] rounded-full flex items-center justify-center shadow-lg group-hover:scale-110 transition">
                    <svg class="w-6 h-6 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M8 5v14l11-7z"/>
                    </svg>
                  </div>
                </div>
                <div class="absolute bottom-3 right-3 bg-black/80 text-white text-xs px-2 py-1 rounded">
                  {video.duration}
                </div>
              </div>
              <h3 class="text-lg font-bold text-white group-hover:text-[#D97706] transition" style="font-family: 'Signika', sans-serif;">
                {video.title}
              </h3>
            </a>
          ))}
        </div>

        <div class="text-center mt-10">
          <a href="https://youtube.com" target="_blank" rel="noopener" class="inline-flex items-center gap-2 text-white font-bold hover:text-[#D97706] transition" style="font-family: 'Signika', sans-serif;">
            Visit Our YouTube Channel
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Photo Gallery -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <span class="inline-block bg-[#255764]/10 text-[#255764] text-sm font-bold px-4 py-2 rounded-full mb-4" style="font-family: 'Signika', sans-serif;">
            PHOTO GALLERY
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-[#333] mb-4" style="font-family: 'Signika', sans-serif;">
            Images from the Field
          </h2>
          <p class="text-gray-600 max-w-2xl mx-auto" style="font-family: 'Lato', sans-serif;">
            High-resolution images available for media use. Please credit Qurbani USA when using.
          </p>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {galleryImages.map((image) => (
            <div class="group relative aspect-square overflow-hidden rounded-xl cursor-pointer">
              <img
                src={image.src}
                alt={image.alt}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition flex items-end p-4">
                <div>
                  <span class="bg-[#D97706] text-white text-xs px-2 py-1 rounded-full" style="font-family: 'Signika', sans-serif;">
                    {image.category}
                  </span>
                  <p class="text-white text-sm mt-2" style="font-family: 'Lato', sans-serif;">
                    {image.alt}
                  </p>
                </div>
              </div>
            </div>
          ))}
        </div>

        <div class="text-center mt-10">
          <a href="#download-gallery" class="inline-flex items-center gap-2 bg-[#255764] hover:bg-[#1a4a55] text-white font-bold px-8 py-4 rounded-lg transition" style="font-family: 'Signika', sans-serif;">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
            </svg>
            Download Full Gallery
          </a>
        </div>
      </div>
    </section>

    <!-- Media Kit Section -->
    <section id="media-kit" class="py-20 bg-stone-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <div>
            <span class="inline-block bg-[#D97706]/10 text-[#D97706] text-sm font-bold px-4 py-2 rounded-full mb-4" style="font-family: 'Signika', sans-serif;">
              FOR JOURNALISTS
            </span>
            <h2 class="text-3xl md:text-4xl font-bold text-[#333] mb-6" style="font-family: 'Signika', sans-serif;">
              Media Kit & Brand Assets
            </h2>
            <p class="text-gray-600 text-lg leading-relaxed mb-6" style="font-family: 'Lato', sans-serif;">
              Download our comprehensive media kit including logos, brand guidelines, fact sheets, and high-resolution images for press use.
            </p>
            <p class="text-gray-600 text-lg leading-relaxed mb-8" style="font-family: 'Lato', sans-serif;">
              Need additional information or want to schedule an interview? Our communications team is ready to assist.
            </p>

            <div class="space-y-4">
              <a href="#" class="flex items-center justify-between p-4 bg-white rounded-xl hover:shadow-md transition group">
                <div class="flex items-center gap-4">
                  <div class="w-12 h-12 bg-[#255764]/10 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-[#255764]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="font-bold text-[#333]" style="font-family: 'Signika', sans-serif;">Logo Pack</p>
                    <p class="text-sm text-gray-500" style="font-family: 'Lato', sans-serif;">PNG, SVG, EPS formats</p>
                  </div>
                </div>
                <svg class="w-5 h-5 text-gray-400 group-hover:text-[#D97706] transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                </svg>
              </a>

              <a href="#" class="flex items-center justify-between p-4 bg-white rounded-xl hover:shadow-md transition group">
                <div class="flex items-center gap-4">
                  <div class="w-12 h-12 bg-[#D97706]/10 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-[#D97706]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="font-bold text-[#333]" style="font-family: 'Signika', sans-serif;">Brand Guidelines</p>
                    <p class="text-sm text-gray-500" style="font-family: 'Lato', sans-serif;">Colors, typography, usage</p>
                  </div>
                </div>
                <svg class="w-5 h-5 text-gray-400 group-hover:text-[#D97706] transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                </svg>
              </a>

              <a href="#" class="flex items-center justify-between p-4 bg-white rounded-xl hover:shadow-md transition group">
                <div class="flex items-center gap-4">
                  <div class="w-12 h-12 bg-[#255764]/10 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-[#255764]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="font-bold text-[#333]" style="font-family: 'Signika', sans-serif;">Fact Sheet</p>
                    <p class="text-sm text-gray-500" style="font-family: 'Lato', sans-serif;">Key statistics & information</p>
                  </div>
                </div>
                <svg class="w-5 h-5 text-gray-400 group-hover:text-[#D97706] transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
