---
/**
 * Our Team Page
 * Leadership team profiles and organization structure
 */
export const prerender = false;

import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

// Team members data
const leadership = [
  {
    name: "Dr. Ahmed Hassan",
    role: "Chief Executive Officer",
    image: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=400&h=400&fit=crop&crop=face",
    bio: "Dr. Hassan has over 20 years of experience in humanitarian leadership and international development. He holds a PhD in Public Policy from Georgetown University.",
    linkedin: "#"
  },
  {
    name: "Fatima Al-Rashid",
    role: "Chief Operating Officer",
    image: "https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?w=400&h=400&fit=crop&crop=face",
    bio: "Fatima brings 15 years of nonprofit management expertise. She previously served as Regional Director for UNICEF in the Middle East.",
    linkedin: "#"
  },
  {
    name: "Muhammad Ibrahim",
    role: "Chief Financial Officer",
    image: "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=400&h=400&fit=crop&crop=face",
    bio: "A certified CPA with extensive experience in nonprofit financial management, Muhammad ensures fiscal responsibility and transparency.",
    linkedin: "#"
  },
  {
    name: "Dr. Aisha Malik",
    role: "Director of Programs",
    image: "https://images.unsplash.com/photo-1580489944761-15a19d654956?w=400&h=400&fit=crop&crop=face",
    bio: "Dr. Malik oversees all humanitarian programs globally. She has a background in public health and sustainable development.",
    linkedin: "#"
  }
];

const boardMembers = [
  {
    name: "Sheikh Omar Al-Farooq",
    role: "Board Chairman",
    image: "https://images.unsplash.com/photo-1560250097-0b93528c311a?w=400&h=400&fit=crop&crop=face"
  },
  {
    name: "Dr. Sarah Ahmed",
    role: "Board Member",
    image: "https://images.unsplash.com/photo-1551836022-d5d88e9218df?w=400&h=400&fit=crop&crop=face"
  },
  {
    name: "Yusuf Khan",
    role: "Board Member",
    image: "https://images.unsplash.com/photo-1519085360753-af0119f7cbe7?w=400&h=400&fit=crop&crop=face"
  },
  {
    name: "Dr. Maryam Shah",
    role: "Board Secretary",
    image: "https://images.unsplash.com/photo-1487412720507-e7ab37603c6f?w=400&h=400&fit=crop&crop=face"
  },
  {
    name: "Khalid Rahman",
    role: "Board Treasurer",
    image: "https://images.unsplash.com/photo-1500648767791-00dcc994a43e?w=400&h=400&fit=crop&crop=face"
  },
  {
    name: "Amina Hassan",
    role: "Board Member",
    image: "https://images.unsplash.com/photo-1594744803329-e58b31de8bf5?w=400&h=400&fit=crop&crop=face"
  }
];
---

<Layout title="Our Team | Qurbani USA - Leadership & Board of Directors">
  <Navbar />

  <main>
    <!-- Hero Section -->
    <section class="relative min-h-[450px] flex items-center overflow-hidden">
      <div class="absolute inset-0">
        <img
          src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=1920&q=80"
          alt="Our team"
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-[#255764]/90 to-[#255764]/70"></div>
      </div>

      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32">
        <div class="max-w-3xl">
          <span class="inline-block bg-[#D97706] text-white text-sm font-bold px-4 py-2 rounded-full mb-6" style="font-family: 'Signika', sans-serif;">
            OUR PEOPLE
          </span>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6" style="font-family: 'Signika', sans-serif;">
            Meet Our Team
          </h1>
          <p class="text-xl text-gray-200 leading-relaxed" style="font-family: 'Lato', sans-serif;">
            Dedicated professionals committed to making a lasting impact on communities worldwide.
          </p>
        </div>
      </div>
    </section>

    <!-- Leadership Team Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <span class="inline-block bg-[#255764]/10 text-[#255764] text-sm font-bold px-4 py-2 rounded-full mb-4" style="font-family: 'Signika', sans-serif;">
            LEADERSHIP
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-[#333] mb-4" style="font-family: 'Signika', sans-serif;">
            Executive Leadership Team
          </h2>
          <p class="text-gray-600 max-w-2xl mx-auto" style="font-family: 'Lato', sans-serif;">
            Our leaders bring decades of experience in humanitarian work, nonprofit management, and international development.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-10">
          {leadership.map((member) => (
            <div class="bg-stone-50 rounded-2xl overflow-hidden flex flex-col md:flex-row group hover:shadow-xl transition-shadow">
              <div class="md:w-2/5 relative overflow-hidden">
                <img
                  src={member.image}
                  alt={member.name}
                  class="w-full h-64 md:h-full object-cover group-hover:scale-105 transition-transform duration-500"
                />
              </div>
              <div class="md:w-3/5 p-8">
                <h3 class="text-2xl font-bold text-[#333] mb-1" style="font-family: 'Signika', sans-serif;">
                  {member.name}
                </h3>
                <p class="text-[#D97706] font-semibold mb-4" style="font-family: 'Signika', sans-serif;">
                  {member.role}
                </p>
                <p class="text-gray-600 mb-4 leading-relaxed" style="font-family: 'Lato', sans-serif;">
                  {member.bio}
                </p>
                <a href={member.linkedin} class="inline-flex items-center text-[#255764] hover:text-[#D97706] transition">
                  <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                  </svg>
                  <span style="font-family: 'Lato', sans-serif;">Connect on LinkedIn</span>
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Board of Directors -->
    <section class="py-20 bg-gradient-to-br from-[#255764] to-[#1a4a55]">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <span class="inline-block bg-white/20 text-white text-sm font-bold px-4 py-2 rounded-full mb-4" style="font-family: 'Signika', sans-serif;">
            GOVERNANCE
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4" style="font-family: 'Signika', sans-serif;">
            Board of Directors
          </h2>
          <p class="text-gray-300 max-w-2xl mx-auto" style="font-family: 'Lato', sans-serif;">
            Our board provides strategic oversight and ensures we remain true to our mission and values.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {boardMembers.map((member) => (
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 text-center hover:bg-white/20 transition">
              <img
                src={member.image}
                alt={member.name}
                class="w-32 h-32 rounded-full object-cover mx-auto mb-4 border-4 border-white/30"
              />
              <h3 class="text-xl font-bold text-white mb-1" style="font-family: 'Signika', sans-serif;">
                {member.name}
              </h3>
              <p class="text-[#D97706] font-medium" style="font-family: 'Signika', sans-serif;">
                {member.role}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Scholars & Advisors -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <span class="inline-block bg-[#D97706]/10 text-[#D97706] text-sm font-bold px-4 py-2 rounded-full mb-4" style="font-family: 'Signika', sans-serif;">
            GUIDANCE
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-[#333] mb-4" style="font-family: 'Signika', sans-serif;">
            Religious Scholars & Advisors
          </h2>
          <p class="text-gray-600 max-w-2xl mx-auto" style="font-family: 'Lato', sans-serif;">
            Our Sharia advisory board ensures all our programs comply with Islamic principles.
          </p>
        </div>

        <div class="bg-stone-50 rounded-2xl p-10">
          <div class="grid md:grid-cols-3 gap-8 text-center">
            <div>
              <div class="w-24 h-24 bg-[#255764] rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-[#333] mb-2" style="font-family: 'Signika', sans-serif;">Zakat Compliance</h3>
              <p class="text-gray-600" style="font-family: 'Lato', sans-serif;">
                All Zakat programs are reviewed and approved by qualified scholars to ensure proper distribution.
              </p>
            </div>
            <div>
              <div class="w-24 h-24 bg-[#D97706] rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-[#333] mb-2" style="font-family: 'Signika', sans-serif;">Ethical Standards</h3>
              <p class="text-gray-600" style="font-family: 'Lato', sans-serif;">
                Our programs adhere to the highest ethical standards in accordance with Islamic teachings.
              </p>
            </div>
            <div>
              <div class="w-24 h-24 bg-[#255764] rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-[#333] mb-2" style="font-family: 'Signika', sans-serif;">Community Guidance</h3>
              <p class="text-gray-600" style="font-family: 'Lato', sans-serif;">
                Our scholars provide guidance on religious obligations and charitable giving.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Join Our Team CTA -->
    <section class="py-16 bg-[#D97706]">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col lg:flex-row items-center justify-between gap-8">
          <div class="text-center lg:text-left">
            <h2 class="text-3xl font-bold text-white mb-4" style="font-family: 'Signika', sans-serif;">
              Join Our Team
            </h2>
            <p class="text-white/90 text-lg max-w-xl" style="font-family: 'Lato', sans-serif;">
              Are you passionate about making a difference? We're always looking for talented individuals to join our mission.
            </p>
          </div>
          <div class="flex flex-wrap gap-4">
            <a href="/careers" class="bg-white text-[#D97706] font-bold px-8 py-4 rounded-lg hover:bg-gray-100 transition" style="font-family: 'Signika', sans-serif;">
              View Opportunities
            </a>
            <a href="/volunteer" class="bg-transparent border-2 border-white text-white font-bold px-8 py-4 rounded-lg hover:bg-white hover:text-[#D97706] transition" style="font-family: 'Signika', sans-serif;">
              Volunteer With Us
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
