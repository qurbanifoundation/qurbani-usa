---
/**
 * Ramadan Food Packs Page
 * Explains food pack programs and provides donation options
 */
export const prerender = false;

import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Ramadan Food Packs - Qurbani Foundation USA" description="Provide Ramadan food packs to families in need. Essential supplies for the entire month including rice, flour, oil, dates, and more.">
  <Navbar />

  <!-- Hero Section -->
  <section class="relative pt-24 pb-20 overflow-hidden">
    <!-- Background gradient -->
    <div class="absolute inset-0 bg-gradient-to-br from-[#a16207] via-[#ca8a04] to-[#eab308]"></div>
    <!-- Decorative pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23ffffff\" fill-opacity=\"0.4\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>

    <div class="relative z-10 max-w-[1400px] mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <!-- Breadcrumb -->
        <div class="flex items-center justify-center gap-2 text-white/60 text-sm mb-6">
          <a href="/" class="hover:text-white transition">Home</a>
          <span>/</span>
          <a href="/ramadan" class="hover:text-white transition">Ramadan 2026</a>
          <span>/</span>
          <span class="text-white">Food Packs</span>
        </div>

        <!-- Icon -->
        <div class="w-20 h-20 mx-auto mb-6 bg-white/10 rounded-full flex items-center justify-center backdrop-blur-sm border border-white/20">
          <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 2a4 4 0 00-4 4v1H5a1 1 0 00-.994.89l-1 9A1 1 0 004 18h12a1 1 0 00.994-1.11l-1-9A1 1 0 0015 7h-1V6a4 4 0 00-4-4zm2 5V6a2 2 0 10-4 0v1h4zm-6 3a1 1 0 112 0 1 1 0 01-2 0zm7-1a1 1 0 100 2 1 1 0 000-2z"></path>
          </svg>
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6" style="font-family: 'Signika', sans-serif;">
          Ramadan <span class="text-white">Food Packs</span>
        </h1>

        <p class="text-lg md:text-xl text-white/90 mb-4 leading-relaxed" style="font-family: 'Lato', sans-serif;">
          Provide essential food supplies for the entire blessed month
        </p>

        <div class="inline-block bg-white/20 backdrop-blur-sm text-white text-xl font-bold px-6 py-3 rounded-full border border-white/30">
          From $50 per pack
        </div>
      </div>
    </div>

    <!-- Wave divider -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none" class="w-full h-16">
        <path d="M0 120L60 110C120 100 240 80 360 70C480 60 600 60 720 65C840 70 960 80 1080 85C1200 90 1320 90 1380 90L1440 90V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0Z" fill="white"/>
      </svg>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-16 bg-white">
    <div class="max-w-[1200px] mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <!-- Left Column - Information -->
        <div>
          <h2 class="text-3xl font-bold text-gray-800 mb-6" style="font-family: 'Signika', sans-serif;">
            What is a <span class="text-[#ca8a04]">Ramadan Food Pack</span>?
          </h2>

          <div class="prose prose-lg max-w-none text-gray-600" style="font-family: 'Lato', sans-serif;">
            <p class="mb-4">
              A Ramadan Food Pack is a comprehensive package of essential food supplies designed to sustain a family throughout the entire month of Ramadan. Unlike individual meals, food packs provide families with the ingredients they need to prepare suhoor (pre-dawn meal) and iftar (evening meal) themselves, preserving their dignity and independence.
            </p>

            <p class="mb-6">
              For many families living in poverty, the increased food needs during Ramadan can be overwhelming. Your food pack donation ensures they can focus on worship and spiritual growth without worrying about where their next meal will come from.
            </p>

            <div class="bg-[#ca8a04]/10 border-l-4 border-[#ca8a04] p-4 rounded-r-lg mb-6">
              <p class="text-sm text-gray-700 italic">
                "The believer's shade on the Day of Resurrection will be his charity."
                <span class="block mt-1 font-semibold">- Prophet Muhammad (PBUH), Tirmidhi</span>
              </p>
            </div>

            <h3 class="text-xl font-bold text-gray-800 mb-4" style="font-family: 'Signika', sans-serif;">
              What's Included in a Food Pack?
            </h3>

            <p class="mb-4">
              Our food packs are carefully designed to include culturally appropriate staple foods that families need throughout Ramadan:
            </p>

            <div class="grid grid-cols-2 gap-4 mb-6">
              <div class="bg-gray-50 rounded-xl p-4">
                <h4 class="font-bold text-gray-800 mb-2 text-sm">Staple Grains</h4>
                <ul class="space-y-1 text-sm">
                  <li class="flex items-center gap-2">
                    <span class="w-2 h-2 bg-[#ca8a04] rounded-full"></span>
                    Rice (10-25 kg)
                  </li>
                  <li class="flex items-center gap-2">
                    <span class="w-2 h-2 bg-[#ca8a04] rounded-full"></span>
                    Flour (5-10 kg)
                  </li>
                  <li class="flex items-center gap-2">
                    <span class="w-2 h-2 bg-[#ca8a04] rounded-full"></span>
                    Lentils/Beans
                  </li>
                </ul>
              </div>
              <div class="bg-gray-50 rounded-xl p-4">
                <h4 class="font-bold text-gray-800 mb-2 text-sm">Essential Items</h4>
                <ul class="space-y-1 text-sm">
                  <li class="flex items-center gap-2">
                    <span class="w-2 h-2 bg-[#ca8a04] rounded-full"></span>
                    Cooking Oil
                  </li>
                  <li class="flex items-center gap-2">
                    <span class="w-2 h-2 bg-[#ca8a04] rounded-full"></span>
                    Sugar
                  </li>
                  <li class="flex items-center gap-2">
                    <span class="w-2 h-2 bg-[#ca8a04] rounded-full"></span>
                    Salt & Spices
                  </li>
                </ul>
              </div>
              <div class="bg-gray-50 rounded-xl p-4">
                <h4 class="font-bold text-gray-800 mb-2 text-sm">Ramadan Essentials</h4>
                <ul class="space-y-1 text-sm">
                  <li class="flex items-center gap-2">
                    <span class="w-2 h-2 bg-[#ca8a04] rounded-full"></span>
                    Dates
                  </li>
                  <li class="flex items-center gap-2">
                    <span class="w-2 h-2 bg-[#ca8a04] rounded-full"></span>
                    Tea/Coffee
                  </li>
                  <li class="flex items-center gap-2">
                    <span class="w-2 h-2 bg-[#ca8a04] rounded-full"></span>
                    Powdered Milk
                  </li>
                </ul>
              </div>
              <div class="bg-gray-50 rounded-xl p-4">
                <h4 class="font-bold text-gray-800 mb-2 text-sm">Protein Sources</h4>
                <ul class="space-y-1 text-sm">
                  <li class="flex items-center gap-2">
                    <span class="w-2 h-2 bg-[#ca8a04] rounded-full"></span>
                    Chickpeas
                  </li>
                  <li class="flex items-center gap-2">
                    <span class="w-2 h-2 bg-[#ca8a04] rounded-full"></span>
                    Canned Fish/Meat*
                  </li>
                  <li class="flex items-center gap-2">
                    <span class="w-2 h-2 bg-[#ca8a04] rounded-full"></span>
                    Eggs*
                  </li>
                </ul>
              </div>
            </div>

            <p class="text-xs text-gray-500 mb-6">*Contents may vary based on region and package size</p>

            <h3 class="text-xl font-bold text-gray-800 mb-4" style="font-family: 'Signika', sans-serif;">
              Where Are Food Packs Distributed?
            </h3>

            <p class="mb-4">
              We distribute Ramadan food packs in areas with high levels of food insecurity, including:
            </p>

            <ul class="space-y-2 mb-6">
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-[#ca8a04] flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span>Pakistan, Bangladesh, Afghanistan</span>
              </li>
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-[#ca8a04] flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span>Syria, Yemen, Gaza, Lebanon</span>
              </li>
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-[#ca8a04] flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span>Somalia, Sudan, Ethiopia</span>
              </li>
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-[#ca8a04] flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span>India, Indonesia, and more</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- Right Column - Donation Options -->
        <div class="lg:sticky lg:top-24">
          <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
            <div class="bg-gradient-to-r from-[#ca8a04] to-[#eab308] p-6 text-center">
              <h3 class="text-2xl font-bold text-white mb-2" style="font-family: 'Signika', sans-serif;">
                Choose Your Food Pack
              </h3>
              <p class="text-white/80 text-sm">Select a pack size to donate</p>
            </div>

            <div class="p-6">
              <!-- Pack Options -->
              <div class="space-y-3 mb-6">
                <button class="food-pack-btn w-full p-4 border-2 border-gray-200 rounded-xl hover:border-[#ca8a04] transition text-left group" data-pack="small" data-price="50">
                  <div class="flex items-center justify-between">
                    <div>
                      <h4 class="font-bold text-gray-800 group-hover:text-[#ca8a04] transition">Small Pack</h4>
                      <p class="text-sm text-gray-500">Feeds a small family for 2 weeks</p>
                    </div>
                    <span class="text-xl font-bold text-[#ca8a04]">$50</span>
                  </div>
                </button>

                <button class="food-pack-btn w-full p-4 border-2 border-[#ca8a04] bg-[#ca8a04]/10 rounded-xl transition text-left group" data-pack="medium" data-price="100">
                  <div class="flex items-center justify-between">
                    <div>
                      <h4 class="font-bold text-[#ca8a04]">Family Pack</h4>
                      <p class="text-sm text-gray-500">Feeds a family of 5 for entire Ramadan</p>
                    </div>
                    <span class="text-xl font-bold text-[#ca8a04]">$100</span>
                  </div>
                  <span class="inline-block mt-2 text-xs bg-[#ca8a04] text-white px-2 py-1 rounded-full">Most Popular</span>
                </button>

                <button class="food-pack-btn w-full p-4 border-2 border-gray-200 rounded-xl hover:border-[#ca8a04] transition text-left group" data-pack="large" data-price="200">
                  <div class="flex items-center justify-between">
                    <div>
                      <h4 class="font-bold text-gray-800 group-hover:text-[#ca8a04] transition">Large Pack</h4>
                      <p class="text-sm text-gray-500">Extended family pack with extra items</p>
                    </div>
                    <span class="text-xl font-bold text-[#ca8a04]">$200</span>
                  </div>
                </button>

                <button class="food-pack-btn w-full p-4 border-2 border-gray-200 rounded-xl hover:border-[#ca8a04] transition text-left group" data-pack="premium" data-price="500">
                  <div class="flex items-center justify-between">
                    <div>
                      <h4 class="font-bold text-gray-800 group-hover:text-[#ca8a04] transition">Community Pack</h4>
                      <p class="text-sm text-gray-500">Feeds 5 families for entire Ramadan</p>
                    </div>
                    <span class="text-xl font-bold text-[#ca8a04]">$500</span>
                  </div>
                </button>
              </div>

              <!-- Quantity -->
              <div class="mb-6">
                <label class="block text-sm font-semibold text-gray-700 mb-2">Quantity</label>
                <div class="flex items-center gap-3">
                  <button id="food-pack-decrease" class="w-10 h-10 rounded-lg border border-gray-200 flex items-center justify-center hover:bg-gray-100 transition">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
                    </svg>
                  </button>
                  <input type="number" id="food-pack-quantity" min="1" value="1" class="w-20 text-center px-4 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-[#ca8a04] focus:border-[#ca8a04] outline-none transition" />
                  <button id="food-pack-increase" class="w-10 h-10 rounded-lg border border-gray-200 flex items-center justify-center hover:bg-gray-100 transition">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                  </button>
                </div>
              </div>

              <!-- Total Amount -->
              <div class="bg-[#ca8a04]/10 rounded-xl p-4 mb-6 text-center">
                <p class="text-sm text-gray-600 mb-1">Total Amount</p>
                <p class="text-4xl font-bold text-[#ca8a04]" id="food-pack-total">$100</p>
                <p class="text-xs text-gray-500 mt-1" id="food-pack-summary">1 x Family Pack</p>
              </div>

              <!-- Add to Cart Button -->
              <button
                id="food-pack-add-to-cart"
                class="w-full bg-[#ca8a04] hover:bg-[#a16207] text-white font-bold py-4 rounded-xl transition-all hover:scale-[1.02] flex items-center justify-center gap-2"
                style="font-family: 'Signika', sans-serif; box-shadow: 0 4px 15px rgba(202, 138, 4, 0.3);"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                Add Food Packs to Cart
              </button>

              <p class="text-center text-xs text-gray-500 mt-4">
                Every pack reaches families before Ramadan begins
              </p>
            </div>
          </div>

          <!-- Quick Links -->
          <div class="mt-6 bg-gray-50 rounded-xl p-4">
            <p class="text-sm font-semibold text-gray-700 mb-3">Other Ramadan Giving:</p>
            <div class="space-y-2">
              <a href="/fidya" class="flex items-center justify-between p-3 bg-white rounded-lg hover:shadow-md transition">
                <span class="text-sm font-medium text-gray-700">Fidya</span>
                <span class="text-xs text-gray-500">$10/day</span>
              </a>
              <a href="/zakat-ul-fitr" class="flex items-center justify-between p-3 bg-white rounded-lg hover:shadow-md transition">
                <span class="text-sm font-medium text-gray-700">Zakat ul-Fitr</span>
                <span class="text-xs text-gray-500">$15/person</span>
              </a>
              <a href="/iftar" class="flex items-center justify-between p-3 bg-white rounded-lg hover:shadow-md transition">
                <span class="text-sm font-medium text-gray-700">Feed Iftar</span>
                <span class="text-xs text-gray-500">$5/meal</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Food Packs Section -->
  <section class="py-16 bg-[#f8f9fa]">
    <div class="max-w-[1200px] mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-800 mb-4" style="font-family: 'Signika', sans-serif;">
          Why <span class="text-[#ca8a04]">Food Packs</span> Matter
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Food packs provide sustainable support that empowers families throughout Ramadan.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white rounded-2xl p-6 shadow-sm text-center">
          <div class="w-16 h-16 bg-[#ca8a04]/10 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-[#ca8a04]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-2" style="font-family: 'Signika', sans-serif;">Family Dignity</h3>
          <p class="text-gray-600 text-sm">
            Families can prepare meals at home, maintaining their dignity and family traditions during the blessed month.
          </p>
        </div>

        <div class="bg-white rounded-2xl p-6 shadow-sm text-center">
          <div class="w-16 h-16 bg-[#ca8a04]/10 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-[#ca8a04]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-2" style="font-family: 'Signika', sans-serif;">Cost Effective</h3>
          <p class="text-gray-600 text-sm">
            Bulk purchasing allows us to provide more food per dollar, maximizing the impact of your donation.
          </p>
        </div>

        <div class="bg-white rounded-2xl p-6 shadow-sm text-center">
          <div class="w-16 h-16 bg-[#ca8a04]/10 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-[#ca8a04]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-2" style="font-family: 'Signika', sans-serif;">Month-Long Support</h3>
          <p class="text-gray-600 text-sm">
            Unlike single meals, food packs provide sustained nutrition throughout the entire month of Ramadan.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-br from-[#ca8a04] to-[#a16207] relative overflow-hidden">
    <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full -translate-y-1/2 translate-x-1/2"></div>
    <div class="absolute bottom-0 left-0 w-48 h-48 bg-white/10 rounded-full translate-y-1/2 -translate-x-1/2"></div>

    <div class="relative z-10 max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6" style="font-family: 'Signika', sans-serif;">
        Nourish a Family This Ramadan
      </h2>
      <p class="text-lg text-white/80 mb-8 max-w-2xl mx-auto">
        Your food pack ensures a family has everything they need to observe Ramadan with peace of mind and focus on their worship.
      </p>
      <a
        href="/ramadan"
        class="inline-flex items-center gap-2 bg-white hover:bg-gray-100 text-[#ca8a04] font-bold px-8 py-4 rounded-xl transition-all hover:scale-105"
        style="font-family: 'Signika', sans-serif;"
      >
        Explore All Ramadan Giving
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </section>

  <Footer />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const packButtons = document.querySelectorAll('.food-pack-btn');
    const quantityInput = document.getElementById('food-pack-quantity') as HTMLInputElement;
    const decreaseBtn = document.getElementById('food-pack-decrease');
    const increaseBtn = document.getElementById('food-pack-increase');
    const totalDisplay = document.getElementById('food-pack-total');
    const summaryDisplay = document.getElementById('food-pack-summary');
    const addToCartBtn = document.getElementById('food-pack-add-to-cart');

    const packNames: Record<string, string> = {
      small: 'Small Pack',
      medium: 'Family Pack',
      large: 'Large Pack',
      premium: 'Community Pack'
    };

    let selectedPack = 'medium';
    let selectedPrice = 100;
    let quantity = 1;

    function updateTotal() {
      const total = selectedPrice * quantity;
      if (totalDisplay) totalDisplay.textContent = `$${total}`;
      if (summaryDisplay) summaryDisplay.textContent = `${quantity} x ${packNames[selectedPack]}`;
    }

    function selectPack(pack: string, price: number) {
      selectedPack = pack;
      selectedPrice = price;

      packButtons.forEach(btn => {
        const btnPack = btn.getAttribute('data-pack');
        if (btnPack === pack) {
          btn.classList.remove('border-gray-200');
          btn.classList.add('border-[#ca8a04]', 'bg-[#ca8a04]/10');
        } else {
          btn.classList.remove('border-[#ca8a04]', 'bg-[#ca8a04]/10');
          btn.classList.add('border-gray-200');
        }
      });

      updateTotal();
    }

    packButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        const pack = btn.getAttribute('data-pack') || 'medium';
        const price = parseInt(btn.getAttribute('data-price') || '100');
        selectPack(pack, price);
      });
    });

    decreaseBtn?.addEventListener('click', () => {
      if (quantity > 1) {
        quantity--;
        if (quantityInput) quantityInput.value = quantity.toString();
        updateTotal();
      }
    });

    increaseBtn?.addEventListener('click', () => {
      quantity++;
      if (quantityInput) quantityInput.value = quantity.toString();
      updateTotal();
    });

    quantityInput?.addEventListener('input', () => {
      quantity = Math.max(1, parseInt(quantityInput.value) || 1);
      quantityInput.value = quantity.toString();
      updateTotal();
    });

    addToCartBtn?.addEventListener('click', () => {
      const total = selectedPrice * quantity;

      if (typeof (window as any).addToCart === 'function') {
        (window as any).addToCart({
          id: `food-pack-${selectedPack}-${quantity}-${Date.now()}`,
          type: 'donation',
          name: `Ramadan Food Pack - ${packNames[selectedPack]}`,
          amount: total,
          quantity: 1,
          description: `${quantity} x ${packNames[selectedPack]} ($${selectedPrice} each)`,
          frequency: 'single'
        });
      }
    });

    // Initialize
    updateTotal();
  });
</script>
