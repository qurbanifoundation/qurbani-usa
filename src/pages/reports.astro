---
/**
 * Annual Reports Page
 * Downloadable reports and financial transparency
 */
export const prerender = false;

import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

// Reports data
const annualReports = [
  {
    year: "2025",
    title: "Annual Report 2025",
    description: "Our most impactful year yet - serving over 3 million beneficiaries across 53 countries.",
    image: "https://images.unsplash.com/photo-1554224155-6726b3ff858f?w=600&h=400&fit=crop",
    downloadUrl: "#",
    highlights: ["$45M raised", "3.2M beneficiaries", "53 countries"]
  },
  {
    year: "2024",
    title: "Annual Report 2024",
    description: "Expanding our reach with new programs in emergency relief and sustainable development.",
    image: "https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=600&h=400&fit=crop",
    downloadUrl: "#",
    highlights: ["$38M raised", "2.8M beneficiaries", "48 countries"]
  },
  {
    year: "2023",
    title: "Annual Report 2023",
    description: "Post-pandemic recovery efforts and renewed focus on long-term community development.",
    image: "https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=600&h=400&fit=crop",
    downloadUrl: "#",
    highlights: ["$32M raised", "2.4M beneficiaries", "45 countries"]
  },
  {
    year: "2022",
    title: "Annual Report 2022",
    description: "Continued humanitarian response to global crises with expanded healthcare programs.",
    image: "https://images.unsplash.com/photo-1543286386-713bdd548da4?w=600&h=400&fit=crop",
    downloadUrl: "#",
    highlights: ["$28M raised", "2.1M beneficiaries", "42 countries"]
  }
];

const financialDocuments = [
  { name: "Form 990 (2025)", type: "Tax Filing", downloadUrl: "#" },
  { name: "Audited Financial Statements 2025", type: "Audit Report", downloadUrl: "#" },
  { name: "Form 990 (2024)", type: "Tax Filing", downloadUrl: "#" },
  { name: "Audited Financial Statements 2024", type: "Audit Report", downloadUrl: "#" },
  { name: "Form 990 (2023)", type: "Tax Filing", downloadUrl: "#" },
  { name: "Audited Financial Statements 2023", type: "Audit Report", downloadUrl: "#" }
];
---

<Layout title="Annual Reports | Qurbani USA - Transparency & Accountability">
  <Navbar />

  <main>
    <!-- Hero Section -->
    <section class="relative min-h-[450px] flex items-center overflow-hidden">
      <div class="absolute inset-0">
        <img
          src="https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?w=1920&q=80"
          alt="Reports and documentation"
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-[#255764]/90 to-[#255764]/70"></div>
      </div>

      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32">
        <div class="max-w-3xl">
          <span class="inline-block bg-[#D97706] text-white text-sm font-bold px-4 py-2 rounded-full mb-6" style="font-family: 'Signika', sans-serif;">
            TRANSPARENCY
          </span>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6" style="font-family: 'Signika', sans-serif;">
            Annual Reports
          </h1>
          <p class="text-xl text-gray-200 leading-relaxed" style="font-family: 'Lato', sans-serif;">
            Full transparency in how we utilize your donations. Review our detailed annual reports and financial statements.
          </p>
        </div>
      </div>
    </section>

    <!-- Transparency Commitment -->
    <section class="py-16 bg-white border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-4 gap-8 text-center">
          <div>
            <div class="w-16 h-16 bg-[#255764] rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-[#333] mb-2" style="font-family: 'Signika', sans-serif;">100% Zakat Policy</h3>
            <p class="text-gray-600" style="font-family: 'Lato', sans-serif;">Every cent of Zakat reaches beneficiaries</p>
          </div>
          <div>
            <div class="w-16 h-16 bg-[#D97706] rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-[#333] mb-2" style="font-family: 'Signika', sans-serif;">Independently Audited</h3>
            <p class="text-gray-600" style="font-family: 'Lato', sans-serif;">Annual audits by certified CPAs</p>
          </div>
          <div>
            <div class="w-16 h-16 bg-[#255764] rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-[#333] mb-2" style="font-family: 'Signika', sans-serif;">501(c)(3) Status</h3>
            <p class="text-gray-600" style="font-family: 'Lato', sans-serif;">Tax-exempt nonprofit organization</p>
          </div>
          <div>
            <div class="w-16 h-16 bg-[#D97706] rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-[#333] mb-2" style="font-family: 'Signika', sans-serif;">Full Visibility</h3>
            <p class="text-gray-600" style="font-family: 'Lato', sans-serif;">Track your donation impact</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Annual Reports Grid -->
    <section class="py-20 bg-stone-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <span class="inline-block bg-[#255764]/10 text-[#255764] text-sm font-bold px-4 py-2 rounded-full mb-4" style="font-family: 'Signika', sans-serif;">
            YEARLY IMPACT
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-[#333] mb-4" style="font-family: 'Signika', sans-serif;">
            Download Our Annual Reports
          </h2>
          <p class="text-gray-600 max-w-2xl mx-auto" style="font-family: 'Lato', sans-serif;">
            Comprehensive overviews of our programs, impact metrics, and financial statements.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          {annualReports.map((report) => (
            <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition group">
              <div class="relative h-56 overflow-hidden">
                <img
                  src={report.image}
                  alt={report.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                />
                <div class="absolute top-4 left-4 bg-[#D97706] text-white font-bold px-4 py-2 rounded-full" style="font-family: 'Signika', sans-serif;">
                  {report.year}
                </div>
              </div>
              <div class="p-8">
                <h3 class="text-2xl font-bold text-[#333] mb-3" style="font-family: 'Signika', sans-serif;">
                  {report.title}
                </h3>
                <p class="text-gray-600 mb-4 leading-relaxed" style="font-family: 'Lato', sans-serif;">
                  {report.description}
                </p>
                <div class="flex flex-wrap gap-3 mb-6">
                  {report.highlights.map((highlight) => (
                    <span class="bg-[#255764]/10 text-[#255764] px-3 py-1 rounded-full text-sm font-medium" style="font-family: 'Lato', sans-serif;">
                      {highlight}
                    </span>
                  ))}
                </div>
                <a
                  href={report.downloadUrl}
                  class="inline-flex items-center gap-2 bg-[#255764] hover:bg-[#1a4a55] text-white font-bold px-6 py-3 rounded-lg transition"
                  style="font-family: 'Signika', sans-serif;"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                  Download PDF
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Financial Documents -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-16 items-start">
          <div>
            <span class="inline-block bg-[#D97706]/10 text-[#D97706] text-sm font-bold px-4 py-2 rounded-full mb-4" style="font-family: 'Signika', sans-serif;">
              FINANCIAL DOCUMENTS
            </span>
            <h2 class="text-3xl md:text-4xl font-bold text-[#333] mb-6" style="font-family: 'Signika', sans-serif;">
              Tax Filings & Audit Reports
            </h2>
            <p class="text-gray-600 text-lg leading-relaxed mb-8" style="font-family: 'Lato', sans-serif;">
              Access our IRS Form 990 filings and independently audited financial statements. We believe in complete financial transparency.
            </p>

            <div class="bg-stone-50 rounded-2xl p-8">
              <h3 class="text-xl font-bold text-[#333] mb-4" style="font-family: 'Signika', sans-serif;">
                Fund Allocation
              </h3>
              <div class="space-y-4">
                <div>
                  <div class="flex justify-between mb-1">
                    <span class="text-gray-600" style="font-family: 'Lato', sans-serif;">Program Services</span>
                    <span class="font-bold text-[#255764]">87%</span>
                  </div>
                  <div class="w-full bg-gray-200 rounded-full h-3">
                    <div class="bg-[#255764] h-3 rounded-full" style="width: 87%"></div>
                  </div>
                </div>
                <div>
                  <div class="flex justify-between mb-1">
                    <span class="text-gray-600" style="font-family: 'Lato', sans-serif;">Fundraising</span>
                    <span class="font-bold text-[#D97706]">8%</span>
                  </div>
                  <div class="w-full bg-gray-200 rounded-full h-3">
                    <div class="bg-[#D97706] h-3 rounded-full" style="width: 8%"></div>
                  </div>
                </div>
                <div>
                  <div class="flex justify-between mb-1">
                    <span class="text-gray-600" style="font-family: 'Lato', sans-serif;">Administration</span>
                    <span class="font-bold text-gray-500">5%</span>
                  </div>
                  <div class="w-full bg-gray-200 rounded-full h-3">
                    <div class="bg-gray-400 h-3 rounded-full" style="width: 5%"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div>
            <div class="bg-stone-50 rounded-2xl p-8">
              <h3 class="text-xl font-bold text-[#333] mb-6" style="font-family: 'Signika', sans-serif;">
                Available Documents
              </h3>
              <div class="space-y-4">
                {financialDocuments.map((doc) => (
                  <a
                    href={doc.downloadUrl}
                    class="flex items-center justify-between p-4 bg-white rounded-xl hover:shadow-md transition group"
                  >
                    <div class="flex items-center gap-4">
                      <div class="w-12 h-12 bg-[#255764]/10 rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-[#255764]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                      </div>
                      <div>
                        <p class="font-bold text-[#333]" style="font-family: 'Signika', sans-serif;">{doc.name}</p>
                        <p class="text-sm text-gray-500" style="font-family: 'Lato', sans-serif;">{doc.type}</p>
                      </div>
                    </div>
                    <svg class="w-5 h-5 text-gray-400 group-hover:text-[#D97706] transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                    </svg>
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Ratings & Recognition -->
    <section class="py-20 bg-gradient-to-br from-[#255764] to-[#1a4a55]">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <span class="inline-block bg-white/20 text-white text-sm font-bold px-4 py-2 rounded-full mb-4" style="font-family: 'Signika', sans-serif;">
            RECOGNITION
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4" style="font-family: 'Signika', sans-serif;">
            Trusted & Verified
          </h2>
          <p class="text-gray-300 max-w-2xl mx-auto" style="font-family: 'Lato', sans-serif;">
            Our commitment to transparency has earned recognition from leading charity evaluators.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-8 text-center">
            <div class="w-20 h-20 bg-white rounded-full flex items-center justify-center mx-auto mb-6">
              <span class="text-[#255764] text-3xl font-bold">A+</span>
            </div>
            <h3 class="text-xl font-bold text-white mb-2" style="font-family: 'Signika', sans-serif;">
              Charity Navigator
            </h3>
            <p class="text-gray-300" style="font-family: 'Lato', sans-serif;">
              Four-star rating for financial health and accountability
            </p>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-8 text-center">
            <div class="w-20 h-20 bg-white rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-10 h-10 text-[#D97706]" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-2" style="font-family: 'Signika', sans-serif;">
              GuideStar Platinum
            </h3>
            <p class="text-gray-300" style="font-family: 'Lato', sans-serif;">
              Highest level of transparency and disclosure
            </p>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-8 text-center">
            <div class="w-20 h-20 bg-white rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-10 h-10 text-[#255764]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-2" style="font-family: 'Signika', sans-serif;">
              BBB Accredited
            </h3>
            <p class="text-gray-300" style="font-family: 'Lato', sans-serif;">
              Meets all 20 standards for charity accountability
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-16 bg-[#D97706]">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6" style="font-family: 'Signika', sans-serif;">
          Questions About Our Finances?
        </h2>
        <p class="text-white/90 text-lg max-w-2xl mx-auto mb-8" style="font-family: 'Lato', sans-serif;">
          We're committed to answering any questions you may have about how we use donations.
        </p>
        <a href="/contact" class="inline-flex items-center gap-2 bg-white text-[#D97706] font-bold px-8 py-4 rounded-lg hover:bg-gray-100 transition" style="font-family: 'Signika', sans-serif;">
          Contact Us
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
